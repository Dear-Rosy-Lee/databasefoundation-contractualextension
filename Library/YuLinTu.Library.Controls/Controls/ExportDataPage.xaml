<am:InfoPageBase x:Class="YuLinTu.Library.Controls.ExportDataPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:am="clr-namespace:YuLinTu.Library.Controls"
             xmlns:metro="clr-namespace:YuLinTu.Windows.Wpf.Metro;assembly=YuLinTu.Windows.Wpf.Metro"
             xmlns:cmps="clr-namespace:YuLinTu.Windows.Wpf.Metro.Components;assembly=YuLinTu.Windows.Wpf.Metro"                 
             Icon="pack://application:,,,/YuLinTu.Resources;component/Images/16/property.png"
             Height="250" Width="550" Header="导出数据">
    <Grid Background="{DynamicResource Metro_Window_Style_Background_Content}" >
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="55"/>
                <RowDefinition Height="34*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Content="地域名称:"  Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Left" HorizontalContentAlignment="Left"/>
            <TextBlock Name="zoneName" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center"/>

            <Label Content="导出路径:" Name="lbPath" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Left" HorizontalContentAlignment="Left"/>
            <DockPanel LastChildFill="True" Grid.Column="1" Grid.Row="1">
                <metro:MetroButton Height="30" 
                                   DockPanel.Dock="Right" 
                                   VerticalAlignment="Center" 
                                   Width="70" Margin="10,0,0,0" 
                                   Style="{StaticResource Metro_Button_Paneled_Style}"
                                   Click="FileBrowser_Click">
                    <cmps:ImageTextItem Image="pack://application:,,,/YuLinTu.Library.Resources;component/Resources/路径.png"
                                        Text="浏览">
                    </cmps:ImageTextItem>
                </metro:MetroButton>
                <cmps:MetroTextBox Name="txt_file" Height="30" SnapsToDevicePixels="True" DockPanel.Dock="Left" TextChanged="txt_file_TextChanged_1" BorderThickness="1" VerticalAlignment="Center"/>
            </DockPanel>
            <Label Content="导入类型:" Visibility="Collapsed" Grid.Row="2" VerticalAlignment="Center" 
                   HorizontalAlignment="Left" HorizontalContentAlignment="Left"  x:Name="iptctl"/>
            <cmps:MetroComboBox Grid.Column="1"
                    Visibility="{Binding  ElementName=iptctl,Path=Visibility}"
                    Name="cbtype"
                    Grid.Row="2"
                    VerticalAlignment="Center"
                    Height="30"
                    Padding="5,0,0,0">
                <!--<ComboBoxItem IsSelected="True" Tag="IgnorePart">覆盖属性保留图形数据</ComboBoxItem>
                <ComboBoxItem Tag="Ignore">覆盖全部数据</ComboBoxItem>
                <ComboBoxItem Tag="Over">只覆盖承包方数据</ComboBoxItem>
                <ComboBoxItem Tag="Over">覆盖原有数据</ComboBoxItem>-->
            </cmps:MetroComboBox>
            <!--<Label Content="导出路径:" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Left" HorizontalContentAlignment="Left"/>
            <TextBlock Name="tbpath" TextWrapping="Wrap" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>-->
        </Grid>
        <Border SnapsToDevicePixels="True" Margin="10,0,10,0" Grid.Row="1" BorderBrush="LightGray" BorderThickness="0,1,0,0">
            <DockPanel  Margin="0,5,0,5"
                           LastChildFill="False"
                           Visibility="{Binding IsBusy, Converter={StaticResource NotBoolToVisibilityHiddenConverter}}">
                <metro:MetroButton DockPanel.Dock="Right"
                                   Margin="5,0,0,0"
                                   Padding="5" Height="30"
                                   IsEnabled="{Binding CanClose}"
                                   Style="{StaticResource Metro_Button_Paneled_Style}"
                                   Command="{x:Static metro:MetroCommands.CloseTabMessageBoxCommand}">
                    <StackPanel Orientation="Horizontal">
                        <Image RenderOptions.BitmapScalingMode="NearestNeighbor"
                                   Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/application--minus.png"></Image>
                        <TextBlock Margin="3,0,0,0"
                                       VerticalAlignment="Center"
                                       Text="取消"></TextBlock>
                    </StackPanel>
                </metro:MetroButton>
                <metro:MetroButton DockPanel.Dock="Right" 
                                   Name="btnExcuteImport"
                                   Padding="5" IsEnabled="{Binding CanClose}"
                                   Height="30"   
                                   Click="btnExcuteImport_Click"
                                   Style="{StaticResource Metro_Button_Paneled_Style}">
                    <StackPanel Orientation="Horizontal">
                        <Image RenderOptions.BitmapScalingMode="NearestNeighbor" Stretch="None"
                                   Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/application--pencil.png"></Image>
                        <TextBlock Margin="3,0,0,0" ToolTip="开始导出数据"
                                       VerticalAlignment="Center" x:Name="btnCommit"
                                       Text="导出"/>
                    </StackPanel>
                </metro:MetroButton>
                <cmps:LoadingIcon DockPanel.Dock="Right"
                              Width="16"
                              Height="16"
                              HorizontalAlignment="Right"
                              VerticalAlignment="Center"
                              Margin="0,0,5,0"
                              Visibility="{Binding Path=IsConfirming, Converter={StaticResource BoolToVisibilityHiddenConverter}}"
                              RenderOptions.BitmapScalingMode="NearestNeighbor"></cmps:LoadingIcon>
            </DockPanel>
        </Border>
    </Grid>
</am:InfoPageBase>
