<am:InfoPageBase x:Class="YuLinTu.Library.Controls.ConstructionLandCoilPage"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:wpftoolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
                 xmlns:metro="clr-namespace:YuLinTu.Windows.Wpf.Metro;assembly=YuLinTu.Windows.Wpf.Metro"
                 xmlns:cmps="clr-namespace:YuLinTu.Windows.Wpf.Metro.Components;assembly=YuLinTu.Windows.Wpf.Metro"
                 xmlns:am="clr-namespace:YuLinTu.Library.Controls"
                 Icon="pack://application:,,,/YuLinTu.Resources;component/Images/16/property.png"
                 Header="承包地块界址线信息"
                 MinHeight="100">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.Resources>
            <Style x:Key="LableStyle" TargetType="Label">
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
            </Style>
        </Grid.Resources>
        <Grid>
            <Grid Margin="10,10,10,5" Name="dotInfoGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="130"/>
                    <ColumnDefinition Width="185"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="185"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <cmps:ImageTextItem Grid.Row="0" Grid.Column="0" Margin="5,0,0,0" Text="界线性质:" IsRequired="True" 
                                VerticalAlignment="Center"/>
                <cmps:MetroComboBox Name="cbCoilProperty" Grid.Row="0" Grid.Column="1" Height="30" Grid.ColumnSpan="1"
                                    Padding="7,0,0,0" VerticalAlignment="Center" TabIndex="1"/>

                <cmps:ImageTextItem Grid.Row="0" Grid.Column="2" Margin="5,0,0,0" Text="界址线类别:" IsRequired="True" 
                                VerticalAlignment="Center" HorizontalAlignment="Right"/>
                <cmps:MetroComboBox Name="cbCoilType" Grid.Row="0" Grid.Column="3" Height="30" Grid.ColumnSpan="1"
                                    Padding="7,0,0,0" VerticalAlignment="Center" TabIndex="2"/>

                <cmps:ImageTextItem Grid.Row="1" Grid.Column="0" Margin="5,0,0,0" Text="界址线位置:" IsRequired="True" 
                                VerticalAlignment="Center"/>
                <cmps:MetroComboBox Name="cbCoilPosition" Grid.Row="1" Grid.Column="1" Height="30" Grid.ColumnSpan="1"
                                    Padding="7,0,0,0" VerticalAlignment="Center" TabIndex="3"/>

                <Label Content="界址线说明:" Grid.Row="1" Grid.Column="2" Style="{StaticResource LableStyle}" HorizontalAlignment="Right"/>
                <cmps:MetroTextBox Name="txtCoilDescription" Grid.Row="1" Grid.Column="3" Height="30"  Text="{Binding CurrentCoil.Description,Mode=TwoWay}"
                                   VerticalAlignment="Center" TabIndex="4" MaxLength="300"/>

                <Label Content="毗邻地物承包方:" Grid.Row="2" Grid.Column="0" Style="{StaticResource LableStyle}" HorizontalAlignment="Left"/>
                <cmps:MetroTextBox Name="txtCoilNeighbor" Grid.Row="2" Grid.Column="1" Height="30" Text="{Binding CurrentCoil.NeighborPerson,Mode=TwoWay}"
                                   VerticalAlignment="Center" TabIndex="5" MaxLength="100"/>

                <Label Content="毗邻地物指界人:" Grid.Row="2" Grid.Column="2" Style="{StaticResource LableStyle}" HorizontalAlignment="Right"/>
                <cmps:MetroTextBox Name="txtCoilPrefer" Grid.Row="2" Grid.Column="3" Height="30" Text="{Binding CurrentCoil.NeighborFefer,Mode=TwoWay}"
                                   VerticalAlignment="Center" TabIndex="6" MaxLength="100"/>

                <Label Content="权属界线协议书编号:" Grid.Row="3" Grid.Column="0" Style="{StaticResource LableStyle}" HorizontalAlignment="Left"/>
                <cmps:MetroTextBox Name="txtCoilProtocolNumber" Grid.Row="3" Grid.Column="1" Height="30" Text="{Binding CurrentCoil.AgreementNumber,Mode=TwoWay}"
                                   VerticalAlignment="Center" TabIndex="7" MaxLength="30"/>

                <Label Content="权属界线协议书:" Grid.Row="3" Grid.Column="2" Style="{StaticResource LableStyle}" HorizontalAlignment="Right"/>
                <cmps:MetroTextBox Name="txtCoilProtocolBook" Grid.Row="3" Grid.Column="3" Height="30" Text="{Binding CurrentCoil.AgreementBook,Mode=TwoWay}"
                                   VerticalAlignment="Center" TabIndex="8" MaxLength="100"/>

                <Label Content="权属争议原由书编号:" Grid.Row="4" Grid.Column="0" Style="{StaticResource LableStyle}" HorizontalAlignment="Left"/>
                <cmps:MetroTextBox Name="txtCoilDisputeNumber" Grid.Row="4" Grid.Column="1" Height="30" Text="{Binding CurrentCoil.ControversyNumber,Mode=TwoWay}"
                                   VerticalAlignment="Center" TabIndex="9" MaxLength="30"/>

                <Label Content="权属争议原由书:" Grid.Row="4" Grid.Column="2" Style="{StaticResource LableStyle}" HorizontalAlignment="Right"/>
                <cmps:MetroTextBox Name="txtCoilDisputeBook" Grid.Row="4" Grid.Column="3" Height="30" Text="{Binding CurrentCoil.ControversyBook,Mode=TwoWay}"
                                   VerticalAlignment="Center" TabIndex="10" MaxLength="100"/>

                <Label Content="备注:" Grid.Row="5" Grid.Column="0" Style="{StaticResource LableStyle}" VerticalAlignment="Top"/>
                <cmps:MetroTextBox Height="30" TabIndex="11" Name="txtCoilComment" BorderThickness="1,1,1,1" 
                                   Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="3" MaxLength="500"
                                   InputMethod.IsInputMethodEnabled="True" VerticalAlignment="Center" 
                                   Margin="0,0,0,0" IsEnabled="True" VerticalContentAlignment="Top"
                                   Text="{Binding CurrentCoil.Comment,Mode=TwoWay}"/>
            </Grid>
        </Grid>
        <Border BorderThickness="0,1,0,0" Grid.Row="1" BorderBrush="LightGray" Margin="10,0,10,0" SnapsToDevicePixels="True">
            <DockPanel HorizontalAlignment="Stretch" LastChildFill="False" VerticalAlignment="Bottom" Margin="0,5,0,5" DockPanel.Dock="Bottom">
                <metro:MetroButton Height="30" DockPanel.Dock="Right"
                               Padding="10,0"
                               IsEnabled="{Binding CanClose}"
                               Command="{x:Static metro:MetroCommands.CloseTabMessageBoxCommand}"
                               Style="{StaticResource Metro_Button_Paneled_Style}" TabIndex="14">
                    <StackPanel Orientation="Horizontal">
                        <cmps:ImageTextItem Image="pack://application:,,,/YuLinTu.Resources;component/Images/16/application--minus.png" Text="取消">
                        </cmps:ImageTextItem>
                    </StackPanel>
                </metro:MetroButton>
                <metro:MetroButton DockPanel.Dock="Right" Margin="0,0,5,0"
                                   Padding="10,0"
                                   Height="30"
                                   Style="{StaticResource Metro_Button_Paneled_Style}"
                                   x:Name="mbtnLandOK"
                                   Click="mbtnLandOK_Click"
                                   IsEnabled="{Binding CanClose}">
                    <cmps:ImageTextItem Image="pack://application:,,,/YuLinTu.Resources;component/Images/16/tick.png" Text="确定">
                    </cmps:ImageTextItem>
                </metro:MetroButton>
                <cmps:LoadingIcon DockPanel.Dock="Right"
                              Width="16"
                              Height="16"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Margin="0,0,5,0"
                              Visibility="{Binding Path=IsConfirming, Converter={StaticResource BoolToVisibilityHiddenConverter}}"
                              RenderOptions.BitmapScalingMode="NearestNeighbor"></cmps:LoadingIcon>
            </DockPanel>
        </Border>
    </Grid>
</am:InfoPageBase>