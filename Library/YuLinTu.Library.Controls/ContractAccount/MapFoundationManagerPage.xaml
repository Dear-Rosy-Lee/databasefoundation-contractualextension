<am:InfoPageBase x:Class="YuLinTu.Library.Controls.MapFoundationManagerPage"
                            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                            xmlns:wpftoolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
                            xmlns:metro="clr-namespace:YuLinTu.Windows.Wpf.Metro;assembly=YuLinTu.Windows.Wpf.Metro"
                            xmlns:cmps="clr-namespace:YuLinTu.Windows.Wpf.Metro.Components;assembly=YuLinTu.Windows.Wpf.Metro"
                            xmlns:am="clr-namespace:YuLinTu.Library.Controls"
                            xmlns:tgis="clr-namespace:YuLinTu.tGIS.Client;assembly=YuLinTu.tGIS.Client"
                            Icon="pack://application:,,,/YuLinTu.Resources;component/Images/16/property.png"
                            Header="地图管理界面"
                            Height="500" Width="880">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <tgis:LayerControl Grid.Column="0" Name="layerControl" Width="200" Map="{Binding Path=MapControl}" Visibility="Collapsed"></tgis:LayerControl>
        <Border BorderThickness="1" Grid.Row="0" Grid.Column="1" BorderBrush="LightGray" Margin="10,0,10,0" SnapsToDevicePixels="True">
            <cmps:MetroTreeGrid Name="pointView"
                                ItemAutoExpand="True"
                                BorderThickness="0"
                                cmps:DataGridAttacher.ColumnHeaderFontWeight="Bold"
                                x:FieldModifier="public"
                                SelectionChanged="pointView_SelectionChanged"
                                MouseDoubleClick="pointView_MouseDoubleClick"
                                SelectedIndex="0">
                <cmps:MetroTreeGrid.Columns>
                    <DataGridTemplateColumn Header="点号"
                                            Width="55">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <DockPanel>
                                    <TextBlock Text="{Binding Object.OrderID}"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Center"/>
                                </DockPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="X坐标"
                                            Width="120"
                                            >
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <DockPanel>
                                    <TextBlock Text="{Binding Object.XCoordinate}"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Left"/>
                                </DockPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="Y坐标"
                                            Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <DockPanel>
                                    <TextBlock Text="{Binding Object.YCoordinate}"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Left"/>
                                </DockPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </cmps:MetroTreeGrid.Columns>
            </cmps:MetroTreeGrid>
        </Border>
        <tgis:MapControl Grid.Column="2" Name="mapControl"></tgis:MapControl>
        <Border BorderThickness="0,1,0,0" Grid.Row="1" Grid.Column="2" BorderBrush="LightGray" Margin="10,0,10,0" SnapsToDevicePixels="True">
            <DockPanel HorizontalAlignment="Stretch" LastChildFill="False" VerticalAlignment="Bottom" Margin="0,5,0,5" DockPanel.Dock="Bottom">
                <metro:MetroButton  DockPanel.Dock="Right" MinWidth="80"
                               Padding="5"  IsEnabled="{Binding CanClose}"
                               Command="{x:Static metro:MetroCommands.CloseTabMessageBoxCommand}"
                               Margin="5,5,5,5"  Style="{StaticResource Metro_Button_Paneled_Style}">
                    <StackPanel Orientation="Horizontal">
                        <Image RenderOptions.BitmapScalingMode="HighQuality" Stretch="None"
                               Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/application--minus.png"></Image>
                        <TextBlock  Margin="3,0,0,0" VerticalAlignment="Center" Text="关闭"/>
                    </StackPanel>
                </metro:MetroButton>
                <metro:MetroButton  DockPanel.Dock="Right" MinWidth="80"
                               Padding="5" x:Name="btnConfirm"
                               Click="btnConfirm_Click"
                               Margin="5,5,0,5"  Style="{DynamicResource Metro_Button_Paneled_Style}">
                    <StackPanel Orientation="Horizontal">
                        <Image RenderOptions.BitmapScalingMode="NearestNeighbor"
                    Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/application--pencil.png"></Image>
                        <TextBlock Margin="3,0,0,0"
                           VerticalAlignment="Center"
                         Text="确定"></TextBlock>
                    </StackPanel>
                </metro:MetroButton>
            </DockPanel>
        </Border>
    </Grid>
</am:InfoPageBase>
