<cmps:TabMessageBox
    x:Class="YuLinTu.Library.Controls.DataCheckPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cmps="clr-namespace:YuLinTu.Windows.Wpf.Metro.Components;assembly=YuLinTu.Windows.Wpf.Metro"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:YuLinTu.Library.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:metro="clr-namespace:YuLinTu.Windows.Wpf.Metro;assembly=YuLinTu.Windows.Wpf.Metro"
    xmlns:wpftoolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
    Width="900"
    Height="600"
    MaxWidth="1150"
    MaxHeight="640"
    CloseButtonVisibility="Collapsed"
    Icon="pack://application:,,,/YuLinTu.Resources;component/Images/16/property.png"
    mc:Ignorable="d">


    <cmps:TabMessageBox.Resources>
        <!--  选中项 & 悬停时的视觉效果  -->
        <Style TargetType="ListBoxItem">
            <!--  设置字体为微软雅黑  -->
            <Setter Property="FontFamily" Value="Microsoft YaHei" />
            <!--  可选，调整字体大小  -->
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
            <Style.Triggers>
                <!--  选中项高亮  -->
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#007ACC" />
                    <Setter Property="Foreground" Value="Black" />
                    <Setter Property="FontWeight" Value="Bold" />
                </Trigger>
                <!--  悬停变色  -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="Black" />
                </Trigger>
            </Style.Triggers>

        </Style>

    </cmps:TabMessageBox.Resources>



    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.05*" />
            <RowDefinition Height="0.85*" />
            <RowDefinition Height="0.1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <!--  导航栏  -->
            <ColumnDefinition Width="*" />
            <!--  检查项区域  -->
        </Grid.ColumnDefinitions>
        <Border
            Grid.Row="0"
            Grid.Column="1"
            BorderBrush="#C0C0C0"
            BorderThickness="1">
            <StackPanel
                x:Name="RightPanel"
                Grid.Row="0"
                Grid.Column="1">
                <!--  全选、全不选 控件区域  -->
                <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
                    <Label
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="460,0,10,0"
                        Content="配置检查项是否全选:" />
                    <CheckBox
                        x:Name="SelectAllCheckBox"
                        Margin="0,0,15,0"
                        Checked="SelectAllCheckBox_Checked"
                        Content="全选"
                        Unchecked="SelectAllCheckBox_Unchecked" />
                    <CheckBox
                        x:Name="SelectNoneCheckBox"
                        Checked="SelectNoneCheckBox_Checked"
                        Content="全不选"
                        Unchecked="SelectNoneCheckBox_Unchecked" />
                </StackPanel>
            </StackPanel>
        </Border>

        <StackPanel
            Grid.Row="1"
            Grid.Column="0"
            Margin="0,-29,0,0"
            Background="#E0E0E0">

            <ListBox
                Name="NavListBox"
                Padding="-6,0,-6,0"
                Background="#E0E0E0"
                BorderThickness="0"
                SelectionChanged="NavListBox_SelectionChanged" />
        </StackPanel>

        <ScrollViewer
            Grid.Row="1"
            Grid.Column="1"
            Margin="10"
            VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="CheckItemPanel">
                <TextBlock
                    Margin="0,0,0,10"
                    FontFamily="Microsoft YaHei"
                    FontSize="16"
                    FontWeight="Bold"
                    Text="检查项列表" />

                <ItemsControl ItemsSource="{Binding CurrentMandatoryFields}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="5" Orientation="Horizontal">
                                <!--  复选框  -->
                                <CheckBox
                                    Margin="5"
                                    VerticalAlignment="Center"
                                    Content="{Binding Key}"
                                    IsChecked="{Binding Value, Mode=TwoWay}" />

                                <!--  标题  -->
                                <Label
                                    Margin="5,0"
                                    VerticalAlignment="Center"
                                    Content="{Binding Title}"
                                    FontFamily="Microsoft YaHei"
                                    FontSize="14"
                                    FontWeight="Bold" />

                                <!--  描述  -->
                                <TextBlock
                                    Margin="5,0"
                                    VerticalAlignment="Center"
                                    FontFamily="Microsoft YaHei"
                                    FontSize="12"
                                    Foreground="Gray"
                                    Text="{Binding Description}" />
                            </StackPanel>
                        </DataTemplate>

                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
        <Border
            Grid.Row="2"
            Grid.ColumnSpan="2"
            BorderBrush="#C0C0C0"
            BorderThickness="1">
            <StackPanel
                Grid.Row="2"
                Grid.ColumnSpan="2"
                Margin="10"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Orientation="Horizontal">
                <metro:MetroButton
                    x:Name="btnSave"
                    Height="30"
                    MinWidth="75"
                    Margin="10,0,0,0"
                    BorderBrush="#C0C0C0"
                    BorderThickness="1"
                    Click="btnConfirm_Click"
                    Command="{x:Static metro:MetroCommands.ConfirmTabMessageBoxCommand}"
                    DockPanel.Dock="Right">
                    <StackPanel Orientation="Horizontal">
                        <Image
                            VerticalAlignment="Center"
                            RenderOptions.BitmapScalingMode="NearestNeighbor"
                            SnapsToDevicePixels="True"
                            Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/tick.png"
                            Stretch="None" />
                        <TextBlock
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            Text="确定" />
                    </StackPanel>
                </metro:MetroButton>
                <metro:MetroButton
                    x:Name="canc"
                    Height="30"
                    MinWidth="75"
                    Margin="10,0,5,0"
                    BorderBrush="#C0C0C0"
                    BorderThickness="1"
                    Click="btnCancel_Click"
                    Command="{x:Static metro:MetroCommands.CloseTabMessageBoxCommand}"
                    DockPanel.Dock="Right">
                    <StackPanel Orientation="Horizontal">
                        <Image
                            RenderOptions.BitmapScalingMode="NearestNeighbor"
                            SnapsToDevicePixels="True"
                            Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/application--minus.png"
                            Stretch="None" />
                        <TextBlock
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            Text="取消" />
                    </StackPanel>
                </metro:MetroButton>
            </StackPanel>
        </Border>
    </Grid>
</cmps:TabMessageBox>
