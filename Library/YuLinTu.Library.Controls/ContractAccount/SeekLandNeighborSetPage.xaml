<am:InfoPageBase x:Class="YuLinTu.Library.Controls.SeekLandNeighborSetPage"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:wpftoolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
                 xmlns:metro="clr-namespace:YuLinTu.Windows.Wpf.Metro;assembly=YuLinTu.Windows.Wpf.Metro"
                 xmlns:cmps="clr-namespace:YuLinTu.Windows.Wpf.Metro.Components;assembly=YuLinTu.Windows.Wpf.Metro"
                 xmlns:am="clr-namespace:YuLinTu.Library.Controls"
                 Height="auto"
                 Width="450"
                 Header="利用宗地空间关系自动查找四至">
    <StackPanel>
        <Grid>
            <Grid.Resources>
                <Style x:Key="LableStyle"
                       TargetType="Label">
                    <Setter Property="VerticalContentAlignment"
                            Value="Center" />
                    <Setter Property="VerticalAlignment"
                            Value="Center" />
                    <Setter Property="HorizontalContentAlignment"
                            Value="Left" />
                    <Setter Property="HorizontalAlignment"
                            Value="Left" />
                </Style>
            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid Margin="8,4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="Auto" />

                </Grid.RowDefinitions>
                <CheckBox Content="单方向单名称"
                          x:Name="chkSimplePositionQuery"
                          Grid.Row="0"
                          Grid.Column="0"
                          Margin="5,0,0,0"
                          VerticalAlignment="Center"
                          IsChecked="{Binding SimplePositionQuery, Mode=TwoWay}" 
                          Click="chkSimplePositionQuery_Checked"                        
                         
                          />

                <StackPanel VerticalAlignment="Center" Orientation="Horizontal"   Grid.Row="0" Grid.Column="1">

                    <CheckBox Content="某方向为空时填充："
                          x:Name="chkUseGroupName" 
                          Margin="5,0,0,0"
                          VerticalAlignment="Center"
                          ToolTip="不填写内容时，则默认使用村民小组名称填充"
                          IsChecked="{Binding UseGroupName, Mode=TwoWay}" />
                    <TextBox Name="txtUseGroupName"  Text="{Binding UseGroupNameContext, Mode=TwoWay}"   ToolTip="不填写内容时，则默认使用村民小组名称填充" Height="22" Width="95" VerticalAlignment="Center" TextWrapping="Wrap"/>

                </StackPanel>

                <CheckBox Content="查找地块名称"
                          x:Name="chkSearchLandName"
                          IsChecked="{Binding SearchLandName, Mode=TwoWay}"
                          Margin="5,0,0,0"
                          Grid.Row="1"
                          Grid.Column="0"
                          VerticalAlignment="Center" />
                <CheckBox Content="识别地块类别"
                          x:Name="chkLandIdentify"
                          IsChecked="{Binding LandIdentify, Mode=TwoWay}"
                          Margin="5,0,0,0"
                          Grid.Row="1"
                          Grid.Column="1"
                          VerticalAlignment="Center" />
                <CheckBox Content="识别土地利用类型"
                          x:Name="chkLandType"
                          IsChecked="{Binding LandType, Mode=TwoWay}"
                          Margin="5,0,0,0"
                          Grid.Row="2"
                          Grid.Column="0"
                          VerticalAlignment="Center" />
                <CheckBox Content="只填充空白四至"
                          x:Name="chkFillEmptyNeighbor"
                          IsChecked="{Binding FillEmptyNeighbor, Mode=TwoWay}"
                          Margin="5,0,0,0"
                          Grid.Row="2"
                          Grid.Column="1"
                          VerticalAlignment="Center" />
                <CheckBox Content="查询线状\面状地物"
                          x:Name="chkQueryXMzdw"
                          IsChecked="{Binding IsQueryXMzdw, Mode=TwoWay}"
                          Margin="5,0,0,0"
                          Grid.Row="3"
                          Grid.Column="0"
                          VerticalAlignment="Center"
                          Click="chkQueryXMzdw_Checked"
                          />

                <CheckBox Content="同至去重复地物名称"
                          x:Name="chkDeleteSameDWMC"
                          IsChecked="{Binding IsDeleteSameDWMC, Mode=TwoWay}"
                          Margin="5,0,0,0"
                          Grid.Row="3"
                          Grid.Column="1"
                          VerticalAlignment="Center" />

                <Label Content="设置地物查找规则: "
                          Grid.Row="4"
                          Grid.Column="0"
                          Style="{StaticResource LableStyle}" />
                <cmps:MetroComboBox x:Name="cmbSearchDeteilRule"
                                             Height="30"                                          
                                         Grid.Row="4"
                                         Grid.Column="1">
                </cmps:MetroComboBox>


                <Label Content="设置宗地查找边框位置(米): "
                          Grid.Row="5"
                          Grid.Column="0"
                          Style="{StaticResource LableStyle}" />
                <wpftoolkit:DoubleUpDown x:Name="txtBufferDistance"
                                             Height="30"
                                             Minimum="0.0"
                                         Grid.Row="5"
                                         Grid.Column="1" />
                <Label Content="查询阈值: "
                          Grid.Row="6"
                          Grid.Column="0"
                          Style="{StaticResource LableStyle}" />
                <wpftoolkit:DoubleUpDown x:Name="txtQueryThreshold"
                                             Height="30"
                                             Minimum="0.0"
                                             Maximum="0.9"
                                         Grid.Row="6"
                                         Grid.Column="1" />
            </Grid>
            <Border BorderThickness="0,1,0,0"
                    Grid.Row="1"
                    BorderBrush="LightGray"
                    Margin="10,0,10,0"
                    SnapsToDevicePixels="True">
                <DockPanel HorizontalAlignment="Stretch"
                           LastChildFill="False"
                           VerticalAlignment="Bottom"
                           Margin="0,5,0,5"
                           DockPanel.Dock="Bottom">
                    <metro:MetroButton Height="30"
                                       DockPanel.Dock="Right"
                                       Padding="10,0"
                                       IsEnabled="{Binding CanClose}"
                                       Command="{x:Static metro:MetroCommands.CloseTabMessageBoxCommand}"
                                       Style="{StaticResource Metro_Button_Paneled_Style}"
                                       TabIndex="14">
                        <StackPanel Orientation="Horizontal">
                            <cmps:ImageTextItem Image="pack://application:,,,/YuLinTu.Resources;component/Images/16/application--minus.png"
                                                Text="取消"></cmps:ImageTextItem>
                        </StackPanel>
                    </metro:MetroButton>
                    <metro:MetroButton DockPanel.Dock="Right"
                                       Margin="0,0,5,0"
                                       Padding="10,0"
                                       Height="30"
                                       Style="{StaticResource Metro_Button_Paneled_Style}"
                                       x:Name="mbtnDateOK"
                                       Click="mbtnDateOK_Click"
                                       IsEnabled="{Binding CanClose}">
                        <cmps:ImageTextItem Image="pack://application:,,,/YuLinTu.Resources;component/Images/16/tick.png"
                                            Text="确定"></cmps:ImageTextItem>
                    </metro:MetroButton>
                    <cmps:LoadingIcon DockPanel.Dock="Right"
                                      Width="16"
                                      Height="16"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      Margin="0,0,5,0"
                                      Visibility="Hidden"
                                      RenderOptions.BitmapScalingMode="NearestNeighbor"></cmps:LoadingIcon>
                </DockPanel>
            </Border>
        </Grid>
    </StackPanel>
</am:InfoPageBase>
