<cmps:TabMessageBox
    x:Class="YuLinTu.Library.Controls.AdjustLandPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cmps="clr-namespace:YuLinTu.Windows.Wpf.Metro.Components;assembly=YuLinTu.Windows.Wpf.Metro"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:YuLinTu.Library.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:metro="clr-namespace:YuLinTu.Windows.Wpf.Metro;assembly=YuLinTu.Windows.Wpf.Metro"
    xmlns:wpftoolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
    Width="1200"
    Height="600"
    CloseButtonVisibility="Collapsed"
    Header="无户地块处理"
    Icon="pack://application:,,,/YuLinTu.Resources;component/Images/16/property.png"
    mc:Ignorable="d">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="35" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="750" />
            <ColumnDefinition Width="250" />
        </Grid.ColumnDefinitions>
        <!--  表头区域  -->
        <StackPanel Grid.Row="0">
            <Grid Grid.Row="0" Margin="15,10,10,0">
                <Grid.ColumnDefinitions>
                    <!--  勾选框  -->
                    <ColumnDefinition Width="20" />
                    <!--  全选  -->
                    <ColumnDefinition Width="50" />
                    <!--  地块编码  -->
                    <ColumnDefinition Width="180" />
                    <!--  地块名称  -->
                    <ColumnDefinition Width="200" />
                    <!--  地块类别  -->
                    <ColumnDefinition Width="120" />
                    <!--  合同面积  -->
                    <ColumnDefinition Width="0" />
                    <!--  实测面积  -->
                    <ColumnDefinition Width="100" />
                    <!--  承包方名称  -->
                    <ColumnDefinition Width="250" />
                </Grid.ColumnDefinitions>
                <CheckBox
                    Grid.Column="0"
                    Margin="0,0,0,5"
                    Checked="CheckBox_AllChecked"
                    Tag="{Binding}"
                    Unchecked="CheckBox_AllUnchecked" />
                <TextBlock
                    Grid.Column="1"
                    Margin="0,0,0,5"
                    FontWeight="Bold"
                    Text="全选" />
                <!--  表头文本  -->
                <TextBlock
                    Grid.Column="2"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Center"
                    FontWeight="Bold"
                    Text="地块编码(缩略吗)" />
                <TextBlock
                    Grid.Column="3"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Center"
                    FontWeight="Bold"
                    Text="地块名称" />
                <TextBlock
                    Grid.Column="4"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Center"
                    FontWeight="Bold"
                    Text="地块类别" />
                <TextBlock
                    Grid.Column="5"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Center"
                    FontWeight="Bold"
                    Text="合同面积" />
                <TextBlock
                    Grid.Column="6"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Center"
                    FontWeight="Bold"
                    Text="实测面积" />
                <TextBlock
                    Grid.Column="7"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Center"
                    FontWeight="Bold"
                    Text="承包方名称" />

            </Grid>
            <Separator
                Height="1"
                Margin="0,0,10,0"
                Background="LightGray" />
        </StackPanel>


        <!--  数据区域（带滚动条）  -->
        <ScrollViewer
            Grid.Row="1"
            Margin="15,5,0,0"
            VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="DataItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <!--  单个数据项的模板  -->
                        <Grid Margin="0,5,0,0">
                            <Grid.ColumnDefinitions>
                                <!--  全选  -->
                                <ColumnDefinition Width="80" />
                                <!--  地块编码  -->
                                <ColumnDefinition Width="180" />
                                <!--  地块名称  -->
                                <ColumnDefinition Width="180" />
                                <!--  地块类别  -->
                                <ColumnDefinition Width="117" />
                                <!--  合同面积  -->
                                <ColumnDefinition Width="0" />
                                <!--  实测面积  -->
                                <ColumnDefinition Width="100" />
                                <!--  承包方名称  -->
                                <ColumnDefinition Width="257" />

                            </Grid.ColumnDefinitions>

                            <!--  底部边框线  -->
                            <Border
                                Grid.ColumnSpan="7"
                                Margin="0,5,-100,0"
                                VerticalAlignment="Bottom"
                                BorderBrush="LightGray"
                                BorderThickness="0,0,0,1" />

                            <!--  复选框  -->
                            <CheckBox
                                Grid.Column="0"
                                Margin="5,0,0,5"
                                Checked="CheckBox_Checked"
                                IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                Tag="{Binding}"
                                Unchecked="CheckBox_Unchecked" />

                            <!--  数据字段  -->
                            <TextBlock
                                Grid.Column="1"
                                Margin="0,5,0,8"
                                HorizontalAlignment="Center"
                                Text="{Binding DKBM}" />
                            <TextBlock
                                Grid.Column="2"
                                Margin="10,5,0,0"
                                HorizontalAlignment="Center"
                                Text="{Binding DKMC}" />
                            <TextBlock
                                Grid.Column="3"
                                Margin="10,5,0,0"
                                HorizontalAlignment="Center"
                                Text="{Binding DKLB}" />
                            <TextBlock
                                Grid.Column="4"
                                Margin="0,5,0,0"
                                HorizontalAlignment="Center"
                                Text="{Binding HTMJ}" />
                            <TextBlock
                                Grid.Column="5"
                                Margin="10,5,0,0"
                                HorizontalAlignment="Center"
                                Text="{Binding SCMJ}" />
                            <TextBlock
                                Grid.Column="6"
                                Margin="40,5,0,0"
                                HorizontalAlignment="Center"
                                Text="{Binding CBFMC}" />
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>

                <!--  顶部边框线  -->
                <ItemsControl.Template>
                    <ControlTemplate TargetType="ItemsControl">
                        <Border BorderBrush="LightGray" BorderThickness="0,1,0,0">
                            <ItemsPresenter />
                        </Border>
                    </ControlTemplate>
                </ItemsControl.Template>
            </ItemsControl>
        </ScrollViewer>

        <!--  ===== 右侧区域（发包方选择） =====  -->
        <Grid
            Grid.Row="1"
            Grid.Column="1"
            Margin="0,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!--  标题  -->
                <RowDefinition Height="Auto" />
                <!--  ComboBox  -->
                <RowDefinition Height="*" />

                <!--  操作按钮  -->
            </Grid.RowDefinitions>

            <!--  所属发包方标题  -->
            <TextBlock
                Grid.Row="0"
                Margin="80,-25,0,0"
                FontWeight="Bold"
                Text="所属承包方" />
            <Separator
                Grid.Row="0"
                Height="1"
                Margin="0,-5,10,0"
                Background="LightGray" />

            <!--  ComboBox 容器（固定高度，避免影响布局）  -->
            <Border
                Grid.Row="1" Height="70"
                Margin="5,5,5,10">
                <StackPanel>
                    <Label Content="请选择所属承包方:" Margin="0,5"/>
                    <cmps:MetroComboBox Height="30"
                    x:Name="SenderComboBox"
                    VerticalAlignment="Center"
                    SelectionChanged="SenderComboBox_SelectionChanged"
                    DisplayMemberPath="Name"
                    Visibility="Collapsed" />
                </StackPanel>
            </Border>

            <!--  操作按钮（固定在底部）  -->

            <StackPanel
                Grid.Row="2"
                Margin="0,0,0,2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                Orientation="Horizontal">
                <metro:MetroButton
                    x:Name="btnConfirm"
                    Width="75"
                    Height="30"
                    Margin="45,0,10,0"
                    BorderBrush="#BEBEBE"
                    BorderThickness="1"
                    Click="ConfirmButton_Click"
                    Visibility="Collapsed">
                    <StackPanel Orientation="Horizontal">
                        <Image
                            VerticalAlignment="Center"
                            RenderOptions.BitmapScalingMode="NearestNeighbor"
                            SnapsToDevicePixels="True"
                            Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/tick.png"
                            Stretch="None" />
                        <TextBlock
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            Text="确认" />
                    </StackPanel>
                </metro:MetroButton>

                <metro:MetroButton
                    x:Name="btnCancel"
                    Width="75"
                    Height="30"
                    BorderBrush="#BEBEBE"
                    BorderThickness="1"
                    Click="celButton_Click"
                    Visibility="Collapsed">
                    <StackPanel Orientation="Horizontal">
                        <Image
                            RenderOptions.BitmapScalingMode="NearestNeighbor"
                            SnapsToDevicePixels="True"
                            Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/application--minus.png"
                            Stretch="None" />
                        <TextBlock
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            Text="取消" />
                    </StackPanel>
                </metro:MetroButton>
            </StackPanel>

        </Grid>


        <!--  按钮区域  -->
        <Border
            Grid.Row="2"
            Margin="0,0,-250,0"
            BorderBrush="#C0C0C0"
            BorderThickness="1">
            <StackPanel
                Grid.Row="2"
                Margin="0,7,0,10"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Orientation="Horizontal">
                <metro:MetroButton
                    x:Name="btnSave"
                    Height="30"
                    MinWidth="75"
                    Margin="10,0,0,0"
                    BorderBrush="#C0C0C0"
                    BorderThickness="1"
                    Click="SaveButton_Click"
                    Command="{x:Static metro:MetroCommands.ConfirmTabMessageBoxCommand}"
                    DockPanel.Dock="Right">
                    <StackPanel Orientation="Horizontal">
                        <Image
                            VerticalAlignment="Center"
                            RenderOptions.BitmapScalingMode="NearestNeighbor"
                            SnapsToDevicePixels="True"
                            Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/tick.png"
                            Stretch="None" />
                        <TextBlock
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            Text="保存" />
                    </StackPanel>
                </metro:MetroButton>
                <metro:MetroButton
                    x:Name="canc"
                    Height="30"
                    MinWidth="75"
                    Margin="10,0,5,0"
                    BorderBrush="#C0C0C0"
                    BorderThickness="1"
                    Click="CancelButton_Click"
                    Command="{x:Static metro:MetroCommands.CloseTabMessageBoxCommand}"
                    DockPanel.Dock="Right">
                    <StackPanel Orientation="Horizontal">
                        <Image
                            RenderOptions.BitmapScalingMode="NearestNeighbor"
                            SnapsToDevicePixels="True"
                            Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/application--minus.png"
                            Stretch="None" />
                        <TextBlock
                            Margin="5,0,0,0"
                            VerticalAlignment="Center"
                            Text="取消" />
                    </StackPanel>
                </metro:MetroButton>
            </StackPanel>
        </Border>
    </Grid>
</cmps:TabMessageBox>
