<am:InfoPageBase x:Class="YuLinTu.Library.Controls.ContractLandInitializePage"
                            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                            xmlns:wpftoolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
                            xmlns:metro="clr-namespace:YuLinTu.Windows.Wpf.Metro;assembly=YuLinTu.Windows.Wpf.Metro"
                            xmlns:cmps="clr-namespace:YuLinTu.Windows.Wpf.Metro.Components;assembly=YuLinTu.Windows.Wpf.Metro"
                             xmlns:am="clr-namespace:YuLinTu.Library.Controls"
                            Icon="pack://application:,,,/YuLinTu.Resources;component/Images/16/property.png"
                            Header="初始化地块基本属性信息"
                            Height="480" Width="610">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.Resources>
            <Style x:Key="LableStyle" TargetType="Label">
                <Setter Property="Height" Value="25"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
            </Style>
        </Grid.Resources>
        <ScrollViewer  HorizontalScrollBarVisibility="Hidden" PanningMode="VerticalOnly" VerticalScrollBarVisibility="Auto">
            <Grid>
                <TabControl Name="tabControl" Visibility="{Binding Path=IsBusy, Converter={StaticResource NotBoolToVisibilityConverter}}" Margin="10,10,10,5">
                    <TabItem Header="基本信息">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="42"/>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="42"/>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="42"/>
                                <RowDefinition Height="35"/>
                                <RowDefinition Height="42"/>
                                <RowDefinition Height="35"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="7"/>
                                <ColumnDefinition Width="170"/>
                                <ColumnDefinition Width="120"/>
                                <ColumnDefinition Width="170"/>
                            </Grid.ColumnDefinitions>


                            <Label x:Name="lbZoneName" Content="地域名称:" Grid.Row="0" Grid.Column="0" Style="{StaticResource LableStyle}" Height="26" Margin="0,2"/>
                            <cmps:MetroTextBox x:Name="txtZoneName" Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="3" Height="30" VerticalContentAlignment="Center" IsReadOnly="True"/>

                            <CheckBox x:Name="cbLandName" Content="土地利用类型:" Unchecked="ToggleButton_OnUnchecked" Checked="ToggleButton_OnChecked" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="6,12,0,12" Grid.ColumnSpan="2"/>
                            <cmps:MetroComboBox x:Name="cmbLandName" Grid.Row="1" Grid.Column="2" 
                                                IsEnabled="{Binding ElementName=cbLandName,Path=IsChecked}" Height="30" Padding="7,0,0,0"
                                                SelectionChanged="cmbLandName_SelectionChanged" Margin="0,5"/>
                            <Label  Content="二级地类:"
                                    Grid.Row="1"
                                    Grid.Column="3"
                                    VerticalAlignment="Center"
                                    Margin="10,7,0,7" />
                            <cmps:MetroComboBox x:Name="cmb_SecondLandType" Grid.Row="1" Grid.Column="4" 
                                                IsEnabled="{Binding ElementName=cbLandName,Path=IsChecked}" Height="30" Padding="7,0,0,0"
                                               Margin="0,5" SelectionChanged="cmb_SecondLandType_SelectionChanged" />

                            <CheckBox x:Name="cbLandLevel" Content="地力等级:" Grid.Row="2" Grid.Column="3" Unchecked="ToggleButton_OnUnchecked" Checked="ToggleButton_OnChecked" VerticalAlignment="Center" Margin="10,7,0,7"/>
                            <cmps:MetroComboBox x:Name="cmbLandLevel" Grid.Row="2" Grid.Column="4" 
                                                IsEnabled="{Binding ElementName=cbLandLevel,Path=IsChecked}" Height="30" Padding="7,0,0,0"
                                                SelectionChanged="cmbLandLevel_SelectionChanged"/>

                            <CheckBox x:Name="cbAwareArea" Content="确权面积等于:" Grid.Row="2" Unchecked="ToggleButton_OnUnchecked" Checked="ToggleButton_OnChecked" Grid.Column="0" VerticalAlignment="Center" Margin="6,7,0,7" Grid.ColumnSpan="2"/>
                            <cmps:MetroComboBox x:Name="cmbAwareArea" Grid.Row="2" Grid.Column="2" 
                                                IsEnabled="{Binding ElementName=cbAwareArea,Path=IsChecked}" Height="30" Padding="7,0,0,0"
                                                SelectionChanged="cmbAwareArea_SelectionChanged"/>

                            <CheckBox x:Name="cbLandPurpose" Content="土地用途:" Grid.Row="3" Grid.Column="3" Unchecked="ToggleButton_OnUnchecked" Checked="ToggleButton_OnChecked" VerticalAlignment="Center" Margin="10,12,0,12"/>
                            <cmps:MetroComboBox x:Name="cmbLandPurpose" Grid.Row="3" Grid.Column="4" 
                                                IsEnabled="{Binding ElementName=cbLandPurpose,Path=IsChecked}" Height="30" Padding="7,0,0,0"
                                                SelectionChanged="cmbLandPurpose_SelectionChanged" Margin="0,5"/>

                            <CheckBox x:Name="cbIsFarmer" Content="是否基本农田:" Unchecked="ToggleButton_OnUnchecked" Grid.Row="3" Grid.Column="0" Checked="ToggleButton_OnChecked" VerticalAlignment="Center" Margin="6,12,0,12" Grid.ColumnSpan="2"/>
                            <cmps:MetroComboBox x:Name="cmbIsFarmer"
                                                Grid.Row="3"
                                                Grid.Column="2"
                                                IsEnabled="{Binding ElementName=cbIsFarmer,Path=IsChecked}"
                                                Height="30"
                                                SelectionChanged="cmbIsFarmer_SelectionChanged"
                                                Padding="7,0,0,0"
                                                Margin="0,5">
                                <ComboBoxItem Selector.IsSelected="True">是</ComboBoxItem>
                                <ComboBoxItem>否</ComboBoxItem>
                                <ComboBoxItem Height="30"></ComboBoxItem>
                            </cmps:MetroComboBox>


                            <CheckBox x:Name="cbLandNumber" Content="地块编码:" Unchecked="ToggleButton_OnUnchecked" Checked="ToggleButton_OnChecked" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="6,7,0,7" Click="cbLandNumber_Checked" Grid.ColumnSpan="2" />

                            <DockPanel Grid.Row="4" Grid.Column="2" Grid.ColumnSpan="3" Height="30" LastChildFill="True" 
                                       IsEnabled="{Binding ElementName=cbLandNumber,Path=IsChecked }">

                                <RadioButton x:Name="rbNew" Click="rbNew_Click"
                                             Content="全部重新生成"
                                             ToolTip="统一生成地块编码"
                                             HorizontalAlignment="Left" VerticalAlignment="Center"  GroupName="gn_land" Margin="0,0,70,0"  />
                                <RadioButton x:Name="rbNewPart" Content="重编合并部分"  IsChecked="True"
                                             ToolTip="将前14位与当前地域不匹配的地块进行重新编码，不填充缺失部分"
                                             HorizontalAlignment="Left"
                                             GroupName="gn_land" Click="rbNew_Click"/>
                                <cmps:MetroTextBox Margin="35,0,0,0" x:Name="txtInitiallStartNum" IsEnabled="{Binding ElementName=rbNew,Path=IsChecked}" ToolTip="编码的起始编号" 
                                                   Width="150" VerticalAlignment="Center"></cmps:MetroTextBox>

                            </DockPanel>

                            <DockPanel  Grid.Row="5" Grid.Column="1"  Grid.ColumnSpan="4" Height="30" LastChildFill="True" IsEnabled="{Binding ElementName=cbLandNumber,Path=IsChecked }">
                                <CheckBox Content="地块编码从上往下从左往右排序"  x:Name="cbLandNumberByUpdown"  VerticalAlignment="Center" Margin="6,0,10,0"  />
                                <CheckBox x:Name="rbCombination" Content="发包方编码 + 调查编码" HorizontalAlignment="Left" Margin="10,0,0,0" Width="227" />
                            </DockPanel>

                            <CheckBox Content="地块备注:" Grid.Row="6" VerticalAlignment="Center" Name="cbLandComment" Margin="6,0,0,0" 
                                      Unchecked="ToggleButton_OnUnchecked" 
                                      Checked="ToggleButton_OnChecked"/>
                            <cmps:MetroTextBox Name="txtLandComment" Height="30"   IsEnabled="{Binding ElementName=cbLandComment,Path=IsChecked}" 
                                               Grid.Row="6" Grid.Column="2" Grid.ColumnSpan="3" VerticalAlignment="Center" Margin="0,0,0,0"/>


                            <CheckBox x:Name="cbInitializeNull" Content="只初始化空项" Grid.Row="7" Grid.Column="0"  Margin="6,0,0,0"  Unchecked="ToggleButton_OnUnchecked" 
                                      Checked="ToggleButton_OnChecked" 
                                      HorizontalAlignment="Left" VerticalAlignment="Center" />

                            <CheckBox x:Name="cbHandleContractLand"  Content="只处理承包地"  Unchecked="ToggleButton_OnUnchecked" 
                                      Checked="ToggleButton_OnChecked" 
                                      Grid.Row="7" Grid.Column="2"  VerticalAlignment="Center"  />
                            <CheckBox x:Name="cbQSXZ"
                                      Checked="ToggleButton_OnChecked"
                                      Unchecked="ToggleButton_OnUnchecked"
                                      Content="所有权性质:"
                                      Grid.Row="7"
                                      Grid.Column="3"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Center"
                                      Margin="10,0,0,0" />
                            <cmps:MetroComboBox x:Name="cmbQSXZ"
                                                Grid.Row="7"
                                                Grid.Column="5"
                                                IsEnabled="{Binding ElementName=cbQSXZ,Path=IsChecked}"
                                                Height="30"
                                                Padding="7,0,0,0"
                                                SelectionChanged="cmbQSXZ_SelectionChanged"
                                                Margin="0,0,0,0" />

                            <CheckBox x:Name="cbInitalContractLandNeighborInfo"  Content="获取四至 ( 前的内容" ToolTip="获取四至括号前内容" Margin="6,0,0,0"  Unchecked="ToggleButton_OnUnchecked" 
                                      Checked="ToggleButton_OnChecked"  Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="3"  VerticalAlignment="Center"  />

                            <CheckBox x:Name="cbInitializeLandNeighborInfo"  Content="获取地块周边相邻地块"  Margin="10,0,0,0"  Unchecked="ToggleButton_OnUnchecked" 
                                      Checked="ToggleButton_OnChecked"  Grid.Row="8" Grid.Column="3" Grid.ColumnSpan="3"  VerticalAlignment="Center"  />

                        </Grid>
                    </TabItem>
                    <TabItem Header="调查信息">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="115"/>
                                <ColumnDefinition Width="180"/>
                                <ColumnDefinition Width="105"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="180"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="45"/>
                                <RowDefinition Height="45"/>
                                <RowDefinition Height="45"/>
                                <RowDefinition Height="45"/>
                                <RowDefinition Height="30"/>
                            </Grid.RowDefinitions>

                            <!--<CheckBox x:Name="cbMapNumber" Checked="ToggleButton_OnChecked" Unchecked="ToggleButton_OnUnchecked" Content="图幅编号:" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="6,0,0,0"/>
                            <cmps:MetroTextBox x:Name="txtMapNumber" Height="30" Grid.Row="0" Grid.Column="1"  VerticalContentAlignment="Center"
                                               IsEnabled="{Binding ElementName=cbMapNumber,Path=IsChecked}" Grid.ColumnSpan="4" />-->



                            <CheckBox x:Name="cbSurveyPerson" Content="调查员:" Checked="ToggleButton_OnChecked" Unchecked="ToggleButton_OnUnchecked" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="6,0,0,0"/>
                            <cmps:MetroTextBox x:Name="txtSurveyPerson" Height="30" Grid.Row="0" Grid.Column="1" VerticalContentAlignment="Center"
                                                IsEnabled="{Binding ElementName=cbSurveyPerson,Path=IsChecked}"/>

                            <CheckBox x:Name="cbSurveyDate" Content="调查日期:" Checked="ToggleButton_OnChecked" Unchecked="ToggleButton_OnUnchecked" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.ColumnSpan="1" Margin="10,0,0,0"/>
                            <wpftoolkit:DateTimeUpDown Name="txtSurveyDate" Height="30"  Grid.Row="0" Grid.Column="4" VerticalAlignment="Center" Format="ShortDate"
                                                        IsEnabled="{Binding ElementName=cbSurveyDate,Path=IsChecked}"/>

                            <CheckBox x:Name="cbSurveyInfo" Content="调查记事:" Checked="ToggleButton_OnChecked" Unchecked="ToggleButton_OnUnchecked" VerticalAlignment="Center" Grid.Row="1" Margin="6,0,0,0"/>
                            <cmps:MetroTextBox Name="txtSurveyInfo" Height="30" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4" MaxLength="250" VerticalAlignment="Center"  AcceptsReturn="True" TextWrapping="Wrap" 
                                               IsEnabled="{Binding ElementName=cbSurveyInfo,Path=IsChecked}"/>

                            <CheckBox x:Name="cbCheckPerson" Content="审核员:" Checked="ToggleButton_OnChecked" Unchecked="ToggleButton_OnUnchecked" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="6,0,0,0"/>
                            <cmps:MetroTextBox x:Name="txtCheckPerson" Height="30" Grid.Row="2" Grid.Column="1" VerticalContentAlignment="Center"
                                                IsEnabled="{Binding ElementName=cbCheckPerson,Path=IsChecked}" Margin="0,5"/>

                            <CheckBox x:Name="cbCheckDate" Content="审核日期:" Checked="ToggleButton_OnChecked" Unchecked="ToggleButton_OnUnchecked" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.ColumnSpan="1" Margin="10,0,0,0"/>
                            <wpftoolkit:DateTimeUpDown Name="txtCheckDate" Height="30" Format="ShortDate" Grid.Row="2" Grid.Column="4" VerticalAlignment="Center"
                                                        IsEnabled="{Binding ElementName=cbCheckDate,Path=IsChecked}"/>

                            <CheckBox x:Name="cbCheckInfo" Content="审核意见:" Checked="ToggleButton_OnChecked" Unchecked="ToggleButton_OnUnchecked" VerticalAlignment="Center" Grid.Row="3" Margin="6,0,0,0"/>
                            <cmps:MetroTextBox Name="txtCheckInfo" Height="30"  AcceptsReturn="True" TextWrapping="Wrap" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="4" MaxLength="250" VerticalAlignment="Center"
                                                IsEnabled="{Binding ElementName=cbCheckInfo,Path=IsChecked}"/>

                            <CheckBox x:Name="cbReferPerson" Content="指界人:" Checked="ToggleButton_OnChecked" Unchecked="ToggleButton_OnUnchecked" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="6,0,0,0"/>
                            <cmps:MetroTextBox x:Name="txtReferPerson" Height="30" Grid.Row="4" Grid.Column="1"  VerticalContentAlignment="Center" 
                                               IsEnabled="{Binding ElementName=cbReferPerson,Path=IsChecked}"/>

                            <CheckBox Name="cbReferPersonExpand" Content="以地块当前承包方为指界人" Grid.Row="4" Grid.Column="2" Grid.ColumnSpan="3" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="15,0,0,0"
                                      IsEnabled="{Binding ElementName=cbReferPerson,Path=IsChecked}" Click="cbReferPersonExpand_Click_1" />

                        </Grid>
                    </TabItem>

                </TabControl>
            </Grid>
        </ScrollViewer>
        <Border BorderThickness="0,1,0,0" Grid.Row="1" BorderBrush="LightGray" Margin="10,0,10,0" SnapsToDevicePixels="True">
            <DockPanel HorizontalAlignment="Stretch" LastChildFill="True" VerticalAlignment="Bottom" Margin="0,5,0,5" DockPanel.Dock="Bottom">
                <metro:MetroButton Height="30" DockPanel.Dock="Right"
                               Padding="5" Margin="5,0,0,0"
                               Command="{x:Static metro:MetroCommands.CloseTabMessageBoxCommand}"
                               Style="{StaticResource Metro_Button_Paneled_Style}">
                    <StackPanel Orientation="Horizontal">
                        <Image RenderOptions.BitmapScalingMode="NearestNeighbor"
                    Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/application--minus.png"></Image>
                        <TextBlock Margin="3,0,0,0"
                           VerticalAlignment="Center"
                         Text="取消"></TextBlock>
                    </StackPanel>
                </metro:MetroButton>
                <metro:MetroButton DockPanel.Dock="Right"
                               Padding="5" x:Name="btnAdd"
                               Height="30" Click="btnAdd_Click"
                               Command="{Binding CofirmCommand}"
                               Style="{StaticResource Metro_Button_Paneled_Style}">
                    <StackPanel Orientation="Horizontal">
                        <Image RenderOptions.BitmapScalingMode="NearestNeighbor" Stretch="None"
                       Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/tick.png"></Image>
                        <TextBlock Margin="3,0,0,0"
                           VerticalAlignment="Center"
                           Text="确定"></TextBlock>
                    </StackPanel>
                </metro:MetroButton>
                <Label Name="lbInfo" DockPanel.Dock="Left" VerticalAlignment="Center"/>
            </DockPanel>
        </Border>
    </Grid>
</am:InfoPageBase>