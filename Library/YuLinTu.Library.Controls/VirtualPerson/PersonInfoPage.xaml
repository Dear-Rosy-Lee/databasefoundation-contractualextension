<am:InfoPageBase x:Class="YuLinTu.Library.Controls.PersonInfoPage"
                            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                            xmlns:wpftoolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
                            xmlns:metro="clr-namespace:YuLinTu.Windows.Wpf.Metro;assembly=YuLinTu.Windows.Wpf.Metro"
                            xmlns:cmps="clr-namespace:YuLinTu.Windows.Wpf.Metro.Components;assembly=YuLinTu.Windows.Wpf.Metro"
                            xmlns:am="clr-namespace:YuLinTu.Library.Controls"
                            Icon="pack://application:,,,/YuLinTu.Resources;component/Images/16/property.png"
                            Header="共有人信息"
                            MinHeight="150" MinWidth="550">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.Resources>
            <Style x:Key="LableStyle" TargetType="Label">
                <Setter Property="Height" Value="25"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
            </Style>
        </Grid.Resources>
        <ScrollViewer  HorizontalScrollBarVisibility="Hidden" PanningMode="VerticalOnly" VerticalScrollBarVisibility="Auto" Name="svInfo">
            <Grid Margin="10" Validation.ErrorTemplate="{x:Null}">
                <!--<Grid.BindingGroup>
                    <BindingGroup></BindingGroup>
                </Grid.BindingGroup>-->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="215"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="215"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!--<Label Content="姓名:" Style="{StaticResource LableStyle}"/>
                <DockPanel LastChildFill="True" Grid.Column="1">
                    <Image Name="XMImg"  Width="15" Height="15" DockPanel.Dock="Right" Margin="5,0,3,0" Visibility="Collapsed"/>
                    <cmps:MetroTextBox Name="txt_Name"  MaxLength="20" Height="30" VerticalAlignment="Center" Text="{Binding Name,Mode=TwoWay}" TextChanged="txt_Name_TextChanged"/>
                </DockPanel>-->
                <cmps:ImageTextItem Text="姓名:" Grid.Row="0" Margin="5,0,0,0" IsRequired="True"></cmps:ImageTextItem>
                <!--<TextBlock Text="姓名:" Grid.Row="1" VerticalAlignment="Center" Width="100"></TextBlock>-->
                <cmps:MetroTextBox Name="txt_Name" Height="30" Grid.Column="1" >
                    <cmps:MetroTextBox.Text>
                        <Binding Path="Name"
                                 Mode="TwoWay"
                                 BindingGroupName=""
                                 ValidatesOnDataErrors="True"
                                 UpdateSourceTrigger="LostFocus">
                        </Binding>
                    </cmps:MetroTextBox.Text>
                </cmps:MetroTextBox>
                <Label Content="民族:" Grid.Column="2" Style="{StaticResource LableStyle}" />
                <cmps:MetroComboBox Name="cbNation"  Height="30" Grid.Column="3" Padding="7,0,0,0" Grid.ColumnSpan="3" VerticalAlignment="Center" TabIndex="4" SelectionChanged="cbNation_SelectionChanged"/>

                <Label Content="证件类型:" Grid.Row="2" Style="{StaticResource LableStyle}"/>
                <cmps:MetroComboBox Name="cbCardType" Height="30" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Padding="7,0,0,0" VerticalAlignment="Center" SelectionChanged="cbCardType_SelectionChanged"/>

                <Label Content="证件号码:" Grid.Row="4" Style="{StaticResource LableStyle}"/>
                <DockPanel LastChildFill="True" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3">
                    <Image Name="ZjImg"  Width="15"  Height="15" DockPanel.Dock="Right" Margin="5,0,3,0"  Visibility="Collapsed"/>
                    <cmps:MetroTextBox Name="txt_ICN" Text="{Binding ICN,Mode=TwoWay}"  MaxLength="25" TextChanged="txt_ICN_TextChanged" 
                               Height="30" InputMethod.IsInputMethodEnabled="False" VerticalAlignment="Center"/>
                </DockPanel>

                <Label Content="性别:" Grid.Row="6" Style="{StaticResource LableStyle}"/>
                <cmps:MetroComboBox Name="cbGender" IsEnabled="False" Height="30" Grid.Row="6" Grid.Column="1" Padding="7,0,0,0" 
                                    VerticalAlignment="Center"/>
                <Label Content="年龄:"  Grid.Row="6" Grid.Column="2"  Style="{StaticResource LableStyle}" />
                <!--<cmps:MetroTextBox Name="txt_Age" IsEnabled="False" Grid.Row="3" Text="{Binding Age}" Grid.Column="3" VerticalAlignment="Center" InputMethod.IsInputMethodEnabled="False" />-->
                <wpftoolkit:DoubleUpDown  Height="28"  x:Name="txt_Age" Minimum="0"  Grid.Row="6" Grid.Column="3" Value="{Binding Age,Mode=TwoWay}"
                                            VerticalAlignment="Center" Increment="1" TabIndex="7"  IsEnabled="False"
                                            Maximum="200" BorderThickness="1"/>

                <Label Content="出生日期:" Grid.Row="8" Style="{StaticResource LableStyle}" />
                <wpftoolkit:DateTimeUpDown Name="txt_Birthday" Height="28"  FocusableChanged="txt_Birthday_FocusableChanged" IsEnabled="False" Grid.Row="8" Value="{Binding Birthday,Mode=TwoWay}" Grid.Column="1" VerticalAlignment="Center" Format="ShortDate" BorderThickness="1"
                                           ValueChanged="txt_Birthday_ValueChanged" />
                <Label Content="家庭关系:" Grid.Row="8" Style="{StaticResource LableStyle}" Grid.Column="2" Visibility="{Binding ElementName=txt_Relationship,Path=Visibility}" />
                <cmps:MetroComboBox Name="cbRelationship"
                                    Height="30"
                                    MaxDropDownHeight="150"
                                    Grid.Row="8"
                                    IsEditable="False"
                                    Grid.Column="3"
                                    Text="{Binding Relationship,Mode=TwoWay}"
                                    VerticalAlignment="Center"/>

                <Label Content="是否共有人:" Grid.Row="10" Style="{StaticResource LableStyle}"/>
                <cmps:MetroComboBox Name="cbShare" Height="30" Grid.Row="10" Grid.Column="1" Padding="7,0,0,0" VerticalAlignment="Center" Text="{Binding IsSharedLand,Mode=TwoWay}"/>

                <Label Content="备注:"  Grid.Row="12"  Style="{StaticResource LableStyle}" VerticalAlignment="Top" Margin="0,5"/>
                <cmps:MetroTextBox Name="txt_Comment" MaxLength="100" TextWrapping="Wrap" VerticalContentAlignment="Stretch" Text="{Binding Comment, Mode=TwoWay}" Grid.Row="12" Grid.Column="1" Height="60" Grid.ColumnSpan="3"/>
            </Grid>
        </ScrollViewer>
        <Border BorderThickness="0,1,0,0" Grid.Row="1" BorderBrush="LightGray" Margin="10,0,10,0" SnapsToDevicePixels="True">
            <DockPanel HorizontalAlignment="Stretch" LastChildFill="False" VerticalAlignment="Bottom" Margin="0,5,0,5" DockPanel.Dock="Bottom">
                <metro:MetroButton Height="30" Margin="5,0,0,0" DockPanel.Dock="Right"
                               Padding="5"
                               Command="{x:Static metro:MetroCommands.CloseTabMessageBoxCommand}"
                               Style="{StaticResource Metro_Button_Paneled_Style}">
                    <StackPanel Orientation="Horizontal">
                        <Image RenderOptions.BitmapScalingMode="NearestNeighbor"
                    Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/application--minus.png"></Image>
                        <TextBlock Margin="3,0,0,0"
                           VerticalAlignment="Center"
                         Text="取消"></TextBlock>
                    </StackPanel>
                </metro:MetroButton>
                <metro:MetroButton DockPanel.Dock="Right"
                               Padding="5" x:Name="btnAdd"
                               Click="btnAdd_Click" Height="30"
                               Style="{StaticResource Metro_Button_Paneled_Style}">
                    <StackPanel Orientation="Horizontal">
                        <Image RenderOptions.BitmapScalingMode="NearestNeighbor" Stretch="None"
                       Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/tick.png"></Image>
                        <TextBlock Margin="3,0,0,0"
                           VerticalAlignment="Center"
                           Text="确定"></TextBlock>
                    </StackPanel>
                </metro:MetroButton>
            </DockPanel>
        </Border>
    </Grid>
</am:InfoPageBase>