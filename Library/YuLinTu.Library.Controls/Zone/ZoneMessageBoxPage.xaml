<local:InfoPageBase x:Class="YuLinTu.Library.Controls.ZoneMessageBoxPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YuLinTu.Library.Controls"
             xmlns:metro="clr-namespace:YuLinTu.Windows.Wpf.Metro;assembly=YuLinTu.Windows.Wpf.Metro"
             xmlns:cmps="clr-namespace:YuLinTu.Windows.Wpf.Metro.Components;assembly=YuLinTu.Windows.Wpf.Metro" 
             Icon="pack://application:,,,/YuLinTu.Resources;component/Images/16/property.png"
             MinHeight="200" MinWidth="450" Header="信息提示">
    <Grid Background="{DynamicResource Metro_Window_Style_Background_Content}" >
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Margin="10">
            <TextBlock Name="tb_info" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>
        <Border BorderBrush="LightGray" Grid.Row="2" BorderThickness="0,1,0,0" Margin="10,0,10,0" SnapsToDevicePixels="True">
            <DockPanel   Margin="0,5,0,5"  LastChildFill="False"
                           Visibility="{Binding IsBusy, Converter={StaticResource NotBoolToVisibilityHiddenConverter}}">
                <metro:MetroButton DockPanel.Dock="Right" BorderThickness="0" Margin="5,0,0,0"
                                       Padding="5" Height="30"
                                       Style="{DynamicResource Metro_Button_Paneled_Style}"
                                       Command="{x:Static metro:MetroCommands.CloseTabMessageBoxCommand}">
                    <StackPanel Orientation="Horizontal">
                        <Image RenderOptions.BitmapScalingMode="NearestNeighbor"
                                   Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/application--minus.png"></Image>
                        <TextBlock Margin="3,0,0,0"
                                       VerticalAlignment="Center"
                                       Text="关闭"></TextBlock>
                    </StackPanel>
                </metro:MetroButton>
                <metro:MetroButton DockPanel.Dock="Right" BorderThickness="0" Name="btnExcuteImport"
                               Padding="5" Click="btnSure_Click" Height="30"
                               Style="{DynamicResource Metro_Button_Paneled_Style}">
                    <StackPanel Orientation="Horizontal">
                        <Image RenderOptions.BitmapScalingMode="NearestNeighbor"
                                   Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/application--pencil.png"></Image>
                        <TextBlock Margin="3,0,0,0" ToolTip="退出提示"
                                       VerticalAlignment="Center"
                                       Text="确定"/>
                    </StackPanel>
                </metro:MetroButton>
            </DockPanel>
        </Border>
    </Grid>
</local:InfoPageBase>
