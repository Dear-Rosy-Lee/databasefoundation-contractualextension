<am:InfoPageBase x:Class="YuLinTu.Library.Controls.PersonInitallizePage"
                            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                            xmlns:wpftoolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
                            xmlns:metro="clr-namespace:YuLinTu.Windows.Wpf.Metro;assembly=YuLinTu.Windows.Wpf.Metro"
                            xmlns:cmps="clr-namespace:YuLinTu.Windows.Wpf.Metro.Components;assembly=YuLinTu.Windows.Wpf.Metro"
                            xmlns:am="clr-namespace:YuLinTu.Library.Controls"
                            Icon="pack://application:,,,/YuLinTu.Resources;component/Images/16/property.png"
                            Header="初始化基本信息"
                            MinHeight="150" MinWidth="520">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.Resources>
            <Style x:Key="LableStyle" TargetType="Label">
                <Setter Property="Height" Value="25"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
            </Style>
        </Grid.Resources>
        <ScrollViewer Margin="20,10" HorizontalScrollBarVisibility="Hidden" PanningMode="VerticalOnly" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="110"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="200"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>
                    <CheckBox Content="承包方编码" Click="cbCheckBox_Click" Name="cbNumber" VerticalAlignment="Center"/>
                    <StackPanel  Grid.Column="1" Grid.ColumnSpan="2" Orientation="Horizontal" IsEnabled="{Binding ElementName=cbNumber,Path=IsChecked}">
                        <RadioButton Content="重编合并部分" ToolTip="重编前14位与地域不匹配的部分,不填充缺失的编码" GroupName="rcbmum" IsChecked="True" Click="cbCheckBox_Click" Name="cbNumberPart"  VerticalAlignment="Center"/>
                        <RadioButton Content="全部重编" ToolTip="从1开始全部重编承包方编码" GroupName="rcbmum" Click="cbCheckBox_Click" Name="cbNumberAll" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <cmps:MetroTextBox Margin="10,0,0,0" x:Name="txtInitiallStartNum" IsEnabled="{Binding ElementName=cbNumberAll,Path=IsChecked}" ToolTip="编码的起始编号" Width="100" VerticalAlignment="Center"></cmps:MetroTextBox>
                    </StackPanel>
                    <DockPanel Grid.Column="3" VerticalAlignment="Center" >
                        <CheckBox x:Name="cbInitializeNull" Content="只初始化空项" Width="110" VerticalAlignment="Center" />
                        <CheckBox Content="性别" VerticalAlignment="Center" x:Name="cbSex" Click="cbSex_Click"/>
                    </DockPanel>
                    <CheckBox Content="邮政编码" Grid.Row="1" Grid.Column="0" Name="cbZip" Click="cbCheckBox_Click" HorizontalAlignment="Left" VerticalAlignment="Center" Width="75"/>
                    <cmps:MetroTextBox Name="txtZip" PreviewKeyDown="mtbCode_PreviewKeyDown" PreviewTextInput="mtbCode_PreviewTextInput" Height="30" VerticalAlignment="Center" IsEnabled="{Binding ElementName=cbZip,Path=IsChecked}" MaxLength="6" Grid.Column="1" Grid.Row="1"/>

                    <CheckBox Content="民族" Name="chbNation" Margin="5,0,0,0" Grid.Row="1" Grid.Column="2" Click="cbCheckBox_Click" HorizontalAlignment="Left" Width="74" VerticalAlignment="Center" />
                    <cmps:MetroComboBox VerticalAlignment="Center" Padding="7,0,0,0" Grid.Row="1" Grid.Column="3" Name="cbNation" SelectionChanged="cbNation_SelectionChanged" IsEnabled="{Binding ElementName=chbNation,Path=IsChecked}" Height="30" Width="200"/>

                    <!--<CheckBox Content="调查审核公示信息" Click="cbSuevery_Click" Grid.Row="1"  Name="cbSuevery" VerticalAlignment="Center" Margin="5,0,0,0"/>-->
                </Grid>
                <StackPanel Grid.Row="1" x:Name="spBase">
                    <Grid >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="110"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="120"/>
                            <!--<ColumnDefinition Width="7"/>-->
                            <ColumnDefinition Width="200"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <CheckBox Content="承包方地址:" VerticalAlignment="Center" Name="cbVpAddress" Margin="0,7" Click="cbCheckBox_Click"/>
                        <cmps:MetroTextBox Name="txtAddress" Height="30" IsEnabled="{Binding ElementName=cbVpAddress,Path=IsChecked}" Grid.Column="1" Grid.ColumnSpan="4" MaxLength="200" VerticalAlignment="Center"/>

                        <CheckBox Content="调查员:"  Grid.Row="1" VerticalAlignment="Center" Name="cbSurveyPerson" Margin="0,5" Click="cbCheckBox_Click"/>
                        <cmps:MetroTextBox Name="txtSurvey" Height="30"  IsEnabled="{Binding ElementName=cbSurveyPerson,Path=IsChecked}" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Margin="0,5"/>
                        <CheckBox Content="调查日期:" Margin="5,0,0,0" Grid.Row="1" VerticalAlignment="Center" Name="cbSurveyDate" Grid.Column="2" HorizontalAlignment="Left"  Click="cbCheckBox_Click"/>
                        <wpftoolkit:DateTimeUpDown Name="txtSurveyDate" Height="30"  IsEnabled="{Binding ElementName=cbSurveyDate,Path=IsChecked}" Format="ShortDate" 
                                                   Grid.Row="1" Grid.Column="4" VerticalAlignment="Center" Margin="0,5"/>

                        <CheckBox Content="调查记事:"  VerticalAlignment="Center" Name="cbSurveyAccount" Grid.Row="2" Click="cbCheckBox_Click"/>
                        <cmps:MetroTextBox Name="txtSurveyInfo"  AcceptsReturn="True" TextWrapping="Wrap" Height="30"  IsEnabled="{Binding ElementName=cbSurveyAccount,Path=IsChecked}" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="4" MaxLength="150" VerticalAlignment="Center"/>

                        <CheckBox Content="审核人:" Grid.Row="3" VerticalAlignment="Center" Name="cbCheckPerson" Margin="0,5" Click="cbCheckBox_Click"/>
                        <cmps:MetroTextBox Name="txtCheck" Height="30"   IsEnabled="{Binding ElementName=cbCheckPerson,Path=IsChecked}"  Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" Margin="0,5"/>
                        <CheckBox Content="审核日期:" Grid.Row="3" Grid.Column="2" VerticalAlignment="Center" Name="cbCheckDate" HorizontalAlignment="Left" Margin="5,0,0,0" Click="cbCheckBox_Click"/>
                        <wpftoolkit:DateTimeUpDown Name="txtCheckDate" Height="30"  IsEnabled="{Binding ElementName=cbCheckDate,Path=IsChecked}"   Grid.Row="3" Format="ShortDate" Grid.Column="4" VerticalAlignment="Center" Margin="0,5"/>

                        <CheckBox Content="审核意见:" VerticalAlignment="Center" Name="cbCheckOpinion" Grid.Row="4" Margin="0,7" Click="cbCheckBox_Click"/>
                        <cmps:MetroTextBox Name="txtCheckInfo"  AcceptsReturn="True" TextWrapping="Wrap" Height="30" Grid.Row="4"  IsEnabled="{Binding ElementName=cbCheckOpinion,Path=IsChecked}"  Grid.Column="1" Grid.ColumnSpan="4" MaxLength="150" VerticalAlignment="Center"/>

                        <CheckBox Content="公示记事人:" Grid.Row="5" VerticalAlignment="Center" Name="cbPublishAccountPerson" Margin="0,5" Click="cbCheckBox_Click"/>
                        <cmps:MetroTextBox Name="txtPub"  Height="30" Grid.Row="5"  IsEnabled="{Binding ElementName=cbPublishAccountPerson,Path=IsChecked}"  Grid.Column="1" VerticalAlignment="Center" Margin="0,5"/>
                        <CheckBox Content="公示日期:" Grid.Row="5" Grid.Column="2" VerticalAlignment="Center" Name="cbPublishDate" HorizontalAlignment="Left"  Margin="5,0,0,0" Click="cbCheckBox_Click"/>
                        <wpftoolkit:DateTimeUpDown Name="txtPubDate" Height="30"  IsEnabled="{Binding ElementName=cbPublishDate,Path=IsChecked}"  Format="ShortDate" Grid.Row="5" Grid.Column="4" VerticalAlignment="Center" Margin="0,5"/>

                        <CheckBox Content="公示记事:" VerticalAlignment="Center" Name="cbPublishAccount" Grid.Row="7" Margin="0,10,0,9" Click="cbCheckBox_Click"/>
                        <cmps:MetroTextBox Name="txtPubInfo"  AcceptsReturn="True" TextWrapping="Wrap" Height="30" Margin="0,5,0,0" IsEnabled="{Binding ElementName=cbPublishAccount,Path=IsChecked}"  Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="4" MaxLength="150" VerticalAlignment="Center"/>

                        <CheckBox Content="公示审核人:" Grid.Row="6" VerticalAlignment="Center" Name="cbPublishCheckPerson" Margin="0,7" Click="cbCheckBox_Click"/>
                        <cmps:MetroTextBox Name="txtPubPerson" Height="30"  IsEnabled="{Binding ElementName=cbPublishCheckPerson,Path=IsChecked}" 
                                           Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="4" VerticalAlignment="Center"/>
                        <CheckBox Content="取得承包方式:" Grid.Row="8" VerticalAlignment="Center" Name="cbContractWay" Margin="0,7" Click="cbCheckBox_Click" />
                        <cmps:MetroComboBox Name="mcbContractWay" Height="30" Grid.Row="8" Padding="7,0,0,0" 
                             SelectionChanged="mcbContractWay_SelectionChanged"    Grid.Column="1" IsEnabled="{Binding ElementName=cbContractWay,Path=IsChecked}" VerticalAlignment="Center"/>

                        <CheckBox Content="承包合同编号" Grid.Row="8" Grid.Column="2"  VerticalAlignment="Center" Name="cbConcordNumber" Margin="5,0,0,0" Click="cbCheckBox_Click"/>
                        <CheckBox Content="经营权证编号" Grid.Row="8" Grid.Column="3"  VerticalAlignment="Center" Name="cbWarrantNumber" Margin="0,0,5,0" HorizontalAlignment="Right" Click="cbCheckBox_Click"/>

                        <CheckBox Content="承包起始日期:" VerticalAlignment="Center" Name="cbStartTime" Grid.Row="9" Margin="0,10,0,9" Click="cbCheckBox_Click"/>
                        <wpftoolkit:DateTimeUpDown Name="txtStartTime" Height="30"  IsEnabled="{Binding ElementName=cbStartTime,Path=IsChecked}"  Format="ShortDate" Grid.Row="9" Grid.Column="1" VerticalAlignment="Center" Margin="0,5"/>
                        <CheckBox Content="承包结束日期:" VerticalAlignment="Center" Name="cbEndTime" Grid.Row="9" Grid.Column="2" Margin="5,0,0,0" Click="cbCheckBox_Click"/>
                        <wpftoolkit:DateTimeUpDown Name="txtEndTime" Height="30"  IsEnabled="{Binding ElementName=cbEndTime,Path=IsChecked}"  Format="ShortDate" Grid.Row="9" Grid.Column="3" VerticalAlignment="Center" Margin="0,5"/>

                        <CheckBox Content="家庭成员备注:" Grid.Row="10" VerticalAlignment="Center" Name="cbPersonComment" Margin="0,5" Click="cbCheckBox_Click"/>
                        <cmps:MetroTextBox Name="txtPersonComment" Height="30"   IsEnabled="{Binding ElementName=cbPersonComment,Path=IsChecked}"  Grid.Row="10" Grid.Column="1" Grid.ColumnSpan="3" VerticalAlignment="Center" Margin="0,5"/>

                        <CheckBox Content="共有人备注" Grid.Row="11" VerticalAlignment="Center" Name="cbSharePersonComment" Margin="0,5" Click="cbCheckBox_Click"/>
                    </Grid>
                </StackPanel>
            </Grid>
        </ScrollViewer>
        <Border BorderThickness="0,1,0,0" Grid.Row="1" BorderBrush="LightGray" Margin="10,0,10,0" SnapsToDevicePixels="True">
            <DockPanel HorizontalAlignment="Stretch" LastChildFill="True" VerticalAlignment="Bottom" Margin="0,5,0,5" DockPanel.Dock="Bottom">
                <metro:MetroButton Height="30" DockPanel.Dock="Right"
                               Padding="5" Margin="5,0,0,0"
                               Command="{x:Static metro:MetroCommands.CloseTabMessageBoxCommand}"
                               Style="{StaticResource Metro_Button_Paneled_Style}">
                    <StackPanel Orientation="Horizontal">
                        <Image RenderOptions.BitmapScalingMode="NearestNeighbor"
                    Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/application--minus.png"></Image>
                        <TextBlock Margin="3,0,0,0"
                           VerticalAlignment="Center"
                         Text="取消"></TextBlock>
                    </StackPanel>
                </metro:MetroButton>
                <metro:MetroButton DockPanel.Dock="Right"
                               Padding="5" x:Name="btnAdd"
                               Click="btnAdd_Click" Height="30"
                               Style="{StaticResource Metro_Button_Paneled_Style}">
                    <StackPanel Orientation="Horizontal">
                        <Image RenderOptions.BitmapScalingMode="NearestNeighbor" Stretch="None"
                       Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/tick.png"></Image>
                        <TextBlock Margin="3,0,0,0"
                           VerticalAlignment="Center"
                           Text="确定"></TextBlock>
                    </StackPanel>
                </metro:MetroButton>
                <Label Name="lbInfo" DockPanel.Dock="Left" VerticalAlignment="Center"/>
            </DockPanel>
        </Border>
    </Grid>
</am:InfoPageBase>