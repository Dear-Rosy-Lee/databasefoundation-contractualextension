<cmps:TabMessageBox x:Class="YuLinTu.Component.VectorDataDecoding.PropertyEditorCom"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:metro="clr-namespace:YuLinTu.Windows.Wpf.Metro;assembly=YuLinTu.Windows.Wpf.Metro"
                    xmlns:cmps="clr-namespace:YuLinTu.Windows.Wpf.Metro.Components;assembly=YuLinTu.Windows.Wpf.Metro"
                    Icon="pack://application:,,,/YuLinTu.Resources;component/Images/16/property.png"
                    VerticalAlignment="Center"
                    MaxWidth="920"
                    MaxHeight="501"
                    Width="640"
                    MinHeight="321">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Border Grid.Row="0"
                Margin="10"
                Visibility="{Binding IsBusy, Converter={StaticResource NotBoolToVisibilityConverter}}">
            <TabControl>
                <TabItem Header="{Binding Converter={StaticResource LanguageConverter}, ConverterParameter=lang1500023}">
                    <cmps:PropertyGrid Name="pg"
                                       IsGroupingEnabled="False"></cmps:PropertyGrid>
                </TabItem>
                <TabItem Header="{Binding Converter={StaticResource LanguageConverter}, ConverterParameter=lang1500024}">
                    <cmps:PropertyGrid Name="pgTask"
                                       IsGroupingEnabled="False"></cmps:PropertyGrid>
                </TabItem>
            </TabControl>
        </Border>
        <Border Grid.Row="0"
                Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibilityConverter}}">
            <cmps:LoadingIcon Width="16"
                              Height="16"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Visibility="{Binding Path=IsBusy, Converter={StaticResource BoolToVisibilityConverter}}"
                              RenderOptions.BitmapScalingMode="NearestNeighbor"></cmps:LoadingIcon>
        </Border>
        <Border Grid.Row="1"
                SnapsToDevicePixels="True"
                Margin="10,0,10,5"
                BorderThickness="0,1,0,0"
                BorderBrush="{DynamicResource Metro_Window_Style_BorderBrush_Default}"
                Visibility="{Binding IsBusy, Converter={StaticResource NotBoolToVisibilityConverter}}"></Border>
        <DockPanel Grid.Row="2"
                   Margin="10,0,10,5"
                   LastChildFill="False"
                   Visibility="{Binding IsBusy, Converter={StaticResource NotBoolToVisibilityConverter}}">
          
            <metro:MetroButton DockPanel.Dock="Right"
                               Padding="10,0"
                               Height="30"
                               Style="{StaticResource Metro_Button_Paneled_Style}"
                               Command="{x:Static metro:MetroCommands.CloseTabMessageBoxCommand}">
                <StackPanel Orientation="Horizontal">
                    <Image RenderOptions.BitmapScalingMode="NearestNeighbor"
                           SnapsToDevicePixels="True"
                           Stretch="None"
                           VerticalAlignment="Center"
                           Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/application--minus.png"></Image>
                    <TextBlock Margin="3,0,0,0"
                               VerticalAlignment="Center"
                               Text="{Binding Converter={StaticResource LanguageConverter}, ConverterParameter=lang11055}"></TextBlock>
                </StackPanel>
            </metro:MetroButton>
            <metro:MetroButton DockPanel.Dock="Right"
                               Padding="10,0"
                               Height="30"
                              Style="{StaticResource Metro_Button_Paneled_Style}"
                               
                               Command="{x:Static metro:MetroCommands.ConfirmTabMessageBoxCommand}">
                <StackPanel Orientation="Horizontal">
                    <Image RenderOptions.BitmapScalingMode="NearestNeighbor"
                           SnapsToDevicePixels="True"
                           Stretch="None"
                           VerticalAlignment="Center"
                           Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/application--minus.png"></Image>
                    <TextBlock Margin="3,0,0,0"
                               VerticalAlignment="Center"
                               Text="确认"></TextBlock>
                </StackPanel>
            </metro:MetroButton>
        </DockPanel>
    </Grid>
</cmps:TabMessageBox>
