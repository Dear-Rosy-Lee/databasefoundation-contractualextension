<am:InfoPageBase x:Class="YuLinTu.Library.Controls.ConstructionLandDotPage"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:wpftoolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
                 xmlns:metro="clr-namespace:YuLinTu.Windows.Wpf.Metro;assembly=YuLinTu.Windows.Wpf.Metro"
                 xmlns:cmps="clr-namespace:YuLinTu.Windows.Wpf.Metro.Components;assembly=YuLinTu.Windows.Wpf.Metro"
                 xmlns:am="clr-namespace:YuLinTu.Library.Controls"
                 Icon="pack://application:,,,/YuLinTu.Resources;component/Images/16/property.png"
                 Header="承包地块界址点信息"
                 MinHeight="100">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.Resources>
            <Style x:Key="LableStyle" TargetType="Label">
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
            </Style>
        </Grid.Resources>
        <Grid>
            <Grid Margin="10,10,10,5" Name="dotInfoGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="185"/>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="185"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Content="界址点号前缀:" Grid.Row="0" Grid.Column="0" Style="{StaticResource LableStyle}"/>
                <cmps:MetroTextBox Height="30" Name="txtDotNumberPrefix" Grid.Row="0" IsReadOnly="False"
                                   TabIndex="1" Grid.Column="1" MaxLength="1" VerticalAlignment="Center" 
                                   InputMethod.IsInputMethodEnabled="False"  InputMethod.PreferredImeState="Off"
                                   PreviewKeyDown="txtDotNumberPrefix_PreviewKeyDown" PreviewTextInput="txtDotNumberPrefix_PreviewTextInput"/>

                <Label Content="界址点说明:" Grid.Row="0" Grid.Column="2" Style="{StaticResource LableStyle}" HorizontalAlignment="Right"/>
                <cmps:MetroTextBox Height="30" Name="txtDotDescriptioon" Grid.Row="0" Text="{Binding CurrentDot.Description,Mode=TwoWay}"
                                   TabIndex="2" Grid.Column="3" MaxLength="200" VerticalAlignment="Center" />

                <cmps:ImageTextItem Grid.Row="1" Grid.Column="0" Margin="5,0,0,0" Text="界址点类型:" IsRequired="True" 
                                    VerticalAlignment="Center"/>
                <cmps:MetroComboBox Name="cbDotType" Grid.Row="1" Grid.Column="1" Height="30" Grid.ColumnSpan="1"
                                    Padding="7,0,0,0" VerticalAlignment="Center" TabIndex="3"/>

                <cmps:ImageTextItem Grid.Row="1" Grid.Column="2" Margin="5,0,0,0" Text="界标类型:" IsRequired="True" 
                                    VerticalAlignment="Center"  HorizontalAlignment="Right"/>
                <cmps:MetroComboBox Name="cbDotMark" Grid.Row="1" Grid.Column="3" Height="30" Grid.ColumnSpan="1"
                                    Padding="7,0,0,0" VerticalAlignment="Center" TabIndex="4"/>
               
            </Grid>
        </Grid>
        <Border BorderThickness="0,1,0,0" Grid.Row="1" BorderBrush="LightGray" Margin="10,0,10,0" SnapsToDevicePixels="True">
            <DockPanel HorizontalAlignment="Stretch" LastChildFill="False" VerticalAlignment="Bottom" Margin="0,5,0,5" DockPanel.Dock="Bottom">
                <metro:MetroButton Height="30" DockPanel.Dock="Right"
                               Padding="10,0"
                               IsEnabled="{Binding CanClose}"
                               Command="{x:Static metro:MetroCommands.CloseTabMessageBoxCommand}"
                               Style="{StaticResource Metro_Button_Paneled_Style}" TabIndex="14">
                    <StackPanel Orientation="Horizontal">
                        <cmps:ImageTextItem Image="pack://application:,,,/YuLinTu.Resources;component/Images/16/application--minus.png" Text="取消">
                        </cmps:ImageTextItem>
                    </StackPanel>
                </metro:MetroButton>
                <metro:MetroButton DockPanel.Dock="Right" Margin="0,0,5,0"
                                   Padding="10,0"
                                   Height="30"
                                   Style="{StaticResource Metro_Button_Paneled_Style}"
                                   x:Name="mbtnLandOK"
                                   Click="mbtnLandOK_Click"
                                   IsEnabled="{Binding CanClose}">
                    <cmps:ImageTextItem Image="pack://application:,,,/YuLinTu.Resources;component/Images/16/tick.png" Text="确定">
                    </cmps:ImageTextItem>
                </metro:MetroButton>
                <cmps:LoadingIcon DockPanel.Dock="Right"
                              Width="16"
                              Height="16"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Margin="0,0,5,0"
                              Visibility="{Binding Path=IsConfirming, Converter={StaticResource BoolToVisibilityHiddenConverter}}"
                              RenderOptions.BitmapScalingMode="NearestNeighbor"></cmps:LoadingIcon>
            </DockPanel>
        </Border>
    </Grid>
</am:InfoPageBase>