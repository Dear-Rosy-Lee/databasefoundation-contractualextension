<am:InfoPageBase x:Class="YuLinTu.Library.Controls.VirtualPersonInfoPage"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:wpftoolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
                 xmlns:metro="clr-namespace:YuLinTu.Windows.Wpf.Metro;assembly=YuLinTu.Windows.Wpf.Metro"
                 xmlns:cmps="clr-namespace:YuLinTu.Windows.Wpf.Metro.Components;assembly=YuLinTu.Windows.Wpf.Metro"
                 xmlns:am="clr-namespace:YuLinTu.Library.Controls"
                 Icon="pack://application:,,,/YuLinTu.Resources;component/Images/16/property.png"
                 Header="承包方"
                 Height="520"
                 Width="640">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.Resources>
            <Style x:Key="LableStyle"
                   TargetType="Label">
                <Setter Property="VerticalContentAlignment"
                        Value="Center" />
                <Setter Property="VerticalAlignment"
                        Value="Center" />
                <Setter Property="HorizontalContentAlignment"
                        Value="Left" />
                <Setter Property="HorizontalAlignment"
                        Value="Left" />
            </Style>
        </Grid.Resources>
        <ScrollViewer  HorizontalScrollBarVisibility="Hidden"
                       PanningMode="VerticalOnly"
                       VerticalScrollBarVisibility="Auto">
            <Grid Name="gridContent">
                <cmps:LoadingIcon Width="16"
                                  x:Name="loadIcon"
                                  Height="16"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  RenderOptions.BitmapScalingMode="NearestNeighbor">
                </cmps:LoadingIcon>
            </Grid>
        </ScrollViewer>
        <Border BorderThickness="0,1,0,0"
                Grid.Row="1"
                BorderBrush="LightGray"
                Margin="10,0,10,0"
                SnapsToDevicePixels="True">
            <DockPanel LastChildFill="False"
                       VerticalAlignment="Bottom"
                       Margin="0,5,0,5"
                       DockPanel.Dock="Bottom">
                <metro:MetroButton DockPanel.Dock="Right"
                                   Padding="10,0"
                                   Height="30"
                                   Margin="5,0,0,0"
                                   Style="{StaticResource Metro_Button_Paneled_Style}"
                                   Command="{x:Static metro:MetroCommands.CloseTabMessageBoxCommand}">
                    <cmps:ImageTextItem Image="pack://application:,,,/YuLinTu.Resources;component/Images/16/application--minus.png"
                                        Text="取消">
                    </cmps:ImageTextItem>
                </metro:MetroButton>
                <metro:MetroButton DockPanel.Dock="Right"
                                   Padding="10,0"
                                   Height="30"
                                   Style="{StaticResource Metro_Button_Paneled_Style}"
                                   x:Name="btnAdd"
                                   Click="btnAdd_Click">
                    <cmps:ImageTextItem Image="pack://application:,,,/YuLinTu.Resources;component/Images/16/tick.png"
                                        Text="确定">
                    </cmps:ImageTextItem>
                </metro:MetroButton>
            </DockPanel>
        </Border>
    </Grid>
</am:InfoPageBase>