<ylt:MetroComboBox x:Class="YuLinTu.Appwork.Apps.Samples.ThemeColorSelectorComboBox"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:ylt="http://schemas.yulintu.com/wpf/xaml/framework"
                   Style="{StaticResource Metro_ComboBox_Style}">
    <ylt:MetroComboBox.ItemTemplate>
        <DataTemplate>
            <DockPanel ToolTip="{Binding ColorName}">
                <Border Name="icon"
                        Width="16"
                        Height="16"
                        Background="{ylt:ResourceBinding ColorKey}"></Border>
                <StackPanel DockPanel.Dock="Right"
                            Orientation="Horizontal"
                            TextElement.Foreground="{DynamicResource {x:Static ylt:ResourceKeys.ForegroundLighterLighterBrushKey}}"
                            TextElement.FontFamily="Consolas"
                            Margin="10,0,0,0">
                    <TextBlock Text="("></TextBlock>
                    <TextBlock Text="{Binding ElementName=icon, Path=Background}"></TextBlock>
                    <TextBlock Text=")"></TextBlock>
                </StackPanel>
                <TextBlock Margin="5,0,0,0"
                           Text="{Binding ColorName}"></TextBlock>
            </DockPanel>
        </DataTemplate>
    </ylt:MetroComboBox.ItemTemplate>
</ylt:MetroComboBox>
