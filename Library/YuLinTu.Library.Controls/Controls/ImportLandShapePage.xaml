<am:InfoPageBase x:Class="YuLinTu.Library.Controls.ImportLandShapePage"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:am="clr-namespace:YuLinTu.Library.Controls"
                 xmlns:metro="clr-namespace:YuLinTu.Windows.Wpf.Metro;assembly=YuLinTu.Windows.Wpf.Metro"
                 xmlns:cmps="clr-namespace:YuLinTu.Windows.Wpf.Metro.Components;assembly=YuLinTu.Windows.Wpf.Metro"
                 Icon="pack://application:,,,/YuLinTu.Resources;component/Images/16/property.png"
                 Height="550"
                 Width="660"
                 Header="导入地块图斑数据">
    <am:InfoPageBase.Resources>
        <BooleanToVisibilityConverter x:Key="boolToVisibilityConverter"/>
    </am:InfoPageBase.Resources>
    <Grid Background="{DynamicResource Metro_Window_Style_Background_Content}">
        <Grid.RowDefinitions>
            <RowDefinition Height="90"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Margin="10"
              Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="40" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Label Content="文件路径:"
                   Grid.Row="0"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   HorizontalContentAlignment="Left" />
            <DockPanel LastChildFill="True"
                       Grid.Column="1"
                       Grid.Row="0">
                <metro:MetroButton Style="{StaticResource Metro_Button_Paneled_Style}"
                                   DockPanel.Dock="Right"
                                   Height="30"
                                   VerticalAlignment="Center"
                                   Margin="10,0,0,0"
                                   Width="70"
                                   Click="btnFileSelect_Click"
                                   SnapsToDevicePixels="True">
                    <cmps:ImageTextItem Image="pack://application:,,,/YuLinTu.Library.Resources;component/Resources/路径.png"
                                        Text="浏览">
                    </cmps:ImageTextItem>
                </metro:MetroButton>
                <cmps:MetroTextBox Name="txt_file"
                                   BorderThickness="1"
                                   Height="30"
                                   DockPanel.Dock="Left"
                                   TextChanged="txt_file_TextChanged_1"
                                   SnapsToDevicePixels="True"
                                   VerticalAlignment="Center" />
            </DockPanel>

            <Label Content="导入方式:"
                   Grid.Row="1"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   HorizontalContentAlignment="Left" />
            <DockPanel LastChildFill="True"
                       Grid.Column="1"
                       Grid.Row="1">
                <RadioButton Content="按地块编码导入" ToolTip="以地块编码为准进行匹配更新图斑"
                             Name="chkUseLandCodeBindImport"
                             Click="chkUseLandCodeBindImport_Check"
                             VerticalAlignment="Center"
                             Margin="0,0,0,0"
                             TabIndex="3" />
                <RadioButton Content="按承包方信息导入" ToolTip="按承包方信息为准，先清空再导入"
                             Name="chkUseContractorInfoImport"
                             Click="chkUseContractorInfoImport_Checked"
                             VerticalAlignment="Center"
                             Margin="15,0,0,0"
                             TabIndex="3" />
                <RadioButton Content="按承包方户号导入"  ToolTip="按承包户号为准，进行导入"
                             Name="chkUseContractorNumberImport"
                             Click="chkUseContractorNumberImport_Click"
                             VerticalAlignment="Center"
                             Margin="15,0,0,0"
                             TabIndex="3" />
                <RadioButton Content="按原地块编码导入" ToolTip="以原地块编码为准进行匹配更新图斑"
                             Name="chkUseOldLandCodeBindImport"
                             Click="chkUseOldLandCodeBindImport_Check"
                             VerticalAlignment="Center"
                             Margin="15,0,0,0"
                             TabIndex="3" />

            </DockPanel>
        </Grid>
        <DockPanel LastChildFill="True"
                   Grid.Row="1">
            <cmps:ImageTextItem DockPanel.Dock="Top"
                                Text="导入数据绑定设置"
                                Image="pack://application:,,,/YuLinTu.Library.Resources;component/Resources/PersonSetting.png"
                                Margin="15,0,0,0">
            </cmps:ImageTextItem>
            <cmps:PropertyGrid x:Name="propertyGrid"
                               StateColumnVisibility="Visible"
                               BorderThickness="1"></cmps:PropertyGrid>
        </DockPanel>
        <Border BorderBrush="LightGray"
                Grid.Row="2"
                BorderThickness="0,1,0,0"
                Margin="10,0,10,0"
                SnapsToDevicePixels="True">
            <DockPanel   Margin="0,5,0,5"
                         LastChildFill="False"
                         Visibility="{Binding IsBusy, Converter={StaticResource NotBoolToVisibilityHiddenConverter}}">
                <CheckBox DockPanel.Dock="Left" VerticalAlignment="Center" Content="全匹配" Name="allCheck" Click="allCheck_Click"/>

                <CheckBox DockPanel.Dock="Left" Margin="20,0,0,0"
                          VerticalAlignment="Center" IsChecked="True"
                          Content="清空地块数据"
                          Name="landdelCheck"
                          Visibility="{Binding ElementName=chkUseContractorNumberImport,Path=IsChecked,Converter={StaticResource boolToVisibilityConverter}}"
                          Click="allCheck_Click" />

                <metro:MetroButton DockPanel.Dock="Right"
                                   Margin="5,0,0,0"
                                   Padding="5"
                                   Height="30"
                                   Style="{StaticResource Metro_Button_Paneled_Style}"
                                   Command="{x:Static metro:MetroCommands.CloseTabMessageBoxCommand}">
                    <StackPanel Orientation="Horizontal">
                        <Image RenderOptions.BitmapScalingMode="NearestNeighbor"
                               Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/application--minus.png"></Image>
                        <TextBlock Margin="3,0,0,0"
                                   VerticalAlignment="Center"
                                   Text="取消"></TextBlock>
                    </StackPanel>
                </metro:MetroButton>
                <metro:MetroButton DockPanel.Dock="Right"
                                   Name="btnExcuteImport"
                                   Padding="5"
                                   IsEnabled="False"
                                   Height="30"
                                   Click="btnExcuteImport_Click_1"
                                   Style="{StaticResource Metro_Button_Paneled_Style}">
                    <StackPanel Orientation="Horizontal">
                        <Image RenderOptions.BitmapScalingMode="NearestNeighbor"
                               Stretch="None"
                               Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/application--pencil.png"></Image>
                        <TextBlock Margin="3,0,0,0"
                                   ToolTip="开始导入数据"
                                   VerticalAlignment="Center"
                                   Text="导入" />
                    </StackPanel>
                </metro:MetroButton>
            </DockPanel>
        </Border>
    </Grid>
</am:InfoPageBase>
