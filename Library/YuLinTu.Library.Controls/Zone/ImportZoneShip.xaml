<am:InfoPageBase x:Class="YuLinTu.Library.Controls.ImportZoneShip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:am="clr-namespace:YuLinTu.Library.Controls"
             xmlns:metro="clr-namespace:YuLinTu.Windows.Wpf.Metro;assembly=YuLinTu.Windows.Wpf.Metro"
             xmlns:cmps="clr-namespace:YuLinTu.Windows.Wpf.Metro.Components;assembly=YuLinTu.Windows.Wpf.Metro" 
             Icon="pack://application:,,,/YuLinTu.Resources;component/Images/16/property.png"
             Height="250" Width="550" Header="导入地域shp" >
    <Grid Background="{DynamicResource Metro_Window_Style_Background_Content}" x:Name="dpPanel">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="34*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Content="文件路径:" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Left" HorizontalContentAlignment="Left"/>
            <DockPanel LastChildFill="True" Grid.Column="1" Grid.Row="0">
                <metro:MetroButton Height="27" DockPanel.Dock="Right" Style="{StaticResource Metro_Button_Paneled_Style}" VerticalAlignment="Center"  Width="70" Margin="10,0,0,0" Click="MetroButton_Click_1">
                    <cmps:ImageTextItem Image="pack://application:,,,/YuLinTu.Library.Resources;component/Resources/路径.png"
                                        Text="浏览"/>
                </metro:MetroButton>
                <cmps:MetroTextBox Name="txt_file" Height="27" SnapsToDevicePixels="True" DockPanel.Dock="Left" TextChanged="txt_file_TextChanged_1" BorderThickness="1" VerticalAlignment="Center"/>
            </DockPanel>
            <Label Content="匹配字段:" Grid.Row="1" VerticalAlignment="Center" />
            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal">
                <TextBox Name="tbField" VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="0,0,5,0" Width="100" IsEnabled="False" Height="30"/>
                <metro:MetroButton Grid.Row="1"  Style="{StaticResource Metro_Button_Paneled_Style}" IsEnabled="False" Grid.Column="1" Name="mbset" Height="30" Padding="7,0,7,0" HorizontalAlignment="Left" Content="设置匹配" Click="btnSConfig_Click"/>
            </StackPanel>
            <Label DockPanel.Dock="Left" x:Name="lbnowDBSRInfo" Grid.Row="2" Grid.ColumnSpan="2"  Foreground="#505050" VerticalContentAlignment="Bottom"/>
            <Label DockPanel.Dock="Left" x:Name="lbImportShpSRInfo" Grid.Row="3" Grid.ColumnSpan="2" Foreground="#505050" VerticalContentAlignment="Top" />
            <Popup Name="ppConfig" Grid.Row="1" Grid.Column="1"  Placement="Bottom" PlacementTarget="{Binding ElementName=mbset}">
                <Border BorderThickness="1" BorderBrush="LightGray" Background="White">
                    <Grid Width="230">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/> 
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="38"/>
                                <RowDefinition Height="38"/>
                            </Grid.RowDefinitions>
                            <Label Content="目标字段" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalAlignment="Top" />
                            <Label Content="源字段" Grid.Column="1"  BorderBrush="LightGray" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalAlignment="Top"/>

                            <Label Content="全编码"  Grid.Row="1" BorderBrush="LightGray" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalAlignment="Center"/>
                            <cmps:MetroComboBox Grid.Column="1"  Padding="7,0,0,0" Height="30" SelectionChanged="cbfullcode_SelectionChanged_1"  Grid.Row="1" Name="cbfullcode"  HorizontalAlignment="Stretch" VerticalAlignment="Center"/>

                            <!--<Label Content="要素代码"  Grid.Row="1" BorderBrush="LightGray" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalAlignment="Center"/>
                            <cmps:MetroComboBox Grid.Column="1"  Name="cbname" Grid.Row="1" BorderThickness="1" BorderBrush="LightGray" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalAlignment="Center"/>

                            <Label Content="计算面积"  Grid.Row="3" BorderBrush="LightGray" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalAlignment="Center"/>
                            <cmps:MetroComboBox Grid.Column="1" Name="cbjsArea" Grid.Row="3" BorderThickness="1" BorderBrush="LightGray" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalAlignment="Center"/>

                            <Label Content="控制面积"  Grid.Row="4" BorderBrush="LightGray" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalAlignment="Center"/>
                            <cmps:MetroComboBox Grid.Column="1" Name="cbkzArea" Grid.Row="4" BorderThickness="1" BorderBrush="LightGray" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalAlignment="Center"/>-->
                        </Grid>
                        <Border BorderThickness="0,1,0,0" BorderBrush="LightGray" Grid.Row="1" Margin="10,0,10,0">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,5">
                                <metro:MetroButton Content="确定" VerticalAlignment="Center" Width="80" HorizontalAlignment="Right" Name="btnSetResult" Click="Button_Click" />
                                <metro:MetroButton Content="取消" VerticalAlignment="Center" Width="80" HorizontalAlignment="Right" Click="ButtonCancel_Click" />
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </Popup>
        </Grid>
        <Border BorderBrush="LightGray"  Grid.Row="1" BorderThickness="0,1,0,0" Margin="10,0,10,0" SnapsToDevicePixels="True">
            <DockPanel Margin="0,5,0,5"
                           LastChildFill="True"
                           Visibility="{Binding IsBusy, Converter={StaticResource NotBoolToVisibilityHiddenConverter}}">
                <metro:MetroButton DockPanel.Dock="Right" BorderThickness="0" Margin="5,0,0,0"
                                       Padding="5" Height="30"
                                       Style="{DynamicResource Metro_Button_Paneled_Style}"
                                       Command="{x:Static metro:MetroCommands.CloseTabMessageBoxCommand}">
                    <StackPanel Orientation="Horizontal">
                        <Image RenderOptions.BitmapScalingMode="NearestNeighbor"
                                   Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/application--minus.png"></Image>
                        <TextBlock Margin="3,0,0,0"
                                       VerticalAlignment="Center"
                                       Text="取消"></TextBlock>
                    </StackPanel>
                </metro:MetroButton>
                <metro:MetroButton DockPanel.Dock="Right" BorderThickness="0" Name="btnExcuteImport"
                               Padding="5" IsEnabled="False" Height="30" Click="btnExcuteImport_Click_1"
                               Style="{DynamicResource Metro_Button_Paneled_Style}">
                    <StackPanel Orientation="Horizontal">
                        <Image RenderOptions.BitmapScalingMode="NearestNeighbor" Stretch="None"
                                   Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/application--pencil.png"></Image>
                        <TextBlock Margin="3,0,0,0" ToolTip="开始导入数据"
                                       VerticalAlignment="Center"
                                       Text="导入"/>
                    </StackPanel>
                </metro:MetroButton>
                <Label DockPanel.Dock="Left" x:Name="lbInfo"  Foreground="#FF7F27"/>
            </DockPanel>
        </Border>
    </Grid>
</am:InfoPageBase>
