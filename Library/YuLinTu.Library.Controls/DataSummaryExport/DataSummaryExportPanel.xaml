<UserControl x:Class="YuLinTu.Library.Controls.DataSummaryExportPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:metro="clr-namespace:YuLinTu.Windows.Wpf.Metro;assembly=YuLinTu.Windows.Wpf.Metro"
             xmlns:cmps="clr-namespace:YuLinTu.Windows.Wpf.Metro.Components;assembly=YuLinTu.Windows.Wpf.Metro"
             xmlns:local="clr-namespace:YuLinTu.Library.Controls">   
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <Border Grid.Row="0"
                SnapsToDevicePixels="True"
                BorderThickness="0,0,0,1"
                Height="33"
                Padding="8,0"
                BorderBrush="{DynamicResource Metro_Window_Style_BorderBrush_Default}"
                Background="{DynamicResource Metro_Window_Style_Background_Lighter}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <cmps:ImageTextItem Grid.Column="0"
                                    Name="lbzone"
                                    ImageTextSpacing="8"
                                    Image="pack://application:,,,/YuLinTu.Library.Resources;component/Resources/管理列表16.png"></cmps:ImageTextItem>
                <!--<metro:MetroButton  HorizontalAlignment="Left"  
                            VerticalAlignment="Center"
                            Name="BtnSelectVirtualPersons" 
                            Width="100" 
                            Grid.Column="1"
                            Margin="5,3,8,3"
                            Padding="1"         
                            Style="{StaticResource Metro_Button_Paneled_Style}"
                            Grid.Row="0" 
                            Click="SelectVirtualPersons" >
                    <cmps:ImageTextItem Image="pack://application:,,,/YuLinTu.Library.Resources;component/Resources/户主16.png" Text="选择承包方">
                    </cmps:ImageTextItem>
                </metro:MetroButton>-->
                <Label Name="currentZoneLabel"  Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" HorizontalContentAlignment="Left"/>
                <CheckBox x:Name="cbSelectAllTable" Content="全选"    Grid.Column="2"  Click="cbSelectAllTable_Checked" HorizontalAlignment="Right"  
                      VerticalAlignment="Center"    Margin="5,3,8,3" Grid.Row="0" />
            </Grid>
        </Border>

        <TextBlock Grid.Row="1"                    
                   Margin="5,0,10,10" 
                   Padding="5"
                   Text="导出表格类型"
                   Height="40"
                   FontSize="25"
                   Foreground="{DynamicResource Metro_Window_Style_Foreground_Highlight}" 
                   HorizontalAlignment="Left">
        </TextBlock>

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <cmps:MetroExpander Grid.Row="0" Header="承包方" BorderThickness="0,0,0,0" IsExpanded="True" Margin="5,0,0,10" HeaderPadding="4,5,4,5"
                                 HeaderBackgroundDefault="{DynamicResource Metro_Window_Style_Background}"
                                                        HeaderForegroundDefault="{DynamicResource GlyphBrush}">
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions >
                        <RowDefinition Height="Auto"  />
                        <RowDefinition Height="Auto"  />
                        <RowDefinition Height="Auto"  />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>                        
                    </Grid.ColumnDefinitions>
                    <CheckBox x:Name="cbVPSurvyTable" Content="承包方调查表"   IsChecked="{Binding ExportDataSummaryTableTypes.ExportVPSurvyTable,Mode=TwoWay}"
                      VerticalAlignment="Center"   Margin="20,12,10,5" Grid.Row="0" Grid.Column="0"/>
                    <CheckBox x:Name="cbVPDelegateBook" Content="户主委托书" IsChecked="{Binding ExportDataSummaryTableTypes.ExportVPDelegateBook,Mode=TwoWay}"
                      VerticalAlignment="Center"   Margin="20,5,10,5" Grid.Row="1"  Grid.Column="0"/>
                    <CheckBox x:Name="cbVPApplyBook" Content="户主声明书" IsChecked="{Binding ExportDataSummaryTableTypes.ExportVPApplyBook,Mode=TwoWay}"
                      VerticalAlignment="Center"  Margin="20,5,10,5" Grid.Row="2" Grid.Column="0"/>
                    <Label Content="承包方调查表包括承包方姓名、联系电话、地址、证件号码、类型、家庭成员信息等" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Margin="0,8,0,0"/>
                    <Label Content="户主委托书包括声明书中户主的个人信息及委托声明内容" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,0,0"/>
                    <Label Content="户主声明书包括声明书中户主的个人信息及代表声明信息" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,0,0"/>
                </Grid>  
            </cmps:MetroExpander>
            <cmps:MetroExpander Grid.Row="1" Header="承包台账" BorderThickness="0,0,0,0"  HeaderPadding="4,5,4,5"
                                 HeaderBackgroundDefault="{DynamicResource Metro_Window_Style_Background}"
                                                        HeaderForegroundDefault="{DynamicResource GlyphBrush}"
                                IsExpanded="True" Margin="5,10,0,10" >
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>                       
                    </Grid.ColumnDefinitions>
                    <CheckBox x:Name="cbPublicDataWord" Content="公示结果归户表" IsChecked="{Binding ExportDataSummaryTableTypes.ExportPublicDataWord,Mode=TwoWay}"
                      VerticalAlignment="Center"   Margin="20,12,10,5" Grid.Row="0" Grid.Column="0"/>
                    <CheckBox x:Name="cbLandWordParcel" Content="地块示意图" IsChecked="{Binding ExportDataSummaryTableTypes.ExportLandWordParcel,Mode=TwoWay}"
                      VerticalAlignment="Center"   Margin="20,5,10,5" Grid.Row="1" Grid.Column="0"/>
                    <CheckBox x:Name="cbLandSurvyTable" Content="地块调查表" IsChecked="{Binding ExportDataSummaryTableTypes.ExportLandSurvyTable,Mode=TwoWay}"
                      VerticalAlignment="Center"  Margin="20,5,10,5" Grid.Row="2" Grid.Column="0"/>
                    <Label Content="公示结果归户表包括承包方的个人信息及户下所有地块的信息，包括地块名称、编码、各类面积等" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Margin="0,8,0,0"/>
                    <Label Content="地块示意图包括承包方下所有地块的示意图及相邻地块情况、制图审图信息等" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,0,0"/>
                    <Label Content="地块调查表包括每个地块的属性信息，包括承包方、四至、土地利用类型、土地用途、界址点线信息等" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,0,0"/>
                </Grid>
            </cmps:MetroExpander>
            <cmps:MetroExpander Grid.Row="2" Header="承包合同" BorderThickness="0,0,0,0" HeaderPadding="4,5,4,5"
                                 HeaderBackgroundDefault="{DynamicResource Metro_Window_Style_Background}"
                                                        HeaderForegroundDefault="{DynamicResource GlyphBrush}"
                                IsExpanded="True" Margin="5,10,0,10" >
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>                    
                    </Grid.ColumnDefinitions>
                    <CheckBox x:Name="cbSingleRequireBook" Content="单户申请书" IsChecked="{Binding ExportDataSummaryTableTypes.ExportSingleRequireBook,Mode=TwoWay}"
                      VerticalAlignment="Center"   Margin="20,12,10,5" Grid.Row="0" Grid.Column="0"/>
                    <CheckBox x:Name="cbContractConcord" Content="承包合同" IsChecked="{Binding ExportDataSummaryTableTypes.ExportContractConcord,Mode=TwoWay}"
                      VerticalAlignment="Center"   Margin="20,5,10,5" Grid.Row="1" Grid.Column="0"/>
                    <Label Content="单户申请书包括家庭承包和非家庭承包方式，主要为承包方、地、承包方式信息" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Margin="0,8,0,0"/>
                    <Label Content="承包合同包括各类承包方式，发包方、承包方、承包地块的信息及相应权利义务、责任及其他事项" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,0,0"/>
                </Grid>
            </cmps:MetroExpander>
            <cmps:MetroExpander Grid.Row="3" Header="承包权证" BorderThickness="0,0,0,0" IsExpanded="True" 
                                HeaderPadding="4,5,4,5"
                                 HeaderBackgroundDefault="{DynamicResource Metro_Window_Style_Background}"
                                                        HeaderForegroundDefault="{DynamicResource GlyphBrush}"
                                Margin="5,10,0,10" >
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>                     
                    </Grid.ColumnDefinitions>
                    <CheckBox x:Name="cbRegeditBook" Content="登记簿" IsChecked="{Binding ExportDataSummaryTableTypes.ExportRegeditBook,Mode=TwoWay}"
                      VerticalAlignment="Center"   Margin="20,12,10,5" Grid.Row="0" Grid.Column="0"/>
                    <CheckBox x:Name="cbContractRegeditBook" Content="承包权证" IsChecked="{Binding ExportDataSummaryTableTypes.ExportContractRegeditBook,Mode=TwoWay}"
                      VerticalAlignment="Center"   Margin="20,5,10,5" Grid.Row="1" Grid.Column="0"/>
                    <Label Content="登记簿主要包括承包方、承包地块、发包方信息及变动登记信息" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Margin="0,8,0,0"/>
                    <Label Content="承包权证主要包括权证编号、起止日期、承包方、承包地块及地块、共有人扩展信息等" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,0,0"/>
                </Grid>
            </cmps:MetroExpander>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="5,5,10,0" Grid.Row="4">
                <metro:MetroButton  HorizontalAlignment="Right"  
                            VerticalAlignment="Center"
                            Name="BtnZoneLayoutVisioMap" 
                            Width="85" 
                            Height="30"
                            Margin="20,3,8,3"
                            Padding="1"         
                            Style="{StaticResource Metro_Button_Paneled_Style}"
                            Grid.Row="0" Grid.Column="1" 
                            Click="ExportAllSelectData" VerticalContentAlignment="Center">
                    <cmps:ImageTextItem Image="pack://application:,,,/YuLinTu.Resources;component/Images/16/tick.png" Text="导出">
                    </cmps:ImageTextItem>
                </metro:MetroButton>
            </StackPanel>
           
        </Grid>   
    </Grid>
</UserControl>