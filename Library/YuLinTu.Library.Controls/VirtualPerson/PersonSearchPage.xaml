<metro:MetroWindowBase x:Class="YuLinTu.Library.Controls.PersonSearchPage"
                            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                            xmlns:wpftoolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
                            xmlns:metro="clr-namespace:YuLinTu.Windows.Wpf.Metro;assembly=YuLinTu.Windows.Wpf.Metro"
                            xmlns:cmps="clr-namespace:YuLinTu.Windows.Wpf.Metro.Components;assembly=YuLinTu.Windows.Wpf.Metro"
                             xmlns:am="clr-namespace:YuLinTu.Library.Controls"
                            Icon="pack://application:,,,/YuLinTu.Resources;component/Images/16/property.png"
                            Title="查找" ResizeMode="NoResize" MinimizeCaptionButtonVisibility="Collapsed" MaximizeCaptionButtonVisibility="Collapsed"
                            Height="166" Width="300" Topmost="True" WindowState="Normal" WindowStartupLocation="CenterScreen" ShowInTaskbar="False"  >
    <StackPanel Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.Resources>
                <Style x:Key="LableStyle" TargetType="Label">
                    <Setter Property="Height" Value="25"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                    <Setter Property="HorizontalAlignment" Value="Left"/>
                </Style>
            </Grid.Resources>
            <Grid Margin="10,20,10,5" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="36"/>
                    <RowDefinition Height="36"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70"/>
                    <ColumnDefinition Width="215"/>
                </Grid.ColumnDefinitions>

                <Label Content="姓名:" Grid.Column="0" Style="{StaticResource LableStyle}" HorizontalAlignment="Right" />
                <cmps:MetroTextBox Name="txtName"  Height="25" Grid.Column="1" VerticalAlignment="Center" TextChanged="txtName_TextChanged" />

                <Label Content="证件号码:" Grid.Row="1" Grid.Column="0" ToolTip="被合并的户" Style="{StaticResource LableStyle}" HorizontalAlignment="Right"/>
                <cmps:MetroTextBox Name="txtNumber" Grid.Row="1" Height="25"  Grid.Column="1" VerticalAlignment="Center" TextChanged="txtNumber_TextChanged" />

                <StackPanel Grid.Row="2" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom">
                    <metro:MetroButton Name="btnUp" Height="30" Width="72" Margin="10,0,10,0" DockPanel.Dock="Right"
                               Padding="5" Style="{StaticResource Metro_Button_Paneled_Style}" Click="btnUp_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image RenderOptions.BitmapScalingMode="NearestNeighbor" Stretch="None" SnapsToDevicePixels="True"
                    Source="pack://application:,,,/YuLinTu.Library.Resources;component/Resources/查找数据_16.png"></Image>
                            <TextBlock Margin="3,0,0,0"
                           VerticalAlignment="Center"
                         Text="上一个"></TextBlock>
                        </StackPanel>
                    </metro:MetroButton>
                    <metro:MetroButton Name="btnDown" Height="30" Width="72" Margin="10,0,0,0" DockPanel.Dock="Right"
                               Padding="5" Style="{StaticResource Metro_Button_Paneled_Style}" Click="btnDown_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image RenderOptions.BitmapScalingMode="NearestNeighbor" Stretch="None" SnapsToDevicePixels="True" Source="pack://application:,,,/YuLinTu.Library.Resources;component/Resources/查找数据_16.png"></Image>
                            <TextBlock Margin="3,0,0,0"
                           VerticalAlignment="Center"
                         Text="下一个"></TextBlock>
                        </StackPanel>
                    </metro:MetroButton>
                    <metro:MetroButton Name="btnSearch" Height="30" Margin="10,0,10,0" Width="72" DockPanel.Dock="Right" IsEnabled="False"
                               Padding="5"  Style="{StaticResource Metro_Button_Paneled_Style}" Click="btnSearch_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image RenderOptions.BitmapScalingMode="NearestNeighbor" Stretch="None" SnapsToDevicePixels="True" Source="pack://application:,,,/YuLinTu.Library.Resources;component/Resources/查找数据_16.png"></Image>
                            <TextBlock Margin="3,0,0,0"
                           VerticalAlignment="Center"
                         Text="查询"></TextBlock>
                        </StackPanel>
                    </metro:MetroButton>
                </StackPanel>
            </Grid>
        </Grid>
    </StackPanel>
</metro:MetroWindowBase>