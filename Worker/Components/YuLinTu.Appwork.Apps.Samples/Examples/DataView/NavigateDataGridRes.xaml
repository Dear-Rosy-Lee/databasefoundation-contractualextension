<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:wpftk="http://schemas.xceed.com/wpf/xaml/toolkit"
                    xmlns:ylt="http://schemas.yulintu.com/wpf/xaml/framework"
                    xmlns:local="clr-namespace:YuLinTu.Appwork.Apps.Samples">
    
    <local:CountryToImageConverter x:Key="CountryToImageConverter"></local:CountryToImageConverter>

    <HierarchicalDataTemplate DataType="{x:Type local:NavigateItemCountry}">
        <Grid ClipToBounds="True"
              HorizontalAlignment="Stretch"
              Margin="0"
              ToolTip="{Binding Name}">
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Stretch"
                        Margin="2,6,2,6">
                <Image MaxHeight="20"
                       VerticalAlignment="Center"
                       Source="{Binding Name, Converter={StaticResource CountryToImageConverter}}"></Image>
                <TextBlock VerticalAlignment="Center"
                           Margin="5,0,0,0"
                           Text="{Binding Name}"></TextBlock>

            </StackPanel>
        </Grid>

    </HierarchicalDataTemplate>

</ResourceDictionary>