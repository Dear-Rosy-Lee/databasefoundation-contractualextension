<am:InfoPageBase  x:Class="YuLinTu.Library.Controls.AnnouncementDateSetting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:am="clr-namespace:YuLinTu.Library.Controls"
             xmlns:wpftoolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:metro="clr-namespace:YuLinTu.Windows.Wpf.Metro;assembly=YuLinTu.Windows.Wpf.Metro"
             xmlns:cmps="clr-namespace:YuLinTu.Windows.Wpf.Metro.Components;assembly=YuLinTu.Windows.Wpf.Metro" 
             Icon="pack://application:,,,/YuLinTu.Resources;component/Images/16/property.png"
             Width="450" Header="公示公告信息设置">
    <Grid Background="{DynamicResource Metro_Window_Style_Background_Content}">
        <Grid.Resources>
            <Style x:Key="LableStyle" TargetType="Label">
                <Setter Property="Height" Value="25"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Margin="10,10,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="40"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <CheckBox Name="cbEndDate" Content="截止日期:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="6,0,0,0"/>
            <wpftoolkit:DateTimeUpDown Grid.Row="0" Grid.Column="1" Name="dtEndDate" Height="30" Format="ShortDate" FormatString="yyyy年MM月dd日"
                                       IsEnabled="{Binding ElementName=cbEndDate, Path=IsChecked}" VerticalAlignment="Center"/>

            <Label Content="申请单位与地址:" Name="lbUnitAndAddress" Grid.Row="1" Grid.Column="0" 
                   VerticalAlignment="Center" HorizontalContentAlignment="Left" Style="{StaticResource LableStyle}"/>
            <cmps:MetroTextBox Name="txtUnitAndAddress" Grid.Row="1" Grid.Column="1" Height="30" VerticalAlignment="Center" VerticalContentAlignment="Center"/>

            <Label Content="盖章单位:" Name="lbStampUnit" Grid.Row="2" Grid.Column="0"
                   VerticalAlignment="Center"  HorizontalContentAlignment="Left"  Style="{StaticResource LableStyle}"/>
            <cmps:MetroTextBox Name="txtStampUnit" Grid.Row="2" Grid.Column="1" Height="30" VerticalAlignment="Center" VerticalContentAlignment="Center"/>

            <CheckBox Name="cbAnnouncementDate" Content="公告日期:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="6,0,0,0"/>
            <wpftoolkit:DateTimeUpDown Grid.Row="3" Grid.Column="1" Name="dtAnnouncementDate" Height="30" Format="ShortDate" FormatString="yyyy年MM月dd日"
                                       IsEnabled="{Binding ElementName=cbAnnouncementDate, Path=IsChecked}" VerticalAlignment="Center"/>

        </Grid>
        <Border BorderThickness="0,1,0,0" Grid.Row="1" BorderBrush="LightGray" Margin="10,0,10,0" SnapsToDevicePixels="True">
            <DockPanel HorizontalAlignment="Stretch" LastChildFill="True" VerticalAlignment="Bottom" Margin="0,5,0,5" DockPanel.Dock="Bottom">
                <metro:MetroButton Height="30" DockPanel.Dock="Right"
                               Padding="5" Margin="5,0,0,0"
                               Command="{x:Static metro:MetroCommands.CloseTabMessageBoxCommand}"
                               Style="{StaticResource Metro_Button_Paneled_Style}">
                    <StackPanel Orientation="Horizontal">
                        <Image RenderOptions.BitmapScalingMode="NearestNeighbor"
                    Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/application--minus.png"></Image>
                        <TextBlock Margin="3,0,0,0"
                           VerticalAlignment="Center"
                         Text="取消"></TextBlock>
                    </StackPanel>
                </metro:MetroButton>
                <metro:MetroButton DockPanel.Dock="Right"
                               Padding="5" x:Name="btnConfirm"
                               Height="30" Click="btnConfirm_Click"
                               Style="{StaticResource Metro_Button_Paneled_Style}">
                    <StackPanel Orientation="Horizontal">
                        <Image RenderOptions.BitmapScalingMode="NearestNeighbor" Stretch="None"
                       Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/tick.png"></Image>
                        <TextBlock Margin="3,0,0,0"
                           VerticalAlignment="Center"
                           Text="确定"></TextBlock>
                    </StackPanel>
                </metro:MetroButton>
                <Label Name="lbInfo" DockPanel.Dock="Left" VerticalAlignment="Center"/>
            </DockPanel>
        </Border>
    </Grid>
</am:InfoPageBase >
