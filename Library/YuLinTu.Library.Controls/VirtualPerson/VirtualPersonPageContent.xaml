<UserControl x:Class="YuLinTu.Library.Controls.VirtualPersonPageContent"
                            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                            xmlns:wpftoolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
                            xmlns:metro="clr-namespace:YuLinTu.Windows.Wpf.Metro;assembly=YuLinTu.Windows.Wpf.Metro"
                            xmlns:cmps="clr-namespace:YuLinTu.Windows.Wpf.Metro.Components;assembly=YuLinTu.Windows.Wpf.Metro">
    <!--<UserControl.BindingGroup>
        <BindingGroup></BindingGroup>
    </UserControl.BindingGroup>-->
    <Grid >
        <Grid.Resources>
            <Style x:Key="LableStyle" TargetType="Label">
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
            </Style>
        </Grid.Resources>
        <cmps:MetroListTabControl Name="tbControl" Margin="10,10,10,5" SelectedIndex="0" Direction="Top" BorderThickness="0,1,0,0">
            <cmps:MetroListTabItem Header="承包方信息" x:FieldModifier="public" x:Name="tbitemFoundation">
                <Grid Height="345" Validation.ErrorTemplate="{x:Null}" Margin="10">
                    <!--<Grid.BindingGroup>
                        <BindingGroup></BindingGroup>
                    </Grid.BindingGroup>-->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="95"/>
                        <ColumnDefinition Width="202"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="203"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Label Content="承包方编码:" Grid.Row="0" Style="{StaticResource LableStyle}" />
                    <DockPanel LastChildFill="True" Grid.Row="0" Grid.Column="1">
                        <cmps:MetroTextBox Height="30" TabIndex="1" Name="txtNum" BorderThickness="1,1,1,1" Margin="-1,0,0,0" PreviewKeyDown="mtbCode_PreviewKeyDown" 
                                           PreviewTextInput="mtbCode_PreviewTextInput" TextChanged="txtNum_TextChanged" DockPanel.Dock="Right" 
                                           Width="60" MaxLength="4" InputMethod.IsInputMethodEnabled="False" IsEnabled="True" VerticalAlignment="Center"/>
                        <cmps:MetroTextBox Height="30" Name="txtFamilyNum"  IsEnabled="False"  TextAlignment="Right" BorderThickness="1,1,0,1" VerticalAlignment="Center"/>
                    </DockPanel>
                    <Label Content="类型:" Grid.Row="0" Style="{StaticResource LableStyle}" Grid.Column="2" />
                    <cmps:MetroComboBox Name="cbType" Grid.Row="0" Grid.Column="3" Padding="7,0,0,0" Height="30" VerticalAlignment="Center" TabIndex="2" SelectionChanged="cbType_SelectionChanged"/>
                    <cmps:ImageTextItem Text="姓名:" Grid.Row="1" Margin="5,0,0,0" IsRequired="True"></cmps:ImageTextItem>
                    <!--<TextBlock Text="姓名:" Grid.Row="1" VerticalAlignment="Center" Width="100"></TextBlock>-->
                    <cmps:MetroTextBox Name="txt_Name" Height="30" Grid.Row="1" Grid.Column="1">
                        <cmps:MetroTextBox.Text>
                            <Binding Path="Contractor.Name"
                                                     Mode="TwoWay"
                                                     BindingGroupName=""
                                                     ValidatesOnDataErrors="True"
                                                     UpdateSourceTrigger="LostFocus"                                     >
                            </Binding>
                        </cmps:MetroTextBox.Text>
                    </cmps:MetroTextBox>
                    <!--<Label Content="姓名:" Grid.Row="1" Style="{StaticResource LableStyle}"  />-->
                    <!--<cmps:MetroTextBox Height="30" Name="txt_Name" Grid.Row="1" Text="{Binding Contractor.Name,Mode=TwoWay}" Grid.Column="1" MaxLength="20" VerticalAlignment="Center" TabIndex="3" TextChanged="txt_Name_TextChanged"/>-->
                    <Label Content="民族:" Grid.Row="1" Grid.Column="2" Style="{StaticResource LableStyle}" />
                    <cmps:MetroComboBox Name="cbNation" MaxDropDownHeight="150" Grid.Row="1" Height="30" Grid.Column="3" Padding="7,0,0,0" Grid.ColumnSpan="3" VerticalAlignment="Center" TabIndex="4" SelectionChanged="cbNation_SelectionChanged"/>

                    <Label Content="证件类型:" Grid.Row="2" Style="{StaticResource LableStyle}" Visibility="{Binding ElementName=txt_Phone,Path=Visibility}"  />
                    <cmps:MetroComboBox Name="cbCardType" Height="30" VerticalAlignment="Center" Grid.ColumnSpan="3" Padding="7,0,0,0"  Grid.Row="2" Grid.Column="1" TabIndex="7" SelectionChanged="cbCardType_SelectionChanged"/>

                    <Label Content="证件号码:" Grid.Row="3" Style="{StaticResource LableStyle}"/>
                    <cmps:MetroTextBox Height="30" Name="txt_ICN" Text="{Binding Contractor.Number,Mode=TwoWay}" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" MaxLength="18" TextChanged="txt_ICN_TextChanged" VerticalAlignment="Center" TabIndex="5"/>

                    <Label Content="年龄:"  Grid.Row="4" Grid.Column="2" Style="{StaticResource LableStyle}" />
                    <!--<cmps:MetroTextBox Height="30" Name="txt_Age" IsEnabled="False" Grid.Column="3" Grid.Row="4"  VerticalAlignment="Center"/>-->
                    <wpftoolkit:DoubleUpDown   x:Name="txt_Age" Minimum="0"  Grid.Row="4" Grid.Column="3" Height="30"
                                            VerticalAlignment="Center" Increment="1" BorderThickness="1" IsEnabled="False"
                                            Maximum="200" />

                    <Label Content="性别:" Grid.Row="4" Style="{StaticResource LableStyle}"/>
                    <cmps:MetroComboBox Name="cbGender" IsEnabled="False" Height="30" Grid.Row="4" Grid.Column="1" Padding="7,0,0,0" VerticalAlignment="Center" SelectionChanged="cbGender_SelectionChanged"/>

                    <Label Content="邮编:" Grid.Row="5" Grid.Column="0" Style="{StaticResource LableStyle}"/>
                    <cmps:MetroTextBox Height="30" InputMethod.IsInputMethodEnabled="False" Name="txtZip" PreviewKeyDown="mtbCode_PreviewKeyDown" PreviewTextInput="mtbCode_PreviewTextInput" Text="{Binding Contractor.PostalNumber,Mode=TwoWay}" MaxLength="6" Grid.Row="5" Grid.Column="1" VerticalAlignment="Center" TabIndex="6"/>
                    <Label Content="出生日期:" Grid.Row="5" Grid.Column="2" Style="{StaticResource LableStyle}" />
                    <wpftoolkit:DateTimeUpDown Name="txt_Birthday" Height="30" IsEnabled="False" Format="ShortDate" Grid.Row="5" Grid.Column="3" VerticalAlignment="Center"
                                               AllowSpin="True"                                              
                                               ValueChanged="txt_Birthday_ValueChanged" />
                    <Label Grid.Row="6" Content="变化情况:" Grid.Column="0" Style="{StaticResource LableStyle}" />
                    <cmps:MetroComboBox Name="cbBHQK" Grid.Row="6" Grid.Column="1" Height="30" Padding="7,0,0,0" VerticalAlignment="Center" SelectionChanged="cbBHQK_SelectionChanged" />
                    <Label Content="联系电话:" Grid.Row="7" Style="{StaticResource LableStyle}" Visibility="{Binding ElementName=txt_Phone,Path=Visibility}"/>
                    <cmps:MetroTextBox Height="30" Name="txt_Phone" Text="{Binding Contractor.Telephone,Mode=TwoWay}" MaxLength="40"   Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="3" VerticalAlignment="Center" TabIndex="8"/>

                    <Label Content="备注:"  Grid.Row="8"  Style="{StaticResource LableStyle}" VerticalAlignment="Top" Margin="0,10,0,0"/>
                    <cmps:MetroTextBox Name="txt_Comment"  AcceptsReturn="True" Text="{Binding Contractor.Comment,Mode=TwoWay}" MaxLength="200" TextWrapping="Wrap" VerticalContentAlignment="Top"                            
                                       VerticalAlignment="Stretch" Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="3" Margin="0,5,0,0" TabIndex="9"/>
                </Grid>
            </cmps:MetroListTabItem>
            <cmps:MetroListTabItem Header="调查信息" x:FieldModifier="public" x:Name="tbitemExpand">
                <Grid Validation.ErrorTemplate="{x:Null}" Margin="10">
                    <!--<Grid.BindingGroup>
                        <BindingGroup></BindingGroup>
                    </Grid.BindingGroup>-->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="95"/>
                        <ColumnDefinition Width="195"/>
                        <ColumnDefinition Width="95"/>
                        <ColumnDefinition Width="195"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Content="承包方地址:" Style="{StaticResource LableStyle}"  />
                    <cmps:MetroTextBox Height="30" Name="txtAddress" Text="{Binding Contractor.Address,Mode=TwoWay}" Grid.Column="1" Grid.ColumnSpan="3" MaxLength="100" VerticalAlignment="Center"/>

                    <Label Content="调查员:"  Grid.Row="1" Style="{StaticResource LableStyle}"   />
                    <cmps:MetroTextBox Height="30" Name="txtSurvey" Text="{Binding FamilyExpand.SurveyPerson,Mode=TwoWay}" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center"/>
                    <Label Content="调查日期:" Grid.Row="1" Style="{StaticResource LableStyle}" Grid.Column="2" />
                    <wpftoolkit:DateTimeUpDown Height="30" Name="txtSurveyDate" Value="{Binding FamilyExpand.SurveyDate,Mode=TwoWay}" Format="ShortDate" FormatString="yyyy年MM月dd日" Grid.Row="1" Grid.Column="3" VerticalAlignment="Center"/>

                    <Label Content="调查记事:" Style="{StaticResource LableStyle}" Grid.Row="2" />
                    <cmps:MetroTextBox Height="30" AcceptsReturn="True" Name="txtSurveyInfo" TextWrapping="Wrap"  Text="{Binding FamilyExpand.SurveyChronicle,Mode=TwoWay}" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" MaxLength="250" VerticalAlignment="Center"/>

                    <Label Content="审核人:" Grid.Row="3" Style="{StaticResource LableStyle}"/>
                    <cmps:MetroTextBox Height="30" Name="txtCheck"  Text="{Binding FamilyExpand.CheckPerson,Mode=TwoWay}" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center"/>
                    <Label Content="审核日期:" Grid.Row="3" Grid.Column="2" Style="{StaticResource LableStyle}" />
                    <wpftoolkit:DateTimeUpDown Height="30" Name="txtCheckDate" Value="{Binding FamilyExpand.CheckDate,Mode=TwoWay}"  Grid.Row="3" Format="ShortDate" FormatString="yyyy年MM月dd日" Grid.Column="3" Grid.ColumnSpan="3" VerticalAlignment="Center"/>

                    <Label Content="审核意见:" Style="{StaticResource LableStyle}" Grid.Row="4" />
                    <cmps:MetroTextBox Height="30" AcceptsReturn="True" TextWrapping="Wrap" Name="txtCheckInfo" Grid.Row="4" Text="{Binding FamilyExpand.CheckOpinion,Mode=TwoWay}" Grid.Column="1" Grid.ColumnSpan="3" MaxLength="150" VerticalAlignment="Center"/>

                    <Label Content="公示记事人:" Grid.Row="5" Style="{StaticResource LableStyle}"/>
                    <cmps:MetroTextBox Height="30" Name="txtPub"  Grid.Row="5" Text="{Binding FamilyExpand.PublicityChroniclePerson,Mode=TwoWay}" Grid.Column="1" VerticalAlignment="Center"/>
                    <Label Content="公示日期:" Grid.Row="5" Grid.Column="2" Style="{StaticResource LableStyle}" />
                    <wpftoolkit:DateTimeUpDown Name="txtPubDate" Height="30" Value="{Binding FamilyExpand.PublicityDate,Mode=TwoWay}" Format="ShortDate" FormatString="yyyy年MM月dd日" Grid.Row="5" Grid.Column="3" Grid.ColumnSpan="3" VerticalAlignment="Center"/>

                    <Label Content="公示记事:" Style="{StaticResource LableStyle}" Grid.Row="6" />
                    <cmps:MetroTextBox Height="30" Name="txtPubInfo"  AcceptsReturn="True" TextWrapping="Wrap" Text="{Binding FamilyExpand.PublicityChronicle,Mode=TwoWay}" Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="3" MaxLength="250" VerticalAlignment="Center"/>

                    <Label Content="公示审核人:" Grid.Row="7" Style="{StaticResource LableStyle}"/>
                    <cmps:MetroTextBox Height="30" Name="txtPubPerson" Text="{Binding FamilyExpand.PublicityCheckPerson,Mode=TwoWay}"  Grid.Row="7" Grid.Column="1" VerticalAlignment="Center"/>
                    <Label Content="取得承包方式:" Grid.Row="7" Grid.Column="2" Style="{StaticResource LableStyle}" />
                    <cmps:MetroComboBox Name="cbContractWay" Height="30" Grid.Row="7" Padding="7,0,0,0" Grid.Column="3" Grid.ColumnSpan="3" VerticalAlignment="Center" SelectionChanged="cbContractWay_SelectionChanged"/>

                    <Label Content="承包合同编号:" Grid.Row="8" Style="{StaticResource LableStyle}"/>
                    <cmps:MetroTextBox Height="30" Name="txtConcordNum"  Text="{Binding FamilyExpand.ConcordNumber,Mode=TwoWay}" Grid.Row="8" Grid.Column="1" VerticalAlignment="Center"/>
                    <Label Content="经营权证编号:" Grid.Row="8" Grid.Column="2" Style="{StaticResource LableStyle}" />
                    <cmps:MetroTextBox Height="30" Name="txtBookNum" Text="{Binding FamilyExpand.WarrantNumber,Mode=TwoWay}" Grid.Row="8" Grid.Column="3" Grid.ColumnSpan="3" VerticalAlignment="Center"/>

                    <Label Content="承包起始日期:" Grid.Row="9" Style="{StaticResource LableStyle}"/>
                    <wpftoolkit:DateTimeUpDown  Margin="0,5,0,0" Height="30" Name="txtStartTime" Value="{Binding FamilyExpand.ConcordStartTime,Mode=TwoWay}" Format="ShortDate" FormatString="yyyy年MM月dd日"  Grid.Row="9" Grid.Column="1" VerticalAlignment="Center"/>
                    <Label Content="承包结束日期:" Grid.Row="9" Grid.Column="2" Style="{StaticResource LableStyle}" />
                    <wpftoolkit:DateTimeUpDown  Height="30" Margin="0,5,0,0"  Name="txtEndTime" Value="{Binding FamilyExpand.ConcordEndTime,Mode=TwoWay}" Format="ShortDate" FormatString="yyyy年MM月dd日" Grid.Row="9" Grid.Column="3" Grid.ColumnSpan="3" VerticalAlignment="Center"/>
                </Grid>
            </cmps:MetroListTabItem>
        </cmps:MetroListTabControl>
    </Grid>
</UserControl>