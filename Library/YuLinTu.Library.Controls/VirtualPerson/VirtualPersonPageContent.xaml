<UserControl
    x:Class="YuLinTu.Library.Controls.VirtualPersonPageContent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cmps="clr-namespace:YuLinTu.Windows.Wpf.Metro.Components;assembly=YuLinTu.Windows.Wpf.Metro"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:metro="clr-namespace:YuLinTu.Windows.Wpf.Metro;assembly=YuLinTu.Windows.Wpf.Metro"
    xmlns:wpftoolkit="http://schemas.xceed.com/wpf/xaml/toolkit">
    <!--<UserControl.BindingGroup>
        <BindingGroup></BindingGroup>
    </UserControl.BindingGroup>-->
    <Grid>
        <Grid.Resources>
            <Style x:Key="LableStyle" TargetType="Label">
                <Setter Property="VerticalContentAlignment" Value="Center" />
                <Setter Property="VerticalAlignment" Value="Center" />
                <Setter Property="HorizontalContentAlignment" Value="Left" />
                <Setter Property="HorizontalAlignment" Value="Left" />
            </Style>
        </Grid.Resources>
        <cmps:MetroListTabControl
            Name="tbControl"
            Margin="10,10,10,5"
            BorderThickness="0,1,0,0"
            Direction="Top"
            SelectedIndex="0">
            <cmps:MetroListTabItem
                x:Name="tbitemFoundation"
                x:FieldModifier="public"
                Header="承包方信息">
                <Grid
                    Height="345"
                    Margin="10"
                    Validation.ErrorTemplate="{x:Null}">
                    <!--<Grid.BindingGroup>
                        <BindingGroup></BindingGroup>
                    </Grid.BindingGroup>-->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="95" />
                        <ColumnDefinition Width="202" />
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="203" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Label
                        Grid.Row="0"
                        Content="承包方编码:"
                        Style="{StaticResource LableStyle}" />
                    <DockPanel
                        Grid.Row="0"
                        Grid.Column="1"
                        LastChildFill="True">
                        <cmps:MetroTextBox
                            Name="txtNum"
                            Width="60"
                            Height="30"
                            Margin="-1,0,0,0"
                            VerticalAlignment="Center"
                            BorderThickness="1,1,1,1"
                            DockPanel.Dock="Right"
                            InputMethod.IsInputMethodEnabled="False"
                            IsEnabled="True"
                            MaxLength="4"
                            PreviewKeyDown="mtbCode_PreviewKeyDown"
                            PreviewTextInput="mtbCode_PreviewTextInput"
                            TabIndex="1"
                            TextChanged="txtNum_TextChanged" />
                        <cmps:MetroTextBox
                            Name="txtFamilyNum"
                            Height="30"
                            VerticalAlignment="Center"
                            BorderThickness="1,1,0,1"
                            IsEnabled="False"
                            TextAlignment="Right" />
                    </DockPanel>
                    <Label
                        Grid.Row="0"
                        Grid.Column="2"
                        Content="原承包方编码:"
                        Style="{StaticResource LableStyle}" />
                    <DockPanel
                        Grid.Row="0"
                        Grid.Column="4"
                        Grid.ColumnSpan="1"
                        LastChildFill="True">
                        <cmps:MetroTextBox
                            x:Name="txtOldCode"
                            Height="30"
                            VerticalContentAlignment="Center"
                            MaxLength="19"
                            TabIndex="4"
                            Text="{Binding Contractor.OldVirtualCode, Mode=TwoWay}" />
                    </DockPanel>
                    <Label
                        Grid.Row="1"
                        Grid.Column="2"
                        Content="类型:"
                        Style="{StaticResource LableStyle}" />
                    <cmps:MetroComboBox
                        Name="cbType"
                        Grid.Row="1"
                        Grid.Column="3"
                        Height="30"
                        Padding="7,0,0,0"
                        VerticalAlignment="Center"
                        SelectionChanged="cbType_SelectionChanged"
                        TabIndex="2" />
                    <cmps:ImageTextItem
                        Grid.Row="1"
                        Margin="5,0,0,0"
                        IsRequired="True"
                        Text="姓名:" />
                    <!--<TextBlock Text="姓名:" Grid.Row="1" VerticalAlignment="Center" Width="100"></TextBlock>-->
                    <cmps:MetroTextBox
                        Name="txt_Name"
                        Grid.Row="1"
                        Grid.Column="1"
                        Height="30">
                        <cmps:MetroTextBox.Text>
                            <Binding
                                BindingGroupName=""
                                Mode="TwoWay"
                                Path="Contractor.Name"
                                UpdateSourceTrigger="LostFocus"
                                ValidatesOnDataErrors="True" />
                        </cmps:MetroTextBox.Text>
                    </cmps:MetroTextBox>
                    <!--<Label Content="姓名:" Grid.Row="1" Style="{StaticResource LableStyle}"  />-->
                    <!--<cmps:MetroTextBox Height="30" Name="txt_Name" Grid.Row="1" Text="{Binding Contractor.Name,Mode=TwoWay}" Grid.Column="1" MaxLength="20" VerticalAlignment="Center" TabIndex="3" TextChanged="txt_Name_TextChanged"/>-->
                    <Label
                        Grid.Row="4"
                        Grid.Column="2"
                        Content="民族:"
                        Style="{StaticResource LableStyle}" />
                    <cmps:MetroComboBox
                        Name="cbNation"
                        Grid.Row="4"
                        Grid.Column="3"
                        Grid.ColumnSpan="3"
                        Height="30"
                        Padding="7,0,0,0"
                        VerticalAlignment="Center"
                        MaxDropDownHeight="150"
                        SelectionChanged="cbNation_SelectionChanged"
                        TabIndex="4" />

                    <Label
                        Grid.Row="2"
                        Content="证件类型:"
                        Style="{StaticResource LableStyle}"
                        Visibility="{Binding ElementName=txt_Phone, Path=Visibility}" />
                    <cmps:MetroComboBox
                        Name="cbCardType"
                        Grid.Row="2"
                        Grid.Column="1"
                        Grid.ColumnSpan="3"
                        Height="30"
                        Padding="7,0,0,0"
                        VerticalAlignment="Center"
                        SelectionChanged="cbCardType_SelectionChanged"
                        TabIndex="7" />

                    <Label
                        Grid.Row="3"
                        Content="证件号码:"
                        Style="{StaticResource LableStyle}" />
                    <cmps:MetroTextBox
                        Name="txt_ICN"
                        Grid.Row="3"
                        Grid.Column="1"
                        Grid.ColumnSpan="3"
                        Height="30"
                        VerticalAlignment="Center"
                        MaxLength="18"
                        TabIndex="5"
                        Text="{Binding Contractor.Number, Mode=TwoWay}"
                        TextChanged="txt_ICN_TextChanged" />

                    <Label
                        Grid.Row="5"
                        Grid.Column="2"
                        Content="年龄:"
                        Style="{StaticResource LableStyle}" />
                    <!--<cmps:MetroTextBox Height="30" Name="txt_Age" IsEnabled="False" Grid.Column="3" Grid.Row="4"  VerticalAlignment="Center"/>-->
                    <wpftoolkit:DoubleUpDown
                        x:Name="txt_Age"
                        Grid.Row="5"
                        Grid.Column="3"
                        Height="30"
                        VerticalAlignment="Center"
                        BorderThickness="1"
                        Increment="1"
                        IsEnabled="False"
                        Maximum="200"
                        Minimum="0" />

                    <Label
                        Grid.Row="4"
                        Content="性别:"
                        Style="{StaticResource LableStyle}" />
                    <cmps:MetroComboBox
                        Name="cbGender"
                        Grid.Row="4"
                        Grid.Column="1"
                        Height="30"
                        Padding="7,0,0,0"
                        VerticalAlignment="Center"
                        IsEnabled="False"
                        SelectionChanged="cbGender_SelectionChanged" />

                    <Label
                        Grid.Row="5"
                        Grid.Column="0"
                        Content="邮编:"
                        Style="{StaticResource LableStyle}" />
                    <cmps:MetroTextBox
                        Name="txtZip"
                        Grid.Row="5"
                        Grid.Column="1"
                        Height="30"
                        VerticalAlignment="Center"
                        InputMethod.IsInputMethodEnabled="False"
                        MaxLength="6"
                        PreviewKeyDown="mtbCode_PreviewKeyDown"
                        PreviewTextInput="mtbCode_PreviewTextInput"
                        TabIndex="6"
                        Text="{Binding Contractor.PostalNumber, Mode=TwoWay}" />
                    <Label
                        Grid.Row="6"
                        Grid.Column="2"
                        Content="出生日期:"
                        Style="{StaticResource LableStyle}" />
                    <wpftoolkit:DateTimeUpDown
                        Name="txt_Birthday"
                        Grid.Row="6"
                        Grid.Column="3"
                        Height="30"
                        VerticalAlignment="Center"
                        AllowSpin="True"
                        Format="ShortDate"
                        IsEnabled="False"
                        ValueChanged="txt_Birthday_ValueChanged" />
                    <Label
                        Grid.Row="6"
                        Grid.Column="0"
                        Content="变化情况:"
                        Style="{StaticResource LableStyle}" />
                    <cmps:MetroComboBox
                        Name="cbBHQK"
                        Grid.Row="6"
                        Grid.Column="1"
                        Height="30"
                        Padding="7,0,0,0"
                        VerticalAlignment="Center"
                        SelectionChanged="cbBHQK_SelectionChanged" />
                    <Label
                        Grid.Row="7"
                        Content="联系电话:"
                        Style="{StaticResource LableStyle}"
                        Visibility="{Binding ElementName=txt_Phone, Path=Visibility}" />
                    <cmps:MetroTextBox
                        Name="txt_Phone"
                        Grid.Row="7"
                        Grid.Column="1"
                        Grid.ColumnSpan="3"
                        Height="30"
                        VerticalAlignment="Center"
                        MaxLength="40"
                        TabIndex="8"
                        Text="{Binding Contractor.Telephone, Mode=TwoWay}" />

                    <Label
                        Grid.Row="8"
                        Margin="0,10,0,0"
                        VerticalAlignment="Top"
                        Content="备注:"
                        Style="{StaticResource LableStyle}" />
                    <cmps:MetroTextBox
                        Name="txt_Comment"
                        Grid.Row="8"
                        Grid.Column="1"
                        Grid.ColumnSpan="3" 
                        Margin="0,5,0,0"
                        VerticalAlignment="Stretch"
                        VerticalContentAlignment="Top"
                        AcceptsReturn="True"
                        MaxLength="220"
                        TabIndex="9"
                        Text="{Binding Contractor.Comment, Mode=TwoWay}"
                        TextWrapping="Wrap" />
                </Grid>
            </cmps:MetroListTabItem>
            <cmps:MetroListTabItem
                x:Name="tbitemExpand"
                x:FieldModifier="public"
                Header="调查信息">
                <Grid Margin="10" Validation.ErrorTemplate="{x:Null}">
                    <!--<Grid.BindingGroup>
                        <BindingGroup></BindingGroup>
                    </Grid.BindingGroup>-->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="95" />
                        <ColumnDefinition Width="202" />
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="203" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Label Content="承包方地址:" Style="{StaticResource LableStyle}" />
                    <cmps:MetroTextBox
                        Name="txtAddress"
                        Grid.Column="1"
                        Grid.ColumnSpan="3"
                        Height="30"
                        VerticalAlignment="Center"
                        MaxLength="100"
                        Text="{Binding Contractor.Address, Mode=TwoWay}" />

                    <Label
                        Grid.Row="1"
                        Content="调查员:"
                        Style="{StaticResource LableStyle}" />
                    <cmps:MetroTextBox
                        Name="txtSurvey"
                        Grid.Row="1"
                        Grid.Column="1"
                        Height="30"
                        VerticalAlignment="Center"
                        Text="{Binding FamilyExpand.SurveyPerson, Mode=TwoWay}" />
                    <Label
                        Grid.Row="1"
                        Grid.Column="2"
                        Content="调查日期:"
                        Style="{StaticResource LableStyle}" />
                    <wpftoolkit:DateTimeUpDown
                        Name="txtSurveyDate"
                        Grid.Row="1"
                        Grid.Column="3"
                        Height="30"
                        VerticalAlignment="Center"
                        Format="ShortDate"
                        FormatString="yyyy年MM月dd日"
                        Value="{Binding FamilyExpand.SurveyDate, Mode=TwoWay}" />

                    <Label
                        Grid.Row="2"
                        Content="调查记事:"
                        Style="{StaticResource LableStyle}" />
                    <cmps:MetroTextBox
                        Name="txtSurveyInfo"
                        Grid.Row="2"
                        Grid.Column="1"
                        Grid.ColumnSpan="3"
                        Height="45"
                        VerticalAlignment="Center"
                        AcceptsReturn="True"
                        MaxLength="250"
                        Text="{Binding FamilyExpand.SurveyChronicle, Mode=TwoWay}"
                        TextWrapping="Wrap" />

                    <Label
                        Grid.Row="3"
                        Content="审核人:"
                        Style="{StaticResource LableStyle}" />
                    <cmps:MetroTextBox
                        Name="txtCheck"
                        Grid.Row="3"
                        Grid.Column="1"
                        Height="30"
                        VerticalAlignment="Center"
                        Text="{Binding FamilyExpand.CheckPerson, Mode=TwoWay}" />
                    <Label
                        Grid.Row="3"
                        Grid.Column="2"
                        Content="审核日期:"
                        Style="{StaticResource LableStyle}" />
                    <wpftoolkit:DateTimeUpDown
                        Name="txtCheckDate"
                        Grid.Row="3"
                        Grid.Column="3"
                        Grid.ColumnSpan="3"
                        Height="30"
                        VerticalAlignment="Center"
                        Format="ShortDate"
                        FormatString="yyyy年MM月dd日"
                        Value="{Binding FamilyExpand.CheckDate, Mode=TwoWay}" />

                    <Label
                        Grid.Row="4"
                        Content="审核意见:"
                        Style="{StaticResource LableStyle}" />
                    <cmps:MetroTextBox
                        Name="txtCheckInfo"
                        Grid.Row="4"
                        Grid.Column="1"
                        Grid.ColumnSpan="3"
                        Height="30"
                        VerticalAlignment="Center"
                        AcceptsReturn="True"
                        MaxLength="150"
                        Text="{Binding FamilyExpand.CheckOpinion, Mode=TwoWay}"
                        TextWrapping="Wrap" />

                    <Label
                        Grid.Row="5"
                        Content="公示记事人:"
                        Style="{StaticResource LableStyle}" />
                    <cmps:MetroTextBox
                        Name="txtPub"
                        Grid.Row="5"
                        Grid.Column="1"
                        Height="30"
                        VerticalAlignment="Center"
                        Text="{Binding FamilyExpand.PublicityChroniclePerson, Mode=TwoWay}" />
                    <Label
                        Grid.Row="5"
                        Grid.Column="2"
                        Content="公示日期:"
                        Style="{StaticResource LableStyle}" />
                    <wpftoolkit:DateTimeUpDown
                        Name="txtPubDate"
                        Grid.Row="5"
                        Grid.Column="3"
                        Grid.ColumnSpan="3"
                        Height="30"
                        VerticalAlignment="Center"
                        Format="ShortDate"
                        FormatString="yyyy年MM月dd日"
                        Value="{Binding FamilyExpand.PublicityDate, Mode=TwoWay}" />

                    <Label
                        Grid.Row="6"
                        Content="公示记事:"
                        Style="{StaticResource LableStyle}" />
                    <cmps:MetroTextBox
                        Name="txtPubInfo"
                        Grid.Row="6"
                        Grid.Column="1"
                        Grid.ColumnSpan="3"
                        Height="45"
                        VerticalAlignment="Center"
                        AcceptsReturn="True"
                        MaxLength="250"
                        Text="{Binding FamilyExpand.PublicityChronicle, Mode=TwoWay}"
                        TextWrapping="Wrap" />

                    <Label
                        Grid.Row="7"
                        Content="公示审核人:"
                        Style="{StaticResource LableStyle}" />
                    <cmps:MetroTextBox
                        Name="txtPubPerson"
                        Grid.Row="7"
                        Grid.Column="1"
                        Height="30"
                        VerticalAlignment="Center"
                        Text="{Binding FamilyExpand.PublicityCheckPerson, Mode=TwoWay}" />
                    <Label
                        Grid.Row="7"
                        Grid.Column="2"
                        Content="取得承包方式:"
                        Style="{StaticResource LableStyle}" />
                    <cmps:MetroComboBox
                        Name="cbContractWay"
                        Grid.Row="7"
                        Grid.Column="3"
                        Grid.ColumnSpan="3"
                        Height="30"
                        Padding="7,0,0,0"
                        VerticalAlignment="Center"
                        SelectionChanged="cbContractWay_SelectionChanged" />

                    <Label
                        Grid.Row="8"
                        Content="承包合同编号:"
                        Style="{StaticResource LableStyle}" />
                    <cmps:MetroTextBox
                        Name="txtConcordNum"
                        Grid.Row="8"
                        Grid.Column="1"
                        Height="30"
                        VerticalAlignment="Center"
                        Text="{Binding FamilyExpand.ConcordNumber, Mode=TwoWay}" />
                    <Label
                        Grid.Row="8"
                        Grid.Column="2"
                        Content="经营权证编号:"
                        Style="{StaticResource LableStyle}" />
                    <cmps:MetroTextBox
                        Name="txtBookNum"
                        Grid.Row="8"
                        Grid.Column="3"
                        Grid.ColumnSpan="3"
                        Height="30"
                        VerticalAlignment="Center"
                        Text="{Binding FamilyExpand.WarrantNumber, Mode=TwoWay}" />

                    <Label
                        Grid.Row="9"
                        Content="承包起始日期:"
                        Style="{StaticResource LableStyle}" />
                    <wpftoolkit:DateTimeUpDown
                        Name="txtStartTime"
                        Grid.Row="9"
                        Grid.Column="1"
                        Height="30"
                        Margin="0,5,0,0"
                        VerticalAlignment="Center"
                        Format="ShortDate"
                        FormatString="yyyy年MM月dd日"
                        Value="{Binding FamilyExpand.ConcordStartTime, Mode=TwoWay}" />
                    <Label
                        Grid.Row="9"
                        Grid.Column="2"
                        Content="承包结束日期:"
                        Style="{StaticResource LableStyle}" />
                    <wpftoolkit:DateTimeUpDown
                        Name="txtEndTime"
                        Grid.Row="9"
                        Grid.Column="3"
                        Grid.ColumnSpan="3"
                        Height="30"
                        Margin="0,5,0,0"
                        VerticalAlignment="Center"
                        Format="ShortDate"
                        FormatString="yyyy年MM月dd日"
                        Value="{Binding FamilyExpand.ConcordEndTime, Mode=TwoWay}" />
                </Grid>
            </cmps:MetroListTabItem>
        </cmps:MetroListTabControl>
    </Grid>
</UserControl>