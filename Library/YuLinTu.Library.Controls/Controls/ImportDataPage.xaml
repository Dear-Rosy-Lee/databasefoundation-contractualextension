<am:InfoPageBase x:Class="YuLinTu.Library.Controls.ImportDataPage"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:am="clr-namespace:YuLinTu.Library.Controls"
                 xmlns:metro="clr-namespace:YuLinTu.Windows.Wpf.Metro;assembly=YuLinTu.Windows.Wpf.Metro"
                 xmlns:cmps="clr-namespace:YuLinTu.Windows.Wpf.Metro.Components;assembly=YuLinTu.Windows.Wpf.Metro"
                 Icon="pack://application:,,,/YuLinTu.Resources;component/Images/16/property.png"
                 Height="230"
                 Width="550"
                 Header="导入摸底调查表">
    <Grid Background="{DynamicResource Metro_Window_Style_Background_Content}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="40" /> 
                <RowDefinition Height="34*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Label Content="文件路径:"
                   Grid.Row="0"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   HorizontalContentAlignment="Left" />
            <DockPanel LastChildFill="True"
                       Grid.Column="1"
                       Grid.Row="0">
                <metro:MetroButton Style="{StaticResource Metro_Button_Paneled_Style}"
                                   DockPanel.Dock="Right"
                                   Height="30"
                                   VerticalAlignment="Center"
                                   Margin="10,0,0,0"
                                   Width="70"
                                   Click="btnFileSelect_Click"
                                   SnapsToDevicePixels="True">
                    <cmps:ImageTextItem Image="pack://application:,,,/YuLinTu.Library.Resources;component/Resources/路径.png"
                                        Text="浏览">
                    </cmps:ImageTextItem>
                </metro:MetroButton>
                <cmps:MetroTextBox Name="txt_file"
                                   BorderThickness="1"
                                   Height="30"
                                   DockPanel.Dock="Left"
                                   TextChanged="txt_file_TextChanged_1"
                                   SnapsToDevicePixels="True"
                                   VerticalAlignment="Center" />
            </DockPanel>

            <Label Content="导入类型:"
                   Visibility="Collapsed"
                   Grid.Row="1"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   HorizontalContentAlignment="Left"  x:Name="iptctl"/>
            <cmps:MetroComboBox Grid.Column="1"
                                Visibility="{Binding  ElementName=iptctl,Path=Visibility}"
                                Name="cbtype"
                                Grid.Row="1"
                                VerticalAlignment="Center"
                                Height="30"
                                Padding="5,0,0,0">
                <!-- <ComboBoxItem IsSelected="True" Tag="IgnorePart">覆盖属性保留图形数据</ComboBoxItem>
                <ComboBoxItem Tag="Ignore">覆盖全部数据</ComboBoxItem>
                <ComboBoxItem Tag="Over">只覆盖承包方数据</ComboBoxItem>
                <ComboBoxItem Tag="Over">覆盖原有数据</ComboBoxItem>-->
            </cmps:MetroComboBox>
        </Grid>
        <Border BorderBrush="LightGray"
                Grid.Row="1"
                BorderThickness="0,1,0,0"
                Margin="10,0,10,0"
                SnapsToDevicePixels="True">
            <DockPanel  Margin="0,5,0,5"
                        LastChildFill="False"
                        Visibility="{Binding IsBusy, Converter={StaticResource NotBoolToVisibilityHiddenConverter}}">
                <metro:MetroButton DockPanel.Dock="Right"
                                   Margin="5,0,0,0"
                                   Padding="5"
                                   Height="30"
                                   Style="{StaticResource Metro_Button_Paneled_Style}"
                                   Command="{x:Static metro:MetroCommands.CloseTabMessageBoxCommand}">
                    <StackPanel Orientation="Horizontal">
                        <Image RenderOptions.BitmapScalingMode="NearestNeighbor"
                               Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/application--minus.png"></Image>
                        <TextBlock Margin="3,0,0,0"
                                   VerticalAlignment="Center"
                                   Text="取消"></TextBlock>
                    </StackPanel>
                </metro:MetroButton>
                <metro:MetroButton DockPanel.Dock="Right"
                                   Name="btnExcuteImport"
                                   Padding="5"
                                   IsEnabled="False"
                                   Height="30"
                                   Click="btnExcuteImport_Click_1"
                                   Style="{StaticResource Metro_Button_Paneled_Style}">
                    <StackPanel Orientation="Horizontal">
                        <Image RenderOptions.BitmapScalingMode="NearestNeighbor"
                               Stretch="None"
                               Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/application--pencil.png"></Image>
                        <TextBlock Margin="3,0,0,0"
                                   ToolTip="开始导入数据"
                                   VerticalAlignment="Center"
                                   Text="导入" />
                    </StackPanel>
                </metro:MetroButton>
            </DockPanel>
        </Border>
    </Grid>
</am:InfoPageBase>
