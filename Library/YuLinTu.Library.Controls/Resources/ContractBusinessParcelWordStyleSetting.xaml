<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:local="clr-namespace:YuLinTu.Component.ContractAccount"
                    mc:Ignorable="d"
                    xmlns:wpftoolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
                    xmlns:metro="clr-namespace:YuLinTu.Windows.Wpf.Metro;assembly=YuLinTu.Windows.Wpf.Metro"
                    xmlns:cmps="clr-namespace:YuLinTu.Windows.Wpf.Metro.Components;assembly=YuLinTu.Windows.Wpf.Metro"
                    xmlns:appCore="clr-namespace:YuLinTu.Appwork;assembly=YuLinTu.Appwork.Core">
    <Style TargetType="Label">
        <Setter Property="DockPanel.Dock"
                Value="Left" />
        <Setter Property="Margin"
                Value="0,8,2,0" />
        <Setter Property="Padding"
                Value="0,0,0,0" />
    </Style>
    <Style TargetType="CheckBox"
           x:Key="checkBox">
        <Setter Property="VerticalAlignment"
                Value="Center" />
        <Setter Property="HorizontalAlignment"
                Value="Left" />
        <Setter Property="Margin"
                Value="0,8,0,0" />
        <Style.Triggers>
            <Trigger Property="Grid.Row"
                     Value="0">
                <Setter Property="Margin"
                        Value="0,0,0,0" />
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style TargetType="DockPanel"
           x:Key="grid_item">
        <Setter Property="VerticalAlignment"
                Value="Center" />
        <Setter Property="Margin"
                Value="0,8,10,0" />
        <Style.Triggers>
            <Trigger Property="Grid.Row"
                     Value="0">
                <Setter Property="Margin"
                        Value="0,0,10,0" />
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style TargetType="wpftoolkit:DoubleUpDown"
           x:Key="doubleupdown">
        <Setter Property="Height"
                Value="25" />
        <Setter Property="Width"
                Value="80" />
        <Setter Property="Margin"
                Value="0,0,10,0" />
        <Setter Property="VerticalAlignment"
                Value="Center" />
        <Setter Property="HorizontalAlignment"
                Value="Right" />
        <Setter Property="BorderThickness"
                Value="1" />
        <Setter Property="Increment"
                Value="1" />
        <Style.Triggers>
            <Trigger Property="Grid.Row"
                     Value="0">
                <Setter Property="Margin"
                        Value="0,4,10,0" />
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style TargetType="wpftoolkit:IntegerUpDown"
           x:Key="integerUpDown">
        <Setter Property="Height"
                Value="25" />
        <Setter Property="Width"
                Value="80" />
        <Setter Property="Margin"
                Value="0,0,10,0" />
        <Setter Property="VerticalAlignment"
                Value="Center" />
        <Setter Property="HorizontalAlignment"
                Value="Right" />
        <Setter Property="BorderThickness"
                Value="1" />
        <Setter Property="Increment"
                Value="1" />
        <Style.Triggers>
            <Trigger Property="Grid.Row"
                     Value="0">
                <Setter Property="Margin"
                        Value="0,0,10,0" />
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style TargetType="wpftoolkit:ColorPicker"
           x:Key="colorPicker">
        <Setter Property="Height"
                Value="25" />
        <Setter Property="Width"
                Value="80" />
        <Setter Property="Margin"
                Value="0,0,10,0" />
        <Setter Property="DisplayColorAndName"
                Value="True" />
        <Setter Property="VerticalAlignment"
                Value="Center" />
        <Setter Property="HorizontalAlignment"
                Value="Right" />
        <Setter Property="BorderThickness"
                Value="1" />
        <Style.Triggers>
            <Trigger Property="Grid.Row"
                     Value="0">
                <Setter Property="Margin"
                        Value="0,0,10,0" />
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style TargetType="cmps:MetroComboBox"
           x:Key="usualmetrocb">
        <Setter Property="Height"
                Value="25" />
        <Setter Property="Width"
                Value="80" />
        <Setter Property="Margin"
                Value="0,0,10,0" />
        <Setter Property="VerticalAlignment"
                Value="Center" />
        <Setter Property="HorizontalAlignment"
                Value="Right" />
        <Setter Property="BorderThickness"
                Value="1" />
        <Style.Triggers>
            <Trigger Property="Grid.Row"
                     Value="0">
                <Setter Property="Margin"
                        Value="0,0,10,0" />
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style TargetType="cmps:FontSelectorComboBox"
           x:Key="usualfontselectcb">
        <Setter Property="Height"
                Value="25" />
        <Setter Property="Width"
                Value="80" />
        <Setter Property="Margin"
                Value="0,0,10,0" />
        <Setter Property="VerticalAlignment"
                Value="Center" />
        <Setter Property="HorizontalAlignment"
                Value="Right" />
        <Setter Property="BorderThickness"
                Value="1" />
        <Style.Triggers>
            <Trigger Property="Grid.Row"
                     Value="0">
                <Setter Property="Margin"
                        Value="0,0,10,0" />
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>
