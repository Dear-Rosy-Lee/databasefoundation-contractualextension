<am:InfoPageBase  x:Class="YuLinTu.Library.Controls.RegeditBookInfoPage"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                            xmlns:wpftoolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
                            xmlns:metro="clr-namespace:YuLinTu.Windows.Wpf.Metro;assembly=YuLinTu.Windows.Wpf.Metro"
                            xmlns:cmps="clr-namespace:YuLinTu.Windows.Wpf.Metro.Components;assembly=YuLinTu.Windows.Wpf.Metro"
                            xmlns:am="clr-namespace:YuLinTu.Library.Controls"
                            Icon="pack://application:,,,/YuLinTu.Resources;component/Images/16/property.png"
                            Header="权证信息"
                            MinHeight="150" MinWidth="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.Resources>
            <Style TargetType="Label">
                <Setter Property="Height" Value="25"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
            </Style>
        </Grid.Resources>
        <ScrollViewer Margin="10" HorizontalScrollBarVisibility="Hidden" PanningMode="VerticalOnly" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="95"/>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="95"/>
                    <ColumnDefinition Width="180"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="45"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="45"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="45" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="45" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="45" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="45" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Label Content="颁证机关:" Grid.Row="0" VerticalAlignment="Center"/>
                <cmps:MetroTextBox Height="30" Name="txtAwareUnit" Grid.Row="0"  Grid.Column="1"  Grid.ColumnSpan="3" MaxLength="20" VerticalAlignment="Center" TabIndex="1" Margin="0,8,105,7" />
                <CheckBox Content="使用简称"                           
                          Name="chkUseAbbreviation" Width="82"  Click="useSimpleName_Checked" IsChecked="True"
                          Grid.Row="0" Grid.Column="3" VerticalAlignment="Center" Margin="90,0,0,0" TabIndex="2"
                          HorizontalAlignment="Left" />
                <CheckBox Content="使用流水号" Name="chkUseUserSetSerialNumber" Margin="100,0,0,0" Width="82" IsChecked="True" Click="useSimpleName_Checked" 
                      Visibility="Collapsed"    Grid.Row="0" Grid.Column="3" VerticalAlignment="Center"  TabIndex="3"/>

                <Label Content="填证机关:" Grid.Row="1" VerticalAlignment="Center"  />
                <cmps:MetroTextBox Height="30" Name="txtWriteUnit" Grid.Row="1"  Grid.Column="1"  MaxLength="20" VerticalAlignment="Center" TabIndex="3" />

                <Label Content="流水号:" Grid.Row="1"  Grid.Column="2" VerticalAlignment="Center" Margin="5,0,0,0" />
                <cmps:MetroTextBox Height="30"  Name="txtSerialNumber" IsEnabled="True" Grid.Row="1" Grid.Column="3" MaxLength="6" VerticalAlignment="Center"  TabIndex="4" />
                <Label Content="承包方:" Grid.Row="2" VerticalAlignment="Center"  />

                <cmps:MetroComboBox Name="cbVirtualPerson" MaxDropDownHeight="150" Grid.Row="2" Height="30" Grid.Column="1" Padding="7,0,0,0" VerticalAlignment="Center" TabIndex="5" />

                <Label Content="权证年号:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
                <wpftoolkit:IntegerUpDown Name="txtYearNumber" Height="30" Minimum="1800"
                                          Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" TabIndex="7"/>

                <Label Content="颁证日期设置:" Grid.Row="3" Grid.Column="2" VerticalAlignment="Center"  Margin="5,0,0,0"/>
                <wpftoolkit:DateTimeUpDown Name="txtStartTime" Height="30" Format="ShortDate" FormatString="yyyy年MM月dd日" Grid.Row="3" Grid.Column="3" VerticalAlignment="Center" TabIndex="8"/>
                <Label Content="填证日期设置:" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center"  Margin="5,0,0,0"/>
                <wpftoolkit:DateTimeUpDown Name="txtWriteTime" Height="30" Format="ShortDate" FormatString="yyyy年MM月dd日" Grid.Row="2" Grid.Column="3" VerticalAlignment="Center" TabIndex="6"/>
                <Label Content="登簿人:"  Grid.Row="4"  VerticalAlignment="Center" />
                <cmps:MetroTextBox Height="30"
                                   Name="txtContractRegeditBookPerson"
                                   Grid.Row="4"
                                   Grid.Column="1"                                 
                                   MaxLength="20"
                                   VerticalAlignment="Center"
                                   TabIndex="9" />
                <Label Content="登簿日期:"
                       Grid.Row="4"
                       Grid.Column="2"
                       VerticalAlignment="Center"
                       Margin="5,0,0,0" />
                <wpftoolkit:DateTimeUpDown Name="txtContractRegeditBookTime"
                                           Height="30"
                                           Format="ShortDate"
                                           FormatString="yyyy年MM月dd日"
                                           Grid.Row="4"
                                           Grid.Column="3"
                                           
                                           VerticalAlignment="Center"
                                           TabIndex="10" />
                <Label Content="登簿附记:"
                       Grid.Row="5"
                       VerticalAlignment="Center"/>
                <!--<cmps:MetroTextBox Grid.Row="8" Name="mtbSurveyINfo" AcceptsReturn="True" MinLines="2" Grid.Column="1" Grid.ColumnSpan="3" Text="{Binding Path=SurveyChronicle,Mode=TwoWay}" 
                           Margin="0,5,0,0" BorderThickness="1" MaxLength="200" TextWrapping="Wrap" VerticalContentAlignment="Top"/>-->

                <cmps:MetroTextBox Height="60"
                                   Name="txtContractRegeditBookExcursus"
                                   Grid.Row="5"
                                   Grid.Column="1"                                  
                                   Grid.ColumnSpan="3"
                                   Grid.RowSpan="2"
                                   TextWrapping="Wrap"
                                   VerticalScrollBarVisibility="Auto"
                                   VerticalAlignment="Center"
                                   TextAlignment="Left"
                                   VerticalContentAlignment="Top"
                                   TabIndex="11"
                                   AcceptsReturn="True"/>

                <Label Content="领取人:"  Grid.Row="7"  VerticalAlignment="Center" />
                <cmps:MetroTextBox Height="30"
                                   Name="txtBookTakePerson"
                                   Grid.Row="7"
                                   Grid.Column="1"                                 
                                   MaxLength="20"
                                   VerticalAlignment="Center"
                                   TabIndex="9" />
                <Label Content="领取日期:"
                       Grid.Row="7"
                       Grid.Column="2"
                       VerticalAlignment="Center"
                       Margin="5,0,0,0" />
                <wpftoolkit:DateTimeUpDown Name="txtBookTakeTime"
                                           Height="30"
                                           Format="ShortDate"
                                           FormatString="yyyy年MM月dd日"
                                           Grid.Row="7"
                                           Grid.Column="3"
                                           
                                           VerticalAlignment="Center"
                                           TabIndex="10" />

                <CheckBox Content="旧证是否回收"                           
                          Name="chkOldbookTakeBack"  IsChecked="True"  Grid.ColumnSpan="3"
                          Grid.Row="8" Grid.Column="3" VerticalAlignment="Center"  TabIndex="2"
                          HorizontalAlignment="Left" />

                <Label Content="印刷证书编号:"  Grid.Row="8"    Grid.Column="0"
                       VerticalAlignment="Center"
                        />
                <cmps:MetroTextBox Height="30"
                                   Name="txtPrintBookNumber"
                                   Grid.Row="8"
                                   Grid.Column="1"                                 
                                   MaxLength="20"
                                   VerticalAlignment="Center"
                                   TabIndex="9" />                

                <Label Content="备注:"
                       Grid.Row="9"
                       VerticalAlignment="Center"/>
                <!--<cmps:MetroTextBox Grid.Row="8" Name="mtbSurveyINfo" AcceptsReturn="True" MinLines="2" Grid.Column="1" Grid.ColumnSpan="3" Text="{Binding Path=SurveyChronicle,Mode=TwoWay}" 
                           Margin="0,5,0,0" BorderThickness="1" MaxLength="200" TextWrapping="Wrap" VerticalContentAlignment="Top"/>-->

                <cmps:MetroTextBox Height="60"
                                   Name="txtBookComment"
                                   Grid.Row="9"
                                   Grid.Column="1"                                  
                                   Grid.ColumnSpan="3"
                                   Grid.RowSpan="2"
                                   TextWrapping="Wrap"
                                   VerticalScrollBarVisibility="Auto"
                                   VerticalAlignment="Center"
                                   TextAlignment="Left"
                                   VerticalContentAlignment="Top"
                                   TabIndex="11"
                                   AcceptsReturn="True"/>

            </Grid>
        </ScrollViewer>

        <Border BorderThickness="0,1,0,0" Grid.Row="1" BorderBrush="LightGray" Margin="10,0,10,0" SnapsToDevicePixels="True">
            <DockPanel HorizontalAlignment="Stretch" LastChildFill="False" VerticalAlignment="Bottom" Margin="0,5,0,5" DockPanel.Dock="Bottom">
                <metro:MetroButton Height="30" Margin="5,0,0,0" DockPanel.Dock="Right"
                               Padding="5"
                               Command="{x:Static metro:MetroCommands.CloseTabMessageBoxCommand}"
                               Style="{StaticResource Metro_Button_Paneled_Style}">
                    <StackPanel Orientation="Horizontal">
                        <Image RenderOptions.BitmapScalingMode="NearestNeighbor"
                    Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/application--minus.png"></Image>
                        <TextBlock Margin="3,0,0,0"
                           VerticalAlignment="Center"
                         Text="取消"></TextBlock>
                    </StackPanel>
                </metro:MetroButton>
                <metro:MetroButton DockPanel.Dock="Right"
                               Padding="5" x:Name="btnAdd"
                               Click="btnAdd_Click" Height="30"
                                   IsEnabled="{Binding CanClose}"
                               Style="{StaticResource Metro_Button_Paneled_Style}">
                    <StackPanel Orientation="Horizontal">
                        <Image RenderOptions.BitmapScalingMode="NearestNeighbor" Stretch="None"
                       Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/tick.png"></Image>
                        <TextBlock Margin="3,0,0,0"
                           VerticalAlignment="Center"
                           Text="确定"></TextBlock>
                    </StackPanel>
                </metro:MetroButton>
            </DockPanel>
        </Border>
    </Grid>
</am:InfoPageBase>
