<cmps:TabMessageBox   x:Class="YuLinTu.Component.ImportResultDataBaseTask.FileChoicePage"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:metro="clr-namespace:YuLinTu.Windows.Wpf.Metro;assembly=YuLinTu.Windows.Wpf.Metro"
                    xmlns:cmps="clr-namespace:YuLinTu.Windows.Wpf.Metro.Components;assembly=YuLinTu.Windows.Wpf.Metro"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                    Icon="pack://application:,,,/YuLinTu.Resources;component/Images/16/property.png"
                    MaxWidth="920"
                    MaxHeight="500"
                    Header="选择导入文件"
                    MinHeight="320" Loaded="TabMessageBox_Loaded">
    <Grid Margin="8,5,10,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Auto">
            <Grid x:Name="gdContent" Margin="10,5,10,9">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <DockPanel Margin="9,0,0,0" Grid.Column="2" LastChildFill="True">
                    <CheckBox Content="导入业务数据地域" Width="130" VerticalAlignment="Center" Name="cbSelect" IsChecked="{Binding FileZonetConfig.IsSelectZone,Mode=TwoWay}"/>
                    <cmps:MetroTextBox  x:Name="txtCode" Height="30" VerticalContentAlignment="Center" IsReadOnly="True" IsEnabled="{Binding ElementName=cbSelect,Path=IsChecked}"
                                        Text="{Binding SelectZone.Name}" MaxLength="38" TabIndex="4">
                        <cmps:MetroTextBox.ContentRight>
                            <metro:ImageButton Click="mbtnGetCode_Click"
                           Image="pack://application:,,,/YuLinTu.Resources;component/Images/16/folder-horizontal-open.png"
                           BorderBrushHover="{DynamicResource Metro_Window_Style_Foreground_Highlight}"
                           BorderBrushPressed="{DynamicResource Metro_Window_Style_Foreground_Highlight}"
                           BorderThickness="1,0,0,0" ToolTip="选择地域"></metro:ImageButton>
                        </cmps:MetroTextBox.ContentRight>
                    </cmps:MetroTextBox>
                </DockPanel>

                <Grid  Grid.Row="1" x:Name="grid">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <GroupBox Margin="0,10,0,5" x:Name="gbBaseData" >
                        <GroupBox.HeaderTemplate>
                            <DataTemplate>
                                <CheckBox VerticalAlignment="Center" x:Name="cbBaseData"
									VerticalContentAlignment="Center" 
									Content="业务数据"
									Click="BaseData_Click"/>
                            </DataTemplate>
                        </GroupBox.HeaderTemplate>
                        <WrapPanel Width="605" x:Name="wpBaseData">
                            <CheckBox  Content="{Binding ExportConfig.TableCBDKXX.FileName}"  IsEnabled="False" Width="150" VerticalAlignment="Center" Margin="3,5,0,5"/>
                            <CheckBox  Content="{Binding ExportConfig.TableCBF.FileName}" IsEnabled="False" Width="150" VerticalAlignment="Center" Margin="0,5"/>
                            <CheckBox  Content="{Binding ExportConfig.TableJTCY.FileName}" IsEnabled="False" Width="150" VerticalAlignment="Center" Margin="0,5"/>
                            <CheckBox  Content="{Binding ExportConfig.TableCBHT.FileName}" IsEnabled="False" Width="150" VerticalAlignment="Center" Margin="0,5"/>
                            <CheckBox  Content="{Binding ExportConfig.TableCBQZ.FileName}" IsEnabled="False" Width="150" VerticalAlignment="Center" Margin="3,5,0,5"/>
                            <CheckBox  Content="{Binding ExportConfig.TableQZBF.FileName}" IsEnabled="False" Width="150" VerticalAlignment="Center" Margin="0,5"/>
                            <CheckBox  Content="{Binding ExportConfig.TableQZHF.FileName}" IsEnabled="False" Width="150" VerticalAlignment="Center" Margin="0,5"/>
                            <CheckBox  Content="{Binding ExportConfig.TableQZZX.FileName}" IsEnabled="False" Width="150" VerticalAlignment="Center" Margin="0,5"/>
                            <CheckBox  Content="{Binding ExportConfig.TableQZDJB.FileName}" IsEnabled="False" Width="150" VerticalAlignment="Center" Margin="3,5,0,5"/>
                            <CheckBox  Content="{Binding ExportConfig.TableFBF.FileName}" IsEnabled="False" Width="150" VerticalAlignment="Center" Margin="0,5"/>
                            <CheckBox  Content="{Binding ExportConfig.TableLZHT.FileName}" IsEnabled="False" Width="150" VerticalAlignment="Center" Margin="0,5"/>
                            <CheckBox  Content="{Binding ExportConfig.TableZLFJ.FileName}" IsEnabled="False" Width="150" VerticalAlignment="Center" Margin="0,5"/>
                            <CheckBox  Content="{Binding ExportConfig.VictorDK.FileName}"  IsEnabled="False" Width="150" VerticalAlignment="Center" Margin="3,5,0,5"/>
                        </WrapPanel>
                    </GroupBox>
                    <GroupBox Grid.Row="1" Margin="0,5" x:Name="gbShapeData" >
                        <GroupBox.HeaderTemplate>
                            <DataTemplate>
                                <CheckBox VerticalAlignment="Center" x:Name="cbShapeData" IsThreeState="True"
									VerticalContentAlignment="Center" 
									Content="其他数据" 
									Click="ShapeData_Click"/>
                            </DataTemplate>
                        </GroupBox.HeaderTemplate>
                        <WrapPanel Width="605" x:Name="wpShapeData">
                            <CheckBox Click="ShapeItem_Click" Content="{Binding ExportConfig.VictorZone.FileName}" IsChecked="{Binding ExportConfig.VictorZone.IsExport}" IsEnabled="{Binding ExportConfig.VictorZone.IsEnable}" Width="150" VerticalAlignment="Center" Margin="3,5,0,5"/>
                            <CheckBox Click="ShapeItem_Click" Content="{Binding ExportConfig.VictorDZDW.FileName}" IsChecked="{Binding ExportConfig.VictorDZDW.IsExport}" IsEnabled="{Binding ExportConfig.VictorDZDW.IsEnable}" Width="150" VerticalAlignment="Center" Margin="0,5"/>
                            <CheckBox Click="ShapeItem_Click" Content="{Binding ExportConfig.VictorJBNTBHQ.FileName}" IsChecked="{Binding ExportConfig.VictorJBNTBHQ.IsExport}" IsEnabled="{Binding ExportConfig.VictorJBNTBHQ.IsEnable}" Width="150" VerticalAlignment="Center" Margin="0,5"/>
                            <CheckBox Click="ShapeItem_Click" Content="{Binding ExportConfig.VictorKZD.FileName}" IsChecked="{Binding ExportConfig.VictorKZD.IsExport}" IsEnabled="{Binding ExportConfig.VictorKZD.IsEnable}" Width="150" VerticalAlignment="Center" Margin="0,5"/>
                            <CheckBox Click="ShapeItem_Click" Content="{Binding ExportConfig.VictorMZDW.FileName}" IsChecked="{Binding ExportConfig.VictorMZDW.IsExport}" IsEnabled="{Binding ExportConfig.VictorMZDW.IsEnable}" Width="150" VerticalAlignment="Center" Margin="3,5,0,5"/>
                            <CheckBox Click="ShapeItem_Click" Content="{Binding ExportConfig.VictorXZDW.FileName}" IsChecked="{Binding ExportConfig.VictorXZDW.IsExport}" IsEnabled="{Binding ExportConfig.VictorXZDW.IsEnable}" Width="150" VerticalAlignment="Center" Margin="0,5"/>
                            <CheckBox Click="ShapeItem_Click" Content="{Binding ExportConfig.VictorQYJX.FileName}" IsChecked="{Binding ExportConfig.VictorQYJX.IsExport}" IsEnabled="{Binding ExportConfig.VictorQYJX.IsEnable}" Width="150" VerticalAlignment="Center" Margin="0,5"/>
                            <CheckBox Click="ShapeItem_Click" Content="{Binding ExportConfig.VictorJZD.FileName}" IsChecked="{Binding ExportConfig.VictorJZD.IsExport}" IsEnabled="{Binding ExportConfig.VictorJZD.IsEnable}" Width="150" VerticalAlignment="Center" Margin="0,5"/>
                            <CheckBox Click="ShapeItem_Click" Content="{Binding ExportConfig.VictorJZX.FileName}" IsChecked="{Binding ExportConfig.VictorJZX.IsExport}" IsEnabled="{Binding ExportConfig.VictorJZX.IsEnable}" Width="150" VerticalAlignment="Center" Margin="3,5,0,5"/>
                        </WrapPanel>
                    </GroupBox>
                </Grid>

            </Grid>
        </ScrollViewer>

        <TextBlock x:Name="lbError" HorizontalAlignment="Center"  TextWrapping="Wrap" VerticalAlignment="Center"/>
        <Border Grid.Row="1"
			SnapsToDevicePixels="True"
			Margin="10,0,10,5"
			BorderThickness="0,1,0,0"
			BorderBrush="{DynamicResource Metro_Window_Style_BorderBrush_Default}"/>
        <DockPanel Grid.Row="2"
			Margin="10,0,10,5"
			LastChildFill="False">
            <metro:MetroButton DockPanel.Dock="Right"
				Height="30"
				MinWidth="70"
				Margin="5,0,0,0"
				Style="{StaticResource Metro_Button_Paneled_Style}"
				Command="{x:Static metro:MetroCommands.CloseTabMessageBoxCommand}">
                <StackPanel Orientation="Horizontal">
                    <Image RenderOptions.BitmapScalingMode="NearestNeighbor"
						SnapsToDevicePixels="True"
						Stretch="None"
						VerticalAlignment="Center"
						Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/application--minus.png"/>
                    <TextBlock Margin="5,0,0,0"
						VerticalAlignment="Center"
						Text="取消"/>
                </StackPanel>
            </metro:MetroButton>
            <metro:MetroButton DockPanel.Dock="Right"
				Height="30"
				MinWidth="70"
				Click="Confirm_Click"
				Style="{StaticResource Metro_Button_Paneled_Style}">
                <StackPanel Orientation="Horizontal">
                    <Image RenderOptions.BitmapScalingMode="NearestNeighbor"
						SnapsToDevicePixels="True"
						Stretch="None"
						VerticalAlignment="Center"
						Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/tick.png"/>
                    <TextBlock Margin="5,0,0,0"
						VerticalAlignment="Center"
						Text="确定"/>
                </StackPanel>
            </metro:MetroButton>
        </DockPanel>
    </Grid>
</cmps:TabMessageBox>
