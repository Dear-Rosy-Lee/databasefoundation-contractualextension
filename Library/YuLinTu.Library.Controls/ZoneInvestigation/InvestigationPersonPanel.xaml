<UserControl x:Class="YuLinTu.Library.Controls.InvestigationPersonPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:YuLinTu.Library.Controls"
             xmlns:metro="clr-namespace:YuLinTu.Windows.Wpf.Metro;assembly=YuLinTu.Windows.Wpf.Metro"
             xmlns:cmps="clr-namespace:YuLinTu.Windows.Wpf.Metro.Components;assembly=YuLinTu.Windows.Wpf.Metro"
             Padding="0">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>  
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Padding="2"
                   Margin="8,10,0,3"
                   Name="title"
                   Height="30"
                   FontSize="20"
                   Foreground="{DynamicResource Metro_Window_Style_Foreground_Highlight}" 
                   HorizontalAlignment="Left">
        </TextBlock>

        <metro:MetroButton  HorizontalAlignment="Right"  
                            VerticalAlignment="Center"
                            Name="btn_refresh" 
                            Width="30" 
                            Height="26"
                            Margin="0,3,8,3"
                            Padding="1"
                            Click="mbtnUpdate_Click_1" VerticalContentAlignment="Center">
            <Image RenderOptions.BitmapScalingMode="NearestNeighbor" Stretch="None" Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/Refresh.png"/>
        </metro:MetroButton>

        <local:InvestigationPersonControlPanel x:Name="personControlPanel" Grid.Row="1" Margin="0,8,0,0"/>

        <Grid Grid.Row="2">
                <local:InvestigationOwnershipPanel x:Name="owerShipPanel"  Margin="0,2,0,0" Padding="0,0,0,0" DockPanel.Dock="Top"/>
        </Grid>

        <DockPanel Grid.Row="3"  LastChildFill="True" Margin="8,0,8,0">
            <TextBlock Text="查询地块:"
                       VerticalAlignment="Center"
                       ToolTip="请输入地块全编码或者顺序码进行查找" />
            <cmps:MetroTextBox x:Name="txtSearch" VerticalAlignment="Center" ToolTip="请输入地块全编码或者顺序码进行查找" Margin="5,5,0,5">
                <cmps:MetroTextBox.ContentRight>
                    <metro:ImageButton x:Name="btnSearch"
                                   Click="btnSearch_Click"
                                   Image="pack://application:,,,/YuLinTu.Library.Resources;component/Resources/查找数据_16.png"
                                   Padding="5"
                                   Height="28"
                                   BorderBrushHover="{DynamicResource Metro_Window_Style_Foreground_Highlight}"
                                   BorderBrushPressed="{DynamicResource Metro_Window_Style_Foreground_Highlight}"
                                   BorderThickness="1,0,0,0" ToolTip="根据地块编码或者顺序码查找地块"></metro:ImageButton>
                </cmps:MetroTextBox.ContentRight>
            </cmps:MetroTextBox>
        </DockPanel>
        
    </Grid>
</UserControl>
