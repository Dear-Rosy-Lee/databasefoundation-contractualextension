<UserControl x:Class="YuLinTu.Component.StockRightShuShan.Control.LandPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YuLinTu.Component.StockRightShuShan.Control"
             mc:Ignorable="d" 
             >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <local:LandStatistics x:Name="LandStatistics" Grid.Row="0" HorizontalAlignment="Stretch"/>
        <local:LandGrid x:Name="LandGrid" Grid.Row="1"/>
    </Grid>
</UserControl>
