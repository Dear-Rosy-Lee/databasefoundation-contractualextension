<am:InfoPageBase x:Class="YuLinTu.Library.Controls.PersonSplitPage"
                            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                            xmlns:wpftoolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
                            xmlns:metro="clr-namespace:YuLinTu.Windows.Wpf.Metro;assembly=YuLinTu.Windows.Wpf.Metro"
                            xmlns:cmps="clr-namespace:YuLinTu.Windows.Wpf.Metro.Components;assembly=YuLinTu.Windows.Wpf.Metro"
                             xmlns:am="clr-namespace:YuLinTu.Library.Controls"
                            Icon="pack://application:,,,/YuLinTu.Resources;component/Images/16/property.png"
                            Header="分户"
                            MinHeight="150" MinWidth="350">
    <am:InfoPageBase.Resources>
        <am:ImageValueConvert x:Key="ImageValueConvert"/>
        <am:ContractAccountImgConvert x:Key="ImageLandValueConvert"/>
    </am:InfoPageBase.Resources>
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.Resources>
            <Style x:Key="LableStyle" TargetType="Label">
                <Setter Property="Height" Value="25"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
            </Style>
        </Grid.Resources>
        <Grid Margin="10,5,10,10"  Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>
            <GroupBox Header="{Binding SourceName}" Height="250">
                <StackPanel Margin="0,1,0,0">
                    <Label Content="共有人列表:" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                    <DataGrid Name="viewSource" AllowDrop="True" BorderThickness="0" CanUserAddRows="False" CanUserDeleteRows="False" Drop="viewSource_Drop"
                          AutoGenerateColumns="False" Height="200" HeadersVisibility="Column" VerticalScrollBarVisibility="Auto" RowHeaderWidth="0" RowHeight="30">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="  ..."  Width="50">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <metro:MetroButton x:Name="btnImg" Tag="{Binding ID}" PreviewMouseLeftButtonDown="btnImg_MouseLeftButtonDown" PreviewMouseMove="btnImg_LeftMouseMove" PreviewMouseLeftButtonUp="btnImg_MouseLeftButtonUp">
                                            <Image RenderOptions.BitmapScalingMode="NearestNeighbor" Stretch="None" SnapsToDevicePixels="True" Source="{Binding Img, Converter={StaticResource ImageValueConvert}}"></Image>
                                        </metro:MetroButton>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="姓名" Width="110">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock IsEnabled="False"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   Text="{Binding Path=Name}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="年龄"  Width="90">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Age}" VerticalAlignment="Center" HorizontalAlignment="Left" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="关系"  Width="90">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding RelationShip}" VerticalAlignment="Center" HorizontalAlignment="Left" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn  Header="  ..."  Width="60">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <metro:MetroButton x:Name="btnRight" Click="btnRight_Click" Tag="{Binding ID}" Margin="0,0,-12,0" Height="30" Width="30" ToolTip="将原户中的成员移动到新户中">
                                            <Image RenderOptions.BitmapScalingMode="NearestNeighbor" Stretch="None"
                                                       Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/arrow.png"></Image>
                                        </metro:MetroButton>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </GroupBox>
            <!--<StackPanel Grid.Column="1" VerticalAlignment="Center">
                <metro:MetroButton Height="27" Margin="5,10" ToolTip="创建一个新的户" Click="btnNew_Click" Style="{StaticResource Metro_Button_Paneled_Style}">
                    <Image Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/plus.png" Stretch="None" SnapsToDevicePixels="True"/>
                </metro:MetroButton>
                <metro:MetroButton Height="27" Margin="5,10" ToolTip="将原户中的成员移动到新户中" Click="btnRight_Click" Style="{StaticResource Metro_Button_Paneled_Style}">
                    <Image Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/arrow.png" Stretch="None" SnapsToDevicePixels="True"/>
                </metro:MetroButton>
                <metro:MetroButton Height="27" Name="btnLeft"  Margin="5,10" ToolTip="将新户中的成员移动到原户中" Click="btnLeft_Click" Style="{StaticResource Metro_Button_Paneled_Style}">
                    <Image Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/arrow-180.png" Stretch="None" SnapsToDevicePixels="True" />
                </metro:MetroButton>
            </StackPanel>-->
            <GroupBox Header="{Binding DestinName}" x:Name="gbdest" Height="250" Grid.Column="2">
                <StackPanel Margin="0,1,0,0">
                    <Label Content="共有人列表:" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                    <DataGrid Name="viewDest" AllowDrop="True" BorderThickness="0" CanUserAddRows="False" CanUserDeleteRows="False"  Drop="viewDistin_Drop"
                          AutoGenerateColumns="False" Height="200" HeadersVisibility="Column" VerticalScrollBarVisibility="Auto" RowHeaderWidth="0" RowHeight="30">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="  ..."  Width="50">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <metro:MetroButton Tag="{Binding ID}" PreviewMouseLeftButtonDown="btnImg_MouseLeftButtonDown" PreviewMouseMove="btnImg_RightMouseMove" PreviewMouseLeftButtonUp="btnImg_MouseLeftButtonUp">
                                            <Image RenderOptions.BitmapScalingMode="NearestNeighbor" Stretch="None" SnapsToDevicePixels="True" Source="{Binding Img, Converter={StaticResource ImageValueConvert}}"></Image>
                                        </metro:MetroButton>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="姓名" Width="110">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock IsEnabled="False"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   Text="{Binding Path=Name}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="年龄"  Width="90">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Age}" VerticalAlignment="Center" HorizontalAlignment="Left" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="关系"  Width="90">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding RelationShip}" VerticalAlignment="Center" HorizontalAlignment="Left" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn  Header="  ..."  Width="60">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                            <metro:MetroButton x:Name="btnLeft" Click="btnLeft_Click" Tag="{Binding ID}"  Height="30" Width="30" Margin="0,0,-12,0" ToolTip="将新户中的成员移动到原户中">
                                                <Image RenderOptions.BitmapScalingMode="NearestNeighbor" Stretch="None"
                                                       Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/arrow-180.png"></Image>
                                            </metro:MetroButton>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </GroupBox>
        </Grid>
        <Grid Margin="10,10,10,20" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>
            <GroupBox Header="{Binding SourceName}" Height="250">
                <StackPanel Margin="0,1,0,0">
                    <Label Content="地块列表:" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                    <DataGrid Name="viewLandSource" AllowDrop="True" BorderThickness="0" CanUserAddRows="False" CanUserDeleteRows="False" Drop="viewLandSource_Drop"
                          AutoGenerateColumns="False" Height="200" HeadersVisibility="Column" VerticalScrollBarVisibility="Auto" RowHeaderWidth="0" RowHeight="30">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="  ..."  Width="50">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <metro:MetroButton x:Name="btnLandImg" Tag="{Binding ID}" PreviewMouseLeftButtonDown="btnLandImg_MouseLeftButtonDown" PreviewMouseMove="btnLandImgg_LeftMouseMove" PreviewMouseLeftButtonUp="btnLandImg_MouseLeftButtonUp">
                                            <Image RenderOptions.BitmapScalingMode="NearestNeighbor" Stretch="None" SnapsToDevicePixels="True" Source="{Binding Img, Converter={StaticResource ImageLandValueConvert}}"></Image>
                                        </metro:MetroButton>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="地块名称" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock IsEnabled="False"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Left"
                                                   Text="{Binding Path=Name}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="地块编码"  Width="110">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding LandNumber}" VerticalAlignment="Center" HorizontalAlignment="Left" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="实测面积"  Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ActualArea}" VerticalAlignment="Center" HorizontalAlignment="Left" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn  Header="  ..."  Width="60">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <metro:MetroButton x:Name="btnLandRight" Click="btnLandRight_Click" Tag="{Binding ID}" Margin="0,0,-12,0" Height="30" Width="30" ToolTip="将原户中的承包地块移动到新户中">
                                            <Image RenderOptions.BitmapScalingMode="NearestNeighbor" Stretch="None"
                                                       Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/arrow.png"></Image>
                                        </metro:MetroButton>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="{Binding DestinName}" x:Name="landdest" Height="250" Grid.Column="2">
                <StackPanel Margin="0,1,0,0">
                    <Label Content="地块列表:" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                    <DataGrid Name="viewLandDest" AllowDrop="True" BorderThickness="0" CanUserAddRows="False" CanUserDeleteRows="False"  Drop="viewLandDest_Drop"
                          AutoGenerateColumns="False" Height="200" HeadersVisibility="Column" VerticalScrollBarVisibility="Auto" RowHeaderWidth="0" RowHeight="30">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="  ..."  Width="50">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <metro:MetroButton Tag="{Binding ID}" PreviewMouseLeftButtonDown="btnImg_MouseLeftButtonDown" PreviewMouseMove="btnImg_RightMouseMove" PreviewMouseLeftButtonUp="btnImg_MouseLeftButtonUp">
                                            <Image RenderOptions.BitmapScalingMode="NearestNeighbor" Stretch="None" SnapsToDevicePixels="True" Source="{Binding Img, Converter={StaticResource ImageLandValueConvert}}"></Image>
                                        </metro:MetroButton>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="地块名称" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock IsEnabled="False"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   Text="{Binding Path=Name}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="地块编码"  Width="110">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding LandNumber}" VerticalAlignment="Center" HorizontalAlignment="Left" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="实测面积"  Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ActualArea}" VerticalAlignment="Center" HorizontalAlignment="Left" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn  Header="  ..."  Width="60">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                            <metro:MetroButton x:Name="btnLandLeft" Click="btnLandLeft_Click" Tag="{Binding ID}"  Height="30" Width="30" Margin="0,0,-12,0" ToolTip="将新户中的承包地块移动到原户中">
                                                <Image RenderOptions.BitmapScalingMode="NearestNeighbor" Stretch="None"
                                                       Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/arrow-180.png"></Image>
                                            </metro:MetroButton>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </GroupBox>
        </Grid>
        <Border BorderThickness="0,1,0,0" Grid.Row="2" BorderBrush="LightGray" Margin="10,0,10,0" SnapsToDevicePixels="True">
            <DockPanel HorizontalAlignment="Stretch" LastChildFill="False" VerticalAlignment="Bottom" Margin="0,5,0,5" DockPanel.Dock="Bottom">
                <metro:MetroButton Margin="5,0,0,0" Height="30" DockPanel.Dock="Right"
                               Padding="5"
                               Command="{x:Static metro:MetroCommands.CloseTabMessageBoxCommand}"
                               Style="{StaticResource Metro_Button_Paneled_Style}">
                    <StackPanel Orientation="Horizontal">
                        <Image RenderOptions.BitmapScalingMode="NearestNeighbor"
                    Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/application--minus.png"></Image>
                        <TextBlock Margin="3,0,0,0"
                           VerticalAlignment="Center"
                         Text="取消"></TextBlock>
                    </StackPanel>
                </metro:MetroButton>
                <metro:MetroButton DockPanel.Dock="Right"
                               Padding="5" x:Name="btnAdd"
                               Click="btnAdd_Click" Height="30"
                               Style="{StaticResource Metro_Button_Paneled_Style}">
                    <StackPanel Orientation="Horizontal">
                        <Image RenderOptions.BitmapScalingMode="NearestNeighbor" Stretch="None"
                       Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/tick.png"></Image>
                        <TextBlock Margin="3,0,0,0"
                           VerticalAlignment="Center"
                           Text="确定"></TextBlock>
                    </StackPanel>
                </metro:MetroButton>
            </DockPanel>
        </Border>
    </Grid>
</am:InfoPageBase>