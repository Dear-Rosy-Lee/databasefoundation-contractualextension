<am:InfoPageBase x:Class="YuLinTu.Library.Controls.ContractLandInitializeCoil"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:wpftoolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
                 xmlns:metro="clr-namespace:YuLinTu.Windows.Wpf.Metro;assembly=YuLinTu.Windows.Wpf.Metro"
                 xmlns:cmps="clr-namespace:YuLinTu.Windows.Wpf.Metro.Components;assembly=YuLinTu.Windows.Wpf.Metro"
                 xmlns:am="clr-namespace:YuLinTu.Library.Controls"
                 Icon="pack://application:,,,/YuLinTu.Resources;component/Images/16/property.png"
                 Header="初始化有效界址线数据"
                 MinHeight="270"
                 Width="560">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.Resources>
            <Style x:Key="LableStyle"
                   TargetType="Label">
                <Setter Property="Height"
                        Value="30" />
                <Setter Property="VerticalContentAlignment"
                        Value="Center" />
                <Setter Property="VerticalAlignment"
                        Value="Center" />
                <Setter Property="HorizontalContentAlignment"
                        Value="Left" />
                <Setter Property="HorizontalAlignment"
                        Value="Left" />
            </Style>
        </Grid.Resources>
        <GroupBox Grid.Row="0"
                  Header="初始对象"
                  Margin="5,10,5,0"
                  Name="gpInitial">
            <Grid Margin="0,10,0,0">
                <StackPanel Orientation="Horizontal">
                    <RadioButton Content="全部地块"
                                 Margin="10,0,0,0"
                                 Name="rbAllLands"
                                 VerticalAlignment="Center"
                                 GroupName="initialObject"
                                 IsChecked="True" />
                    <RadioButton Content="无界址信息地块"
                                 Margin="80,0,0,0"
                                 Name="rbLandsWithoutInfo"
                                 VerticalAlignment="Center"
                                 GroupName="initialObject" />
                    <RadioButton  Margin="80,0,0,0"
                                  Name="rbSelectedLands"
                                  VerticalAlignment="Center"
                                  VerticalContentAlignment="Center"
                                  GroupName="initialObject">
                        <RadioButton.Content>
                            <cmps:SuperButton  IsSplit="False"
                                               Padding="10,0"
                                               Margin="0,0,5,0"
                                               Height="30"
                                               DropDownPosition="Bottom"
                                               BorderBrushDefault="{DynamicResource Metro_Window_Style_BorderBrush_Default}"
                                               BorderThickness="1"
                                               Name="sbSelectLands"
                                               x:FieldModifier="public"
                                               Click="sbSelectLands_Click"
                                               IsEnabled="{Binding ElementName=rbSelectedLands,Path=IsChecked}"
                                               Image="pack://application:,,,/YuLinTu.Library.Resources;component/Resources/承包地16.png">
                                <cmps:SuperButton.Content>
                                    <TextBlock Text="选择地块" />
                                </cmps:SuperButton.Content>
                            </cmps:SuperButton>
                        </RadioButton.Content>
                    </RadioButton>
                </StackPanel>
            </Grid>
        </GroupBox>       
        <GroupBox Grid.Row="2"
                  Header="界址线属性"
                  Margin="5,10,5,0">
            <Grid Margin="0,10,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="180" />
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="185" />
                </Grid.ColumnDefinitions>
                <Label x:Name="lbAddressLineType"
                       Content="界线性质:"
                       VerticalAlignment="Center"
                       Grid.Row="0"
                       Grid.Column="0"
                       Style="{StaticResource LableStyle}" />
                <cmps:MetroComboBox x:Name="cmbAddressLineType"
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Height="30"
                                    SelectionChanged="cmbAddressLineType_SelectionChanged" />
                <Label x:Name="lbAddressLineCatalog"
                       Content="界址线类别:"
                       VerticalAlignment="Center"
                       Grid.Row="0"
                       Grid.Column="2"
                       Style="{StaticResource LableStyle}"
                       HorizontalAlignment="Right" />
                <cmps:MetroComboBox x:Name="cmbAddressLineCatalog"
                                    Grid.Row="0"
                                    Grid.Column="3"
                                    Height="30"
                                    SelectionChanged="cmbAddressLineCatalog_SelectionChanged" />
                <Label x:Name="lbAddressLinePosition"
                       Content="界址线位置:"
                       VerticalAlignment="Center"
                       Grid.Row="1"
                       Grid.Column="0"
                       Style="{StaticResource LableStyle}" />
                <cmps:MetroComboBox x:Name="cmbAddressLinePosition"
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Height="30"
                                    SelectionChanged="cmbAddressLinePosition_SelectionChanged" />
                <Label x:Name="lbAddressLinedbiDistance"
                       Content="领宗地距离:"
                       VerticalAlignment="Center"
                       Grid.Row="1"
                       Grid.Column="2"
                       Style="{StaticResource LableStyle}"
                       HorizontalAlignment="Right" />
                <wpftoolkit:DoubleUpDown x:Name="wtAddressLinedbiDistance"
                                         Grid.Row="1"
                                         Grid.Column="3"
                                         Height="30"
                                         Minimum="0.0" />
            </Grid >
        </GroupBox>
        <GroupBox Grid.Row="3"
                  Header="界址设置"
                  Margin="5,10,5,0">
            <Grid Margin="0,5,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal"
                            Grid.Row="0"
                            Margin="10,0,0,0">                   
                    <CheckBox x:Name="cbPostion"
                              Content="自动识别界址线位置"
                              VerticalAlignment="Center"
                              Click="cbPostion_Click"
                              Margin="25,0,0,0" />
                    <CheckBox x:Name="cbNeighbor"
                              Content="查找毗邻承包方"
                              Margin="25,0,0,0"
                              VerticalAlignment="Center"
                              Click="cbNeighbor_Click"
                              IsChecked="{Binding ElementName=cbVirtualPersonFilter,Path=IsChecked, Mode=OneWay}" />
                    <CheckBox x:Name="cbIsNeighborExportVillageLevel"
                              Content="查找毗邻承包方到村"
                              VerticalAlignment="Center"
                              Click="cbIsNeighborExportVillageLevel_Click"
                              Margin="25,0,0,0" />
                </StackPanel>
            </Grid>
        </GroupBox>
        <Grid  Grid.Row="6"
               Grid.Column="1"
               Grid.ColumnSpan="3"
               Margin="7,5,5,5">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="180" />
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="180" />
            </Grid.ColumnDefinitions>
            <Label x:Name="lbAddressPointPrefix"
                   Content="界址标识:"
                   VerticalAlignment="Center"
                   Grid.Row="0"
                   Grid.Column="0"
                   Style="{StaticResource LableStyle}" />
            <cmps:MetroTextBox  x:Name="cmbAddressPointPrefix"
                                Grid.Row="0"
                                Grid.Column="1"
                                Height="30"
                                Padding="7,0,0,0" />
            <CheckBox x:Name="cbLineDescription"
                      Content="界址线说明填写长度"
                      Grid.Row="0"
                      Grid.Column="2"
                      Grid.ColumnSpan="2"
                      VerticalAlignment="Center"
                      Click="cbLineDescription_Click"
                      Margin="40,0,0,0" />
        </Grid>
        <Border BorderThickness="0,1,0,0"
                Grid.Row="7"
                BorderBrush="LightGray"
                Margin="10,0,10,0"
                SnapsToDevicePixels="True">
            <DockPanel HorizontalAlignment="Stretch"
                       LastChildFill="True"
                       VerticalAlignment="Bottom"
                       Margin="0,5,0,5"
                       DockPanel.Dock="Bottom">
                <metro:MetroButton Height="30"
                                   DockPanel.Dock="Right"
                                   Padding="5"
                                   Margin="5,0,0,0"
                                   Command="{x:Static metro:MetroCommands.CloseTabMessageBoxCommand}"
                                   Style="{StaticResource Metro_Button_Paneled_Style}">
                    <StackPanel Orientation="Horizontal">
                        <Image RenderOptions.BitmapScalingMode="NearestNeighbor"
                               Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/application--minus.png"></Image>
                        <TextBlock Margin="3,0,0,0"
                                   VerticalAlignment="Center"
                                   Text="取消"></TextBlock>
                    </StackPanel>
                </metro:MetroButton>
                <metro:MetroButton DockPanel.Dock="Right"
                                   Padding="5"
                                   x:Name="btnAdd"
                                   Height="30"
                                   Click="btnAdd_Click"
                                   Style="{StaticResource Metro_Button_Paneled_Style}">
                    <StackPanel Orientation="Horizontal">
                        <Image RenderOptions.BitmapScalingMode="NearestNeighbor"
                               Stretch="None"
                               Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/tick.png"></Image>
                        <TextBlock Margin="3,0,0,0"
                                   VerticalAlignment="Center"
                                   Text="确定"></TextBlock>
                    </StackPanel>
                </metro:MetroButton>
                <Label Name="lbInfo"
                       DockPanel.Dock="Left"
                       VerticalAlignment="Center" />
            </DockPanel>
        </Border>
    </Grid>
</am:InfoPageBase>
