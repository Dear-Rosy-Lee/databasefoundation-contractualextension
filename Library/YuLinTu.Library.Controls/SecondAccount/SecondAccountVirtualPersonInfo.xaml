<am:InfoPageBase x:Class="YuLinTu.Library.Controls.SecondAccountVirtualPersonInfo"
                            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                            xmlns:wpftoolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
                            xmlns:metro="clr-namespace:YuLinTu.Windows.Wpf.Metro;assembly=YuLinTu.Windows.Wpf.Metro"
                            xmlns:cmps="clr-namespace:YuLinTu.Windows.Wpf.Metro.Components;assembly=YuLinTu.Windows.Wpf.Metro"
                             xmlns:am="clr-namespace:YuLinTu.Library.Controls"
                            Icon="pack://application:,,,/YuLinTu.Resources;component/Images/16/property.png"
                            Header="编辑承包方"
                            MinHeight="200" MinWidth="550">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.Resources>
            <Style x:Key="LableStyle" TargetType="Label">
                <Setter Property="Height" Value="25"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
            </Style>
        </Grid.Resources>
        <ScrollViewer  HorizontalScrollBarVisibility="Hidden" PanningMode="VerticalOnly" VerticalScrollBarVisibility="Auto">
            <Grid Margin="10,10,10,5">
                <Grid.Resources>
                    <Style x:Key="LableStyle" TargetType="Label">
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="HorizontalContentAlignment" Value="Left"/>
                        <Setter Property="HorizontalAlignment" Value="Left"/>
                    </Style>
                </Grid.Resources>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="95"/>
                    <ColumnDefinition Width="195"/>
                    <ColumnDefinition Width="95"/>
                    <ColumnDefinition Width="195"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Content="户号:" Grid.Row="0" Style="{StaticResource LableStyle}" />
                <DockPanel LastChildFill="True" Grid.Row="0" Grid.Column="1">
                    <cmps:MetroTextBox Height="30" TabIndex="1" Name="txtNum" BorderThickness="1,1,1,1" Margin="-1,0,0,0" PreviewKeyDown="mtbCode_PreviewKeyDown" PreviewTextInput="mtbCode_PreviewTextInput" TextChanged="txtNum_TextChanged" DockPanel.Dock="Right" Width="40" MaxLength="4" IsEnabled="True"  VerticalAlignment="Center"/>
                    <cmps:MetroTextBox Height="30" Name="txtFamilyNum"  IsEnabled="False"  TextAlignment="Right" BorderThickness="1,1,0,1" VerticalAlignment="Center"/>
                </DockPanel>
                <!--<Label Content="类型:" Grid.Row="0" Style="{StaticResource LableStyle}" Grid.Column="2" HorizontalAlignment="Right"/>
                <cmps:MetroComboBox Name="cbType" Grid.Row="0" Grid.Column="3" Padding="7,0,0,0" Height="25" VerticalAlignment="Center" TabIndex="2" SelectionChanged="cbType_SelectionChanged"/>-->

                <Label Content="姓名:" Grid.Row="1" Style="{StaticResource LableStyle}"  />
                <cmps:MetroTextBox Name="txt_Name" Grid.Row="1" Text="{Binding Contractor.Name,Mode=TwoWay}" Grid.Column="1" MaxLength="20" 
                                   VerticalAlignment="Center" TabIndex="2" TextChanged="txt_Name_TextChanged" Height="30"/>
                <Label Content="民族:" Grid.Row="1" Grid.Column="2" Style="{StaticResource LableStyle}" HorizontalAlignment="Right"/>
                <cmps:MetroComboBox Name="cbNation" MaxDropDownHeight="150" Grid.Row="1" Height="30" Grid.Column="3" Padding="7,0,0,0" Grid.ColumnSpan="3" VerticalAlignment="Center" TabIndex="3" SelectionChanged="cbNation_SelectionChanged"/>

                <Label Content="证件类型:" Grid.Row="2" Style="{StaticResource LableStyle}" Visibility="{Binding ElementName=txt_Phone,Path=Visibility}"  />
                <cmps:MetroComboBox Name="cbCardType" Height="30" VerticalAlignment="Center" Grid.ColumnSpan="3" Padding="7,0,0,0"  Grid.Row="2" Grid.Column="1" TabIndex="4" SelectionChanged="cbCardType_SelectionChanged"/>

                <Label Content="证件号码:" Grid.Row="3" Style="{StaticResource LableStyle}"/>
                <cmps:MetroTextBox Name="txt_ICN" Text="{Binding Contractor.Number,Mode=TwoWay}" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" 
                                   TextChanged="txt_ICN_TextChanged" InputMethod.IsInputMethodEnabled="False" VerticalAlignment="Center" TabIndex="5" Height="30"/>

                <Label Content="年龄:"  Grid.Row="4" Grid.Column="2" Style="{StaticResource LableStyle}" HorizontalAlignment="Right"/>
                <!--<cmps:MetroTextBox Name="txt_Age" IsEnabled="False" Grid.Column="3" Grid.Row="4"  VerticalAlignment="Center" TabIndex="7"/>-->
                <wpftoolkit:DoubleUpDown   x:Name="txt_Age" Minimum="0"  Grid.Row="4" Grid.Column="3" Height="30"
                                             VerticalAlignment="Center" Increment="1" TabIndex="7"  IsEnabled="False"
                                            Maximum="200" />

                <Label Content="性别:" Grid.Row="4" Style="{StaticResource LableStyle}"/>
                <cmps:MetroComboBox Name="cbGender" IsEnabled="False" Height="30" Grid.Row="4" Grid.Column="1" Padding="7,0,0,0" VerticalAlignment="Center" SelectionChanged="cbGender_SelectionChanged" TabIndex="6"/>

                <Label Content="邮编:" Grid.Row="5" Grid.Column="0" Style="{StaticResource LableStyle}"/>
                <cmps:MetroTextBox Name="txtZip" PreviewKeyDown="mtbCode_PreviewKeyDown" Height="30"
                                   PreviewTextInput="mtbCode_PreviewTextInput" InputMethod.IsInputMethodEnabled="False"
                                   TextChanged="txt_ZIP_TextChanged" Text="{Binding Contractor.PostalNumber,Mode=TwoWay}" MaxLength="6" Grid.Row="5" Grid.Column="1" VerticalAlignment="Center" TabIndex="8"/>
                <Label Content="出生日期:" Grid.Row="5" Grid.Column="2" Style="{StaticResource LableStyle}" HorizontalAlignment="Right"/>
                <wpftoolkit:DateTimeUpDown Name="txt_Birthday" IsEnabled="False" Format="ShortDate" Grid.Row="5" Grid.Column="3"
                                           VerticalAlignment="Center" TabIndex="9" Height="30"/>

                <Label Content="承包人口:" Grid.Row="6" Grid.Column="0" Style="{StaticResource LableStyle}"/>
                <wpftoolkit:DoubleUpDown   x:Name="txtFamilyCount" Minimum="0"  MaxWidth="490"  Grid.Row="6" Grid.Column="1"
                                             VerticalAlignment="Center" Increment="0.5" Height="30"
                                           Value="{Binding Contractor.PersonCount,Mode=TwoWay}" Maximum="100000" TabIndex="9"/>

                <Label Content="台账总面积:" Grid.Row="6" Grid.Column="2" Style="{StaticResource LableStyle}" HorizontalAlignment="Right"/>
                <DockPanel Grid.Row="6" Grid.Column="3" VerticalAlignment="Center">
                    <Label DockPanel.Dock="Right" Content="(亩)" ></Label>
                    <wpftoolkit:DoubleUpDown   x:Name="txtTotalTableArea" Minimum="0"  MaxWidth="490" 
                                             VerticalAlignment="Center" Increment="0.5" DockPanel.Dock="Right" Height="30"
                                           Value="{Binding Contractor.TotalTableArea,Mode=TwoWay}" Maximum="100000" TabIndex="10"/>
                </DockPanel>

                <Label Content="备注:"  Grid.Row="7"  Style="{StaticResource LableStyle}" VerticalAlignment="Top" Margin="0,10,0,0"/>
                <cmps:MetroTextBox Name="txt_Comment" Text="{Binding Contractor.Comment,Mode=TwoWay}" MaxLength="100" TextWrapping="Wrap"   
                                   VerticalContentAlignment="Top" Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="3" Margin="0,8,0,0" TabIndex="11" Height="60"/>
            </Grid>
        </ScrollViewer>

        <Border BorderThickness="0,1,0,0" Grid.Row="1" BorderBrush="LightGray" Margin="10,0,10,0" SnapsToDevicePixels="True">
            <DockPanel HorizontalAlignment="Stretch" LastChildFill="True" VerticalAlignment="Bottom" Margin="0,5,0,5" DockPanel.Dock="Bottom">
                <metro:MetroButton  Height="30" DockPanel.Dock="Right"
                               Padding="5" Margin="5,0,0,0"
                               Command="{x:Static metro:MetroCommands.CloseTabMessageBoxCommand}"
                               Style="{StaticResource Metro_Button_Paneled_Style}">
                    <StackPanel Orientation="Horizontal">
                        <Image RenderOptions.BitmapScalingMode="NearestNeighbor"
                    Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/application--minus.png"></Image>
                        <TextBlock Margin="3,0,0,0"
                           VerticalAlignment="Center"
                         Text="取消"></TextBlock>
                    </StackPanel>
                </metro:MetroButton>
                <metro:MetroButton  DockPanel.Dock="Right"
                               Padding="5" x:Name="btnAdd"
                               Click="btnAdd_Click" Height="30"
                               Style="{StaticResource Metro_Button_Paneled_Style}">
                    <StackPanel Orientation="Horizontal">
                        <Image RenderOptions.BitmapScalingMode="NearestNeighbor" Stretch="None"
                       Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/tick.png"></Image>
                        <TextBlock Margin="3,0,0,0"
                           VerticalAlignment="Center"
                           Text="确定"></TextBlock>
                    </StackPanel>
                </metro:MetroButton>
                <Label Name="lbInfo" DockPanel.Dock="Left" VerticalAlignment="Center"/>
            </DockPanel>
        </Border>
    </Grid>
</am:InfoPageBase>
