<am:InfoPageBase x:Class="YuLinTu.Library.Controls.SecondVirtualPersonPage"
                            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                            xmlns:wpftoolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
                            xmlns:metro="clr-namespace:YuLinTu.Windows.Wpf.Metro;assembly=YuLinTu.Windows.Wpf.Metro"
                            xmlns:cmps="clr-namespace:YuLinTu.Windows.Wpf.Metro.Components;assembly=YuLinTu.Windows.Wpf.Metro"
                            xmlns:am="clr-namespace:YuLinTu.Library.Controls"
                            Icon="pack://application:,,,/YuLinTu.Resources;component/Images/16/property.png"
                            Header="二轮承包方管理"
                            Height="500" Width="880">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <am:VirtualPersonPanel x:Name="personPanel"/>

        <Border BorderThickness="0,1,0,0" Grid.Row="1" BorderBrush="LightGray" Margin="10,0,10,0" SnapsToDevicePixels="True">
            <DockPanel HorizontalAlignment="Stretch" LastChildFill="False" VerticalAlignment="Bottom" Margin="0,5,0,5" DockPanel.Dock="Bottom">

                <metro:MetroButton  DockPanel.Dock="Right" MinWidth="80"
                               Padding="5" x:Name="ExitBtn"
                               Click="ExitBtn_Click"
                               Margin="5,0,0,0" Style="{StaticResource Metro_Button_Paneled_Style}" >
                    <StackPanel Orientation="Horizontal">
                        <Image RenderOptions.BitmapScalingMode="HighQuality" Stretch="None"
                               Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/application--minus.png"></Image>
                        <TextBlock  Margin="3,0,0,0" VerticalAlignment="Center" Text="关闭"/>
                    </StackPanel>
                </metro:MetroButton>

                <metro:MetroButton  DockPanel.Dock="Right" MinWidth="80"
                               Padding="5" x:Name="SetFamilyBtn"
                               Click="SetFamilyBtn_Click"
                               Margin="5,0,0,0" Style="{StaticResource Metro_Button_Paneled_Style}">
                    <StackPanel Orientation="Horizontal">
                        <Image RenderOptions.BitmapScalingMode="NearestNeighbor"
                    Source="pack://application:,,,/YuLinTu.Library.Resources;component/Resources/设置户主_16.png"></Image>
                        <TextBlock Margin="3,0,0,0"
                           VerticalAlignment="Center"
                         Text="设置承包方"></TextBlock>
                    </StackPanel>
                </metro:MetroButton>

                <metro:MetroButton  DockPanel.Dock="Right" MinWidth="80"
                               Padding="5" x:Name="EditBtn"
                               Click="EditBtn_Click"
                               Margin="5,0,0,0"  Style="{StaticResource Metro_Button_Paneled_Style}">
                    <StackPanel Orientation="Horizontal">
                        <Image RenderOptions.BitmapScalingMode="NearestNeighbor"
                    Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/application--pencil.png"></Image>
                        <TextBlock Margin="3,0,0,0"
                           VerticalAlignment="Center"
                         Text="编辑"></TextBlock>
                    </StackPanel>
                </metro:MetroButton>

                <metro:MetroButton  DockPanel.Dock="Right" MinWidth="80"
                               Padding="5" x:Name="DeltBtn"
                               Click="DeltBtn_Click"
                               Margin="5,0,0,0"  Style="{StaticResource Metro_Button_Paneled_Style}">
                    <StackPanel Orientation="Horizontal">
                        <Image RenderOptions.BitmapScalingMode="NearestNeighbor"
                    Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/cross-script.png"></Image>
                        <TextBlock Margin="3,0,0,0"
                           VerticalAlignment="Center"
                         Text="删除"></TextBlock>
                    </StackPanel>
                </metro:MetroButton>

                <metro:MetroButton  DockPanel.Dock="Right" MinWidth="80"
                               Padding="5"  x:Name="AddVirtualPerson" 
                               Click="AddVirtualPerson_Click"
                               Margin="5,0,0,0" Style="{StaticResource Metro_Button_Paneled_Style}">
                    <StackPanel Orientation="Horizontal">
                        <Image RenderOptions.BitmapScalingMode="NearestNeighbor"
                    Source="pack://application:,,,/YuLinTu.Library.Resources;component/Resources/户主16.png"></Image>
                        <TextBlock Margin="3,0,0,0"
                           VerticalAlignment="Center"
                         Text="添加承包方"></TextBlock>
                    </StackPanel>
                </metro:MetroButton>

                <metro:MetroButton DockPanel.Dock="Right" MinWidth="80"
                                Padding="5" x:Name="AddSharePersonBtn"
                                Click="AddSharePersonBtn_Click"
                                Margin="5,0,0,0"
                               Style="{StaticResource Metro_Button_Paneled_Style}">
                    <StackPanel Orientation="Horizontal">
                        <Image RenderOptions.BitmapScalingMode="NearestNeighbor"
                    Source="pack://application:,,,/YuLinTu.Library.Resources;component/Resources/添加书记16.png"></Image>
                        <TextBlock Margin="3,0,0,0"
                           VerticalAlignment="Center"
                         Text="添加共有人"></TextBlock>
                    </StackPanel>
                </metro:MetroButton>

            </DockPanel>
        </Border>
    </Grid>
    
    

</am:InfoPageBase>
