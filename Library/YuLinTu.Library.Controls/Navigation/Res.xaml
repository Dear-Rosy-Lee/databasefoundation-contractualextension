<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:YuLinTu.Library.Controls"
                    xmlns:cmps="clr-namespace:YuLinTu.Windows.Wpf.Metro.Components;assembly=YuLinTu.Windows.Wpf.Metro"
                    xmlns:metro="clr-namespace:YuLinTu.Windows.Wpf.Metro;assembly=YuLinTu.Windows.Wpf.Metro">

    <HierarchicalDataTemplate DataType="{x:Type local:NavigateZoneItem}">
        <Grid ClipToBounds="True"
              HorizontalAlignment="Stretch"
              Margin="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <cmps:ImageTextItem Grid.Column="0"
                                Margin="2,7,2,7"
                                VerticalAlignment="Stretch"
                                Focusable="False"
                                Image="{Binding Image}"
                                Text="{Binding Name}"></cmps:ImageTextItem>

            <TextBlock Grid.Column="1"
                       Text="{Binding Object.FullCode}"
                       Foreground="{DynamicResource Metro_Window_Style_Foreground_Lighter}"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right" />
        </Grid>
    </HierarchicalDataTemplate>

    <ContextMenu x:Key="TreeViewNavigator_Menu_Zone"
                 FontSize="13"
                 FontFamily="微软雅黑">
        <MenuItem Header="复制编码"
                  Command="{x:Static local:ZoneNavigatorCommands.CopyCommand}">
            <MenuItem.Icon>
                <cmps:AutoGrayImage SnapsToDevicePixels="True"
                                    RenderOptions.BitmapScalingMode="NearestNeighbor"
                                    Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/blue-document-copy.png"></cmps:AutoGrayImage>
            </MenuItem.Icon>
        </MenuItem>
    </ContextMenu>

</ResourceDictionary>