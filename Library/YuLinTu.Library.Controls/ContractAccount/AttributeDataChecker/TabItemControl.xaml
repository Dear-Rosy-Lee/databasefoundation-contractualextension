<UserControl
    x:Class="YuLinTu.Library.Controls.TabItemControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cmps="clr-namespace:YuLinTu.Windows.Wpf.Metro.Components;assembly=YuLinTu.Windows.Wpf.Metro"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:metro="clr-namespace:YuLinTu.Windows.Wpf.Metro;assembly=YuLinTu.Windows.Wpf.Metro"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="TxtStyle" TargetType="TextBlock">
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="Margin" Value="5,0,15,0" />
        </Style>
    </UserControl.Resources>
    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
        <ItemsControl Name="ic">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <cmps:MetroExpander
                        Margin="0,0,0,-1"
                        BorderThickness="0"
                        HeaderBackgroundDefault="{DynamicResource Metro_Window_Style_Background_Lighter}"
                        HeaderBorderThickness="0,1,0,1"
                        HeaderPadding="10,4,10,4"
                        IsExpanded="True">
                        <cmps:MetroExpander.Header>

                            <DockPanel VerticalAlignment="Center" LastChildFill="True">

                                <CheckBox
                                    Margin="3"
                                    VerticalAlignment="Center"
                                    Checked="CheckBox_Checked"
                                    DockPanel.Dock="Left"
                                    IsChecked="{Binding IsChecked}"
                                    IsEnabled="{Binding Enable}"
                                    Unchecked="CheckBox_Checked">
                                    <StackPanel
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Orientation="Horizontal">
                                        <Image
                                            Grid.Column="1"
                                            Margin="0,0,5,0"
                                            VerticalAlignment="Center"
                                            DockPanel.Dock="Left"
                                            RenderOptions.BitmapScalingMode="NearestNeighbor"
                                            SnapsToDevicePixels="True"
                                            Source="{Binding Img}"
                                            Stretch="None" />
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            FontSize="14"
                                            FontWeight="Bold"
                                            Text="{Binding Group}" />
                                    </StackPanel>
                                </CheckBox>

                                <TextBlock
                                    Margin="0,0,15,0"
                                    VerticalAlignment="Center"
                                    DockPanel.Dock="Right"
                                    FontSize="14"
                                    Foreground="{DynamicResource GlyphBrush}"
                                    Text="{Binding Count}" />

                                <TextBlock DockPanel.Dock="Left" />
                                <!--<TextBlock Text="{Binding Group}" VerticalAlignment="Center"/>-->

                            </DockPanel>
                        </cmps:MetroExpander.Header>

                        <ItemsControl AlternationCount="2" ItemsSource="{Binding Children}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border
                                        Name="grid"
                                        Margin="34,0,0,0"
                                        Padding="0,10,10,10"
                                        BorderBrush="{DynamicResource Metro_Window_Style_BorderBrush_Default}"
                                        BorderThickness="0,0,0,1"
                                        SnapsToDevicePixels="True">
                                        <Grid HorizontalAlignment="Stretch">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="250" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <CheckBox
                                                Name="cbfolder"
                                                Margin="0.2,0,0,0"
                                                VerticalAlignment="Top"
                                                VerticalContentAlignment="Top"
                                                IsChecked="{Binding Value, Mode=TwoWay}"
                                                IsEnabled="{Binding IsEnable, Mode=TwoWay}">
                                                <TextBlock Text="{Binding AliseName}" TextWrapping="Wrap" />
                                            </CheckBox>

                                            <TextBlock
                                                Grid.Column="1"
                                                Foreground="{DynamicResource GlyphBrush}"
                                                Style="{StaticResource TxtStyle}"
                                                Text="{Binding Comment}" />
                                        </Grid>
                                    </Border>
                                    <DataTemplate.Triggers>
                                        <!--<Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                            <Setter Property="Background" TargetName="grid" Value="{DynamicResource Metro_Window_Style_Background}"></Setter>
                                        </Trigger>-->
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </cmps:MetroExpander>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</UserControl>
