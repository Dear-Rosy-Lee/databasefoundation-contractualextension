<UserControl x:Class="YuLinTu.Library.Controls.SenderManagerPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:metro="clr-namespace:YuLinTu.Windows.Wpf.Metro;assembly=YuLinTu.Windows.Wpf.Metro"
             xmlns:cmps="clr-namespace:YuLinTu.Windows.Wpf.Metro.Components;assembly=YuLinTu.Windows.Wpf.Metro"
             xmlns:local="clr-namespace:YuLinTu.Library.Controls">
    <UserControl.Resources>
        <local:SenderStatusConvert x:Key="StatusConvert" />
    </UserControl.Resources>
    <Grid>
        <cmps:MetroTreeGrid x:Name="view"
                            BorderThickness="0,0,0,0"                            
                            cmps:DataGridAttacher.ContentBorderThickness="0,1,0,0"
                            cmps:DataGridAttacher.ColumnHeaderThumbWidth="1"                            
                            Visibility="Visible"
                            ItemAutoExpand="False"
                            ItemPadding="4,7"
                            Grid.Row="1"
                            ExpandItemWhenLeftMouseDoubleClick="False"
                            SelectionChanged="view_SelectionChanged"
                            MouseDoubleClick="view_MouseDoubleClick"
                            x:FieldModifier="public">
            <cmps:MetroTreeGrid.Columns>
                <DataGridTemplateColumn Header="名称"
                                        SortMemberPath="Name"
                                        Width="300"  cmps:DataGridAttacher.ColumnHeaderHorizontalContentAlignment="Center">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <DockPanel LastChildFill="True">
                                <StackPanel HorizontalAlignment="Left"
                                                Orientation="Horizontal">
                                    <cmps:ImageTextItem Image="{Binding Object.Img}"
                                                            HorizontalAlignment="Left"
                                                            ImageTextSpacing="7"
                                                            Text="{Binding Object.Name}"
                                                            VerticalAlignment="Center" />
                                </StackPanel>
                            </DockPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="编码"
                                        SortMemberPath="Code"
                                        Width="150"  cmps:DataGridAttacher.ColumnHeaderHorizontalContentAlignment="Center">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <DockPanel>
                                <TextBlock Text="{Binding Object.Code}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center" />
                            </DockPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="负责人"
                                        SortMemberPath="LawyerName"
                                        Width="150"  cmps:DataGridAttacher.ColumnHeaderHorizontalContentAlignment="Center">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <DockPanel>
                                <TextBlock Text="{Binding Object.LawyerName}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center" />
                            </DockPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="负责人电话"
                                        SortMemberPath="LawyerTelephone"
                                        Width="200"  cmps:DataGridAttacher.ColumnHeaderHorizontalContentAlignment="Center">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <DockPanel>
                                <TextBlock Text="{Binding Object.LawyerTelephone}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center" />
                            </DockPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Header="备注"
                                        SortMemberPath="Comment"
                                        Width="370"  cmps:DataGridAttacher.ColumnHeaderHorizontalContentAlignment="Center">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <DockPanel>
                                <TextBlock Text="{Binding Object.Comment}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center" />
                            </DockPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </cmps:MetroTreeGrid.Columns>
        </cmps:MetroTreeGrid>
    </Grid>
</UserControl>
