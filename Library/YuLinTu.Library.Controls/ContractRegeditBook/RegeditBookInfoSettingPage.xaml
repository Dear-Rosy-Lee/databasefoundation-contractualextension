<am:InfoPageBase x:Class="YuLinTu.Library.Controls.RegeditBookInfoSettingPage"
                            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                            xmlns:wpftoolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
                            xmlns:metro="clr-namespace:YuLinTu.Windows.Wpf.Metro;assembly=YuLinTu.Windows.Wpf.Metro"
                            xmlns:cmps="clr-namespace:YuLinTu.Windows.Wpf.Metro.Components;assembly=YuLinTu.Windows.Wpf.Metro"
                            xmlns:am="clr-namespace:YuLinTu.Library.Controls"
                            Icon="pack://application:,,,/YuLinTu.Resources;component/Images/16/property.png"
                            Header="权证相关设置"
                            MinHeight="150" MinWidth="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.Resources>
            <Style x:Key="LableStyle" TargetType="Label">
                <Setter Property="Height" Value="25"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                <Setter Property="HorizontalAlignment" Value="Left"/>
            </Style>
        </Grid.Resources>
        <ScrollViewer Margin="10" HorizontalScrollBarVisibility="Hidden" PanningMode="VerticalOnly" VerticalScrollBarVisibility="Auto">
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="90"/>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="95"/>
                    <ColumnDefinition Width="180"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="60"/>
                </Grid.RowDefinitions>

                <Label Content="颁证机关:" Grid.Row="0" VerticalAlignment="Center" Margin="5,0,0,0"/>
                <cmps:MetroTextBox Height="30" TabIndex="1" Name="txtAwareUnit" Grid.Row="0"  Grid.Column="1"  MaxLength="20" VerticalAlignment="Center"  />
                <CheckBox Content="使用简称" 
                          Visibility="Visible"
                          Name="chkUseAbbreviation" Width="82"  Click="useSimpleName_Checked" IsChecked="True"
                          Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" Margin="10,0,0,0" TabIndex="2"
                          HorizontalAlignment="Left" />
                <CheckBox Content="使用流水区间"  Name="chkUseUserSetSerialNumber" Margin="80,0,0,0" Width="95" IsChecked="True" Click="useSimpleName_Checked" 
                          Grid.Row="0" Grid.Column="3" Visibility="Hidden" VerticalAlignment="Center"  TabIndex="3"/>

                <Label Content="填证机关:" Grid.Row="1" VerticalAlignment="Center" Margin="5,0,0,0" />
                <cmps:MetroTextBox Height="30" Name="txtWriteUnit" Grid.Row="1"  Grid.Column="1"  MaxLength="20" VerticalAlignment="Center" TabIndex="4" />

                <CheckBox Content="只处理家庭承包方式" Name="chkuseFamilyContract"  Click="chkuseFamilyContract_Checked" 
                          Grid.Row="0" Grid.Column="3" VerticalAlignment="Center"  TabIndex="3" Checked="chkuseFamilyContract_Checked"/>

                <Label Content="权证年号:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="5,0,0,0"/>
                <wpftoolkit:IntegerUpDown Name="txtYearNumber" Height="30" Minimum="1800"  Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" TabIndex="6"/>

                <Label Content="颁证日期设置:" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center" Margin="5,0,0,0"/>
                <wpftoolkit:DateTimeUpDown Name="txtStartTime" Height="30" Format="ShortDate" FormatString="yyyy年MM月dd日" Grid.Row="2" Grid.Column="3" VerticalAlignment="Center" TabIndex="7"/>
                <Label Content="填证日期设置:" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center"  Margin="5,0,0,0"/>
                <wpftoolkit:DateTimeUpDown Name="txtWriteTime" Height="30" Format="ShortDate" FormatString="yyyy年MM月dd日" Grid.Row="1" Grid.Column="3" VerticalAlignment="Center" TabIndex="5"/>
                <Label Content="登簿人:"
                       Grid.Row="3" Grid.Column="0"
                       VerticalAlignment="Center" Margin="5,0,0,0" />
                <cmps:MetroTextBox Height="30"
                                   Name="txtContractRegeditBookPerson"
                                   Grid.Row="3"
                                   Grid.Column="1"                                 
                                   MaxLength="20"
                                   VerticalAlignment="Center"
                                   TabIndex="8" />
                <Label Content="登簿日期:"
                       Grid.Row="3"
                       Grid.Column="2"
                       VerticalAlignment="Center"
                       Margin="5,0,0,0" />
                <wpftoolkit:DateTimeUpDown Name="txtContractRegeditBookTime"
                                           Height="30"
                                            Format="ShortDate" FormatString="yyyy年MM月dd日"
                                           Grid.Row="3"
                                           Grid.Column="3"                                           
                                           VerticalAlignment="Center"
                                           TabIndex="9" />
                <Label Content="登簿附记:" Margin="5,0,0,0"
                       Grid.Row="4" Grid.Column="0"
                       VerticalAlignment="Center" />
                  <cmps:MetroTextBox Height="60"
                                   Name="txtContractRegeditBookExcursus"
                                   Grid.Row="4"
                                   Grid.Column="1"                                  
                                   Grid.ColumnSpan="3"
                                   Grid.RowSpan="1"
                                   TextWrapping="Wrap"
                                   VerticalScrollBarVisibility="Auto"
                                   VerticalAlignment="Center"
                                   TextAlignment="Left"
                                   VerticalContentAlignment="Top"
                                   TabIndex="10" />


                <Label Content="领取人:"  Grid.Row="5"  VerticalAlignment="Center" />
                <cmps:MetroTextBox Height="30"
                                   Name="txtBookTakePerson"
                                   Grid.Row="5"
                                   Grid.Column="1"                                 
                                   MaxLength="20"
                                   VerticalAlignment="Center"
                                   TabIndex="9" />
                <Label Content="领取日期:"
                       Grid.Row="5"
                       Grid.Column="2"
                       VerticalAlignment="Center"
                       Margin="5,0,0,0" />
                <wpftoolkit:DateTimeUpDown Name="txtBookTakeTime"
                                           Height="30"
                                           Format="ShortDate"
                                           FormatString="yyyy年MM月dd日"
                                           Grid.Row="5"
                                           Grid.Column="3"
                                           
                                           VerticalAlignment="Center"
                                           TabIndex="10" />

                <CheckBox Content="旧证是否回收"                           
                          Name="chkOldbookTakeBack"  IsChecked="True"  Grid.ColumnSpan="3"
                          Grid.Row="6" Grid.Column="3" VerticalAlignment="Center"  TabIndex="2"
                          HorizontalAlignment="Left" />

                <Label Content="印刷证书编号:"  Grid.Row="6"    Grid.Column="0"
                       VerticalAlignment="Center"
                        />
                <cmps:MetroTextBox Height="30"
                                   Name="txtPrintBookNumber"
                                   Grid.Row="6"
                                   Grid.Column="1"                                 
                                   MaxLength="20"
                                   VerticalAlignment="Center"
                                   TabIndex="9" />


                <Label Content="备注:"
                       Grid.Row="7"
                       VerticalAlignment="Center"/>
                <!--<cmps:MetroTextBox Grid.Row="8" Name="mtbSurveyINfo" AcceptsReturn="True" MinLines="2" Grid.Column="1" Grid.ColumnSpan="3" Text="{Binding Path=SurveyChronicle,Mode=TwoWay}" 
                           Margin="0,5,0,0" BorderThickness="1" MaxLength="200" TextWrapping="Wrap" VerticalContentAlignment="Top"/>-->

                <cmps:MetroTextBox Height="60"
                                   Name="txtBookComment"
                                   Grid.Row="7"
                                   Grid.Column="1"                                  
                                   Grid.ColumnSpan="3"
                                   Grid.RowSpan="2"
                                   TextWrapping="Wrap"
                                   VerticalScrollBarVisibility="Auto"
                                   VerticalAlignment="Center"
                                   TextAlignment="Left"
                                   VerticalContentAlignment="Top"
                                   TabIndex="11"
                                   AcceptsReturn="True"/>


            </Grid>
        </ScrollViewer>

        <Border BorderThickness="0,1,0,0" Grid.Row="1" BorderBrush="LightGray" Margin="10,0,10,0" SnapsToDevicePixels="True">
            <DockPanel HorizontalAlignment="Stretch" LastChildFill="True" VerticalAlignment="Bottom" Margin="0,5,0,5" DockPanel.Dock="Bottom">
                <metro:MetroButton Height="30" DockPanel.Dock="Right"
                               Padding="5" Margin="5,0,0,0"
                               Command="{x:Static metro:MetroCommands.CloseTabMessageBoxCommand}"
                               Style="{StaticResource Metro_Button_Paneled_Style}">
                    <StackPanel Orientation="Horizontal">
                        <Image RenderOptions.BitmapScalingMode="NearestNeighbor"
                    Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/application--minus.png"></Image>
                        <TextBlock Margin="3,0,0,0"
                           VerticalAlignment="Center" 
                         Text="取消"></TextBlock>
                    </StackPanel>
                </metro:MetroButton>
                <metro:MetroButton DockPanel.Dock="Right" HorizontalAlignment="Right"
                               Padding="5" x:Name="btnConfirm"
                               Click="btnConfirm_Click" Height="30"
                               Style="{StaticResource Metro_Button_Paneled_Style}">
                    <StackPanel Orientation="Horizontal">
                        <Image RenderOptions.BitmapScalingMode="NearestNeighbor" Stretch="None"
                       Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/tick.png"></Image>
                        <TextBlock Margin="3,0,0,0"
                           VerticalAlignment="Center"
                           Text="确定"></TextBlock>
                    </StackPanel>
                </metro:MetroButton>
                <cmps:LoadingIcon DockPanel.Dock="Right"
                              Width="16"
                              Height="16"
                              HorizontalAlignment="Right"
                              VerticalAlignment="Center"
                              Margin="0,0,5,0"
                              Visibility="{Binding Path=IsConfirming, Converter={StaticResource BoolToVisibilityHiddenConverter}}"
                              RenderOptions.BitmapScalingMode="NearestNeighbor"></cmps:LoadingIcon>

            </DockPanel>
        </Border>
    </Grid>
</am:InfoPageBase>
