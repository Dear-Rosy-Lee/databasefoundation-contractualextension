<local:InfoPageBase x:Class="YuLinTu.Library.Controls.CommonConfigPage"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    Icon="pack://application:,,,/YuLinTu.Resources;component/Images/16/property.png"
                    Header="配置信息" MinHeight="150"
                    xmlns:metro="clr-namespace:YuLinTu.Windows.Wpf.Metro;assembly=YuLinTu.Windows.Wpf.Metro"
                    xmlns:cmps="clr-namespace:YuLinTu.Windows.Wpf.Metro.Components;assembly=YuLinTu.Windows.Wpf.Metro"
                    xmlns:local="clr-namespace:YuLinTu.Library.Controls">
    <Grid x:Name="gridContent">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!--<ScrollViewer Height="480"  Margin="5,2,15,5" PanningMode="VerticalOnly" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Auto">-->
            <Grid Width="420" Height="300" Margin="5">
                <!-- 加载图标 这里隐藏了 -->
                <cmps:LoadingIcon Width="16" x:Name="loadIcon"  Visibility="Hidden"
                          Height="16"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          RenderOptions.BitmapScalingMode="NearestNeighbor"/>


             <cmps:PropertyGrid x:Name="propertyGrid" StateColumnVisibility="Visible" Alert="PropertyGrid_Alert" ></cmps:PropertyGrid>

            <!--<TabControl SelectedIndex="0" Name="tabControlFamily">
                    <TabItem Header="调查设置" >
                        --><!-- 封装了的PropertyGrid --><!--
                        <cmps:PropertyGrid x:Name="propertyGrid" StateColumnVisibility="Visible" Alert="PropertyGrid_Alert" ></cmps:PropertyGrid>
                    </TabItem>
                    <TabItem Header="二轮设置" >
                        --><!-- 封装了的PropertyGrid --><!--
                        <cmps:PropertyGrid x:Name="subpropertyGrid" StateColumnVisibility="Visible" Alert="PropertyGrid_Alert" ></cmps:PropertyGrid>
                    </TabItem>
                </TabControl>-->
                
            </Grid>
        <!--</ScrollViewer>-->
        
        <Border BorderBrush="LightGray" BorderThickness="0,1,0,0" Grid.Row="1" Margin="10,0,10,0" SnapsToDevicePixels="True" >
            <DockPanel Margin="0,5,0,5" LastChildFill="True">
                <metro:MetroButton DockPanel.Dock="Right" BorderThickness="0"
                                       Padding="5" Height="30" x:Name="btnCancel"
                                       Style="{DynamicResource Metro_Button_Paneled_Style}"
                                       Command="{x:Static metro:MetroCommands.CloseTabMessageBoxCommand}">
                    <StackPanel Orientation="Horizontal">
                        <Image RenderOptions.BitmapScalingMode="NearestNeighbor"
                                   Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/application--minus.png"></Image>
                        <TextBlock Margin="3,0,0,0"
                                       VerticalAlignment="Center"
                                       Text="取消"></TextBlock>
                    </StackPanel>
                </metro:MetroButton>

                <metro:MetroButton DockPanel.Dock="Right" BorderThickness="0" Name="btnSubmit"
                                       Padding="5"
                                       Click="MetroButton_OnOk_Click" Height="30"
                                       Style="{DynamicResource Metro_Button_Paneled_Style}">
                    <StackPanel Orientation="Horizontal">
                        <Image RenderOptions.BitmapScalingMode="NearestNeighbor" Stretch="None"
                                   Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/tick.png"></Image>
                        <TextBlock Margin="3,0,0,0"
                                       VerticalAlignment="Center"
                                       Text="确定"></TextBlock>
                    </StackPanel>
                </metro:MetroButton>

                <TextBlock Name="lbTip" VerticalAlignment="Center" DockPanel.Dock="Left"/>
            </DockPanel>
        </Border>
    </Grid>
</local:InfoPageBase>
