<local:InfoPageBase x:Class="YuLinTu.Library.Controls.ZoneEditPage"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:wpftoolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
                    xmlns:input="clr-namespace:System.Windows.Input.StylusPlugIns;assembly=PresentationCore"
                    xmlns:metro="clr-namespace:YuLinTu.Windows.Wpf.Metro;assembly=YuLinTu.Windows.Wpf.Metro"
                    xmlns:cmps="clr-namespace:YuLinTu.Windows.Wpf.Metro.Components;assembly=YuLinTu.Windows.Wpf.Metro"
                    xmlns:local="clr-namespace:YuLinTu.Library.Controls"
                    Icon="pack://application:,,,/YuLinTu.Resources;component/Images/16/property.png"
                    Header="行政地域" MinHeight="250">
    <local:InfoPageBase.Resources>
        <Style TargetType="Label" x:Key="LeftStyle">
            <Style.Setters>
                <Setter Property="HorizontalContentAlignment" Value="Left" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
                <Setter Property="Width" Value="79" />
                <Setter Property="Height" Value="25" />
                <Setter Property="Margin"  Value="0" />
            </Style.Setters>
        </Style>
    </local:InfoPageBase.Resources>
    <Grid x:Name="gridContent">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ScrollViewer MinHeight="165" Margin="10" PanningMode="VerticalOnly" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Auto">
            <Grid Width="600">
                <Grid Name="spInfo">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="88" />
                        <ColumnDefinition Width="30*" />
                        <ColumnDefinition Width="90" />
                        <ColumnDefinition Width="30*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="5" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="5" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="5" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="5" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Label Content="地域名称:"  Style="{StaticResource LeftStyle}" />
                    <cmps:MetroTextBox Name="mtbName" MaxLength="40" Height="30" Grid.Column="1" BorderThickness="1" Text="{Binding Path=CurrentZone.Name,Mode=TwoWay}" HorizontalAlignment="Stretch" VerticalAlignment="Center" TextChanged="MetroTextBox_NameChanged" />

                    <Label Content="地域级别:" Grid.Column="2"  Style="{StaticResource LeftStyle}" />
                    <cmps:MetroComboBox MaxDropDownHeight="110" Height="30" Padding="7,0" Grid.Column="3" BorderThickness="1" Name="cbLevel" HorizontalAlignment="Stretch" VerticalAlignment="Center" />

                    <Label Content="上级地域编码:" Width="150" Grid.Row="2"  VerticalAlignment="Center" />
                    <cmps:MetroTextBox Name="mtbUpCode"   InputMethod.IsInputMethodEnabled="False" Height="30" PreviewKeyDown="mtbUpCode_PreviewKeyDown" Grid.Row="2" Grid.Column="1" BorderThickness="1" Text="{Binding Path=CurrentZone.UpLevelCode,Mode=TwoWay}" MaxLength="19" HorizontalAlignment="Stretch" VerticalAlignment="Center" TextChanged="MetroTextBox_UpCodeChanged" PreviewTextInput="mtbUpCode_PreviewTextInput" />

                    <Label Content="地域编码:" Grid.Row="4"  VerticalAlignment="Center" />
                    <cmps:MetroTextBox Name="mtbCode"  InputMethod.IsInputMethodEnabled="False" Height="30" PreviewKeyDown="mtbCode_PreviewKeyDown" Grid.Row="4" Grid.Column="1" BorderThickness="1" Text="{Binding Path=CurrentZone.Code,Mode=TwoWay}" MaxLength="19" HorizontalAlignment="Stretch" VerticalAlignment="Center" TextChanged="MetroTextBox_CodeChanged" PreviewTextInput="mtbCode_PreviewTextInput" />

                    <Label Content="地域全编码:" Grid.Row="4" Grid.Column="2"  Style="{StaticResource LeftStyle}" />
                    <cmps:MetroTextBox Grid.Row="4" Height="30" IsEnabled="True" IsReadOnly="True" Grid.Column="3" BorderThickness="1" Text="{Binding Path=CurrentZone.FullCode,Mode=TwoWay}" MaxLength="50" HorizontalAlignment="Stretch" VerticalAlignment="Center" />

                    <Label Content="地域全称:" Grid.Row="6"  Style="{StaticResource LeftStyle}" />
                    <cmps:MetroTextBox Grid.Row="6" Height="30" Grid.Column="1" Grid.ColumnSpan="3" BorderThickness="1" IsReadOnly="True" Text="{Binding Path=CurrentZone.FullName,Mode=TwoWay}" MaxLength="50" IsEnabled="True" HorizontalAlignment="Stretch" VerticalAlignment="Center" />

                    <Label Content="备注:" Grid.Row="8"  Style="{StaticResource LeftStyle}" VerticalAlignment="Top" />
                    <cmps:MetroTextBox Grid.Row="8" Name="mtbComment" AcceptsReturn="True" MinLines="2" Grid.Column="1" Grid.ColumnSpan="3" Text="{Binding Path=CurrentZone.Comment,Mode=TwoWay}" BorderThickness="1" MaxLength="200" TextWrapping="Wrap" TextChanged="MetroTextBox_TextChanged" Height="75" VerticalContentAlignment="Stretch" />
                </Grid>
                <cmps:LoadingIcon Width="16" x:Name="loadIcon"
                          Height="16"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Center"
                          RenderOptions.BitmapScalingMode="NearestNeighbor">
                </cmps:LoadingIcon>
            </Grid>
        </ScrollViewer>
        <Border BorderBrush="LightGray" BorderThickness="0,1,0,0" Grid.Row="1" Margin="10,0,10,0" SnapsToDevicePixels="True">
            <DockPanel Margin="0,5,0,5" LastChildFill="True">
                <metro:MetroButton DockPanel.Dock="Right" Margin="5,0,0,0"
                                       Padding="5" Height="30" x:Name="btnCancel"
                                       Style="{StaticResource Metro_Button_Paneled_Style}"
                                       Command="{x:Static metro:MetroCommands.CloseTabMessageBoxCommand}">
                    <StackPanel Orientation="Horizontal">
                        <Image RenderOptions.BitmapScalingMode="NearestNeighbor"
                                   Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/application--minus.png"></Image>
                        <TextBlock Margin="3,0,0,0" VerticalAlignment="Center"  Text="取消" />
                    </StackPanel>
                </metro:MetroButton>

                <metro:MetroButton DockPanel.Dock="Right" Name="btnSubmit"
                                       Padding="5"
                                       Click="MetroButton_Click_1" Height="30"
                                       Style="{StaticResource Metro_Button_Paneled_Style}">
                    <StackPanel Orientation="Horizontal">
                        <Image RenderOptions.BitmapScalingMode="NearestNeighbor" Stretch="None"
                                   Source="pack://application:,,,/YuLinTu.Resources;component/Images/16/tick.png"></Image>
                        <TextBlock Margin="3,0,0,0"  VerticalAlignment="Center" Text="确定" />
                    </StackPanel>
                </metro:MetroButton>

                <TextBlock Name="lbTip" VerticalAlignment="Center" DockPanel.Dock="Left" />
            </DockPanel>
        </Border>
    </Grid>
</local:InfoPageBase>